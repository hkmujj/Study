<UserControl x:Class="Subway.WuHanLine6.Views.HelpContent.RunHelp.RunHelpPageOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:MMI.Facility.WPFInfrastructure.View;assembly=MMI.Facility.WPFInfrastructure"
             xmlns:viewModels="clr-namespace:Subway.WuHanLine6.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:WuHanViewModel}"
             d:DesignHeight="465"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid Margin="40,10,10,30"
              view:GridLine.Brush="DarkGray"
              view:GridLine.Style="ShowIfHasControl"
              view:GridLine.Width="2"
              view:GridLine.WidthStyle="AllLineSame">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55*" />
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="55*" />
                <ColumnDefinition Width="150*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="显示项目" />
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="显示条件" />
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="显示" />
            <TextBlock Grid.Row="0"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="备注" />
            <TextBlock Grid.Row="1"
                       Grid.RowSpan="3"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="接触网电压" />
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="正常" />
            <Grid Grid.Row="1" Grid.Column="2">
                <Border Margin="30,0" Background="#FF00FF00">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Text="1500v" />
                </Border>
            </Grid>
            <TextBlock Grid.Row="1"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="该车辆牵引系统检测出接触网的电压" />
            <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="电压过低" />
            <Grid Grid.Row="2" Grid.Column="2">
                <Border Margin="30,0" Background="#FFFF0000">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               Text="1000v" />
                </Border>
            </Grid>
            <TextBlock Grid.Row="2"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="1000V以下" />
            <TextBlock Grid.Row="3"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="电压过高" />
            <Grid Grid.Row="3" Grid.Column="2">
                <Border Margin="30,0" Background="#FFFF0000">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="White"
                               Text="1800v" />
                </Border>
            </Grid>
            <TextBlock Grid.Row="3"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="1800V以上" />
            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="网流" />
            <TextBlock Grid.Row="4"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="显示实际值" />
            <TextBlock Grid.Row="4"
                       Grid.Column="2"
                       Foreground="#00ABEA"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="80A" />
            <TextBlock Grid.Row="4"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="该车辆牵引系统检测出网流" />
            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="速度" />
            <TextBlock Grid.Row="5"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="显示实际值" />
            <TextBlock Grid.Row="5"
                       Grid.Column="2"
                       Foreground="#00ABEA"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="60km/h" />
            <TextBlock Grid.Row="5"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="根据制动传感器计算的速度" />
            <TextBlock Grid.Row="6"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="限速值" />
            <TextBlock Grid.Row="6"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="限速条件" />
            <TextBlock Grid.Row="6"
                       Grid.Column="2"
                       Foreground="#FFFF0000"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="40km/h" />
            <TextBlock Grid.Row="6"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="限速条件下的最大速度" />
            <TextBlock Grid.Row="7"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="故障信息" />
            <TextBlock Grid.Row="7"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="发生故障" />
            <Image Grid.Row="7"
                   Grid.Column="2"
                   Source="{StaticResource 故障报警}" />
            <TextBlock Grid.Row="7"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="当前有1,2级故障发生时，点击&#13;故障按钮可以进入实时故障显示页面&#13;正常情况下不显示故障三角" />
            <TextBlock Grid.Row="8"
                       Grid.RowSpan="4"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="受电弓状态" />
            <TextBlock Grid.Row="8"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="升弓" />
            <Image Grid.Row="8"
                   Grid.Column="2"
                   Source="{StaticResource 受电弓升起}" />
            <TextBlock Grid.Row="8"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="升弓到位" />
            <TextBlock Grid.Row="9"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="降弓" />
            <Image Grid.Row="9"
                   Grid.Column="2"
                   Source="{StaticResource 受电弓降下}" />
            <TextBlock Grid.Row="9"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="降弓到位" />
            <TextBlock Grid.Row="10"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="动作中" />
            <Image Grid.Row="10"
                   Grid.Column="2"
                   Source="{StaticResource 受电弓动作}" />
            <TextBlock Grid.Row="10"
                       Grid.Column="3"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="受电弓动作中" />
            <TextBlock Grid.Row="11"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="通信异常" />
            <Image Grid.Row="11"
                   Grid.Column="2"
                   Source="{StaticResource 通信异常}" />
            <TextBlock Grid.Row="11" Grid.Column="3" />
            <TextBlock Grid.Row="12"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="逃生门状态" />
            <TextBlock Grid.Row="12"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="正常" />
            <Image Grid.Row="12"
                   Grid.Column="2"
                   Source="{StaticResource 逃生门正常}" />
            <TextBlock Grid.Row="12" Grid.Column="3" />
            <TextBlock Grid.Row="13"
                       Grid.Column="1"
                       Style="{StaticResource HelpViewTextStyle}"
                       Text="故障" />
            <Image Grid.Row="13"
                   Grid.Column="2"
                   Source="{StaticResource 逃生门故障}" />
            <TextBlock Grid.Row="13" Grid.Column="3" />
        </Grid>
    </Grid>
</UserControl>