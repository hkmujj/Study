<UserControl x:Class="Subway.WuHanLine6.Views.DataMonitor.DataMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewsModel="clr-namespace:Subway.WuHanLine6.ViewModels"
             d:DataContext="{d:DesignInstance viewsModel:WuHanViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>

        <dxprg:PropertyGridControl Margin="6"
                                   AllowExpanding="ForceIfNoTypeConverter"
                                   AllowInstanceInitializer="False"
                                   SelectedObject="{Binding Model}"
                                   ShowCategories="False" />
    </Grid>
</UserControl>