<UserControl x:Class="Subway.WuHanLine6.Views.Button.ButtonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Subway.WuHanLine6.ViewModels"
             d:DataContext="{d:DesignInstance viewModel:WuHanViewModel}"
             d:DesignHeight="50"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                Command="{Binding Model.CurrentStateInterface.Btn01.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn01.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="1"
                Command="{Binding Model.CurrentStateInterface.Btn02.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn02.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="2"
                Command="{Binding Model.CurrentStateInterface.Btn03.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn03.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="3"
                Command="{Binding Model.CurrentStateInterface.Btn04.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn04.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="4"
                Command="{Binding Model.CurrentStateInterface.Btn05.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn05.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="5"
                Command="{Binding Model.CurrentStateInterface.Btn06.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn06.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="6"
                Command="{Binding Model.CurrentStateInterface.Btn07.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn07.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="7"
                Command="{Binding Model.CurrentStateInterface.Btn08.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn08.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="8"
                Command="{Binding Model.CurrentStateInterface.Btn09.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn09.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="9"
                Command="{Binding Model.CurrentStateInterface.Btn10.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn10.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="10"
                Command="{Binding Model.CurrentStateInterface.Btn11.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn11.Content}"
                Style="{StaticResource ButtonViewStyle}" />
        <Button Grid.Column="11"
                Command="{Binding Model.CurrentStateInterface.Btn12.ButtonClick}"
                Content="{Binding Model.CurrentStateInterface.Btn12.Content}"
                Style="{StaticResource ButtonViewStyle}" />
    </Grid>
</UserControl>