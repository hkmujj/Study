<UserControl x:Class="Motor.ATP._300T.Subsys.WPFView.RegionE.KilometerPostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interface="clr-namespace:Motor.ATP.Infrasturcture.Interface;assembly=Motor.ATP.Infrasturcture"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance interface:IATP}"
             d:DesignHeight="26"
             d:DesignWidth="234"
             mc:Ignorable="d">
    <Border Visibility="{Binding Path=TrainInfo.KilometerPost.Visible, Converter={StaticResource Motor.ATP.300T.BoolVisibilityConverter}}">
        <TextBlock Style="{StaticResource Motor.ATP.300T.KilometerPostTextStyle}">
            <TextBlock.Text>
                <MultiBinding StringFormat="K{0:F0}+{1:F0}">
                    <Binding Path="TrainInfo.KilometerPost.Kilometer" />
                    <Binding Path="TrainInfo.KilometerPost.Meter" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </Border>
</UserControl>
