<UserControl x:Class="Motor.ATP._300S.Subsys.WPFView.PopupViews.Contents.InputDateTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Motor.ATP._300S.Subsys.WPFView.PopupViews.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:popupViewModels="clr-namespace:Motor.ATP._300S.Subsys.ViewModel.PopupViewModels"
             Background="{StaticResource Motor.ATP.300S.PopviewBackgroudBrush}"
             d:DataContext="{d:DesignInstance popupViewModels:DateTimePopupViewModel}"
             d:DesignHeight="250"
             d:DesignWidth="232"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Margin="6,12">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Date}" />
            <StackPanel Grid.Row="1"
                        Margin="6,6"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock IsEnabled="True"
                           Style="{StaticResource Motor.ATP.300S.PopupViewInputDateTimeTextStyle}"
                           Text="{Binding Path=Year,
                                          StringFormat={}00}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Year}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewInputDateTimeTextStyle}" Text="{Binding Path=Month, StringFormat={}00}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Month}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewInputDateTimeTextStyle}" Text="{Binding Path=Day, StringFormat={}00}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Day}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Margin="6,12">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Time}" />
            <StackPanel Grid.Row="1"
                        Margin="6,6"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewInputDateTimeTextStyle}" Text="{Binding Path=Hour, StringFormat={}00}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Hour}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewInputDateTimeTextStyle}" Text="{Binding Path=Minute, StringFormat={}00}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Minite}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewInputDateTimeTextStyle}" Text="{Binding Path=Second, StringFormat={}00}" />
                <TextBlock Style="{StaticResource Motor.ATP.300S.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.Second}" />
            </StackPanel>
        </Grid>

        <common:PleaseInputing09AZView Grid.Row="2" />
    </Grid>
</UserControl>
