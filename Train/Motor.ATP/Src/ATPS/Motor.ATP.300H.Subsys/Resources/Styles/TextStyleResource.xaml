    <Style x:Key="Motor.ATP.300H.PopupViewInputDateTimeTextStyle"
           BasedOn="{StaticResource Motor.ATP.300H.PopupViewContentTextStyle}"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="{StaticResource Motor.ATP.300H.GrayBrush}" />
            <Setter Property="Foreground" Value="{StaticResource Motor.ATP.300H.BackgroudBrush}" />
            <Setter Property="Margin" Value="3,0" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Padding" Value="0,3,0,0" />
            <Setter Property="IsEnabled" Value="False" />
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="Background" Value="{StaticResource Motor.ATP.300H.WhiteBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Motor.ATP.300H.PopupViewInputLongDataTextStyle"
           BasedOn="{StaticResource Motor.ATP.300H.PopupViewContentTextStyle}"
           TargetType="TextBlock">
