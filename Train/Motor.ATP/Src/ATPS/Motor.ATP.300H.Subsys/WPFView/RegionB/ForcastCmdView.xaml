<UserControl x:Class="Motor.ATP._300H.Subsys.WPFView.RegionB.ForcastCmdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:MMI.Facility.WPFInfrastructure.Converter;assembly=MMI.Facility.WPFInfrastructure"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interface="clr-namespace:Motor.ATP.Infrasturcture.Interface;assembly=Motor.ATP.Infrasturcture"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance interface:IATP}"
             d:DesignHeight="36"
             d:DesignWidth="108"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:MultiplicationConverter x:Key="Motor.ATP.300H.Multiplication1O3CConverter" Multiplier="0.33333" />
        </ResourceDictionary>
    </UserControl.Resources>
    <ListBox x:Name="CmdLstBox"
             Background="Transparent"
             BorderThickness="0"
             IsHitTestVisible="False"
             ItemsSource="{Binding Path=ForecastInformation.CmdForecastInformationItems}"
             Padding="0"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             ScrollViewer.VerticalScrollBarVisibility="Disabled"
             x:FieldModifier="private">
        <ListBox.Template>
            <ControlTemplate>
                <Border Margin="0" Padding="0">
                    <ScrollViewer Margin="0"
                                  Focusable="false"
                                  Padding="0">
                        <ItemsPresenter Margin="0" IsHitTestVisible="False" />
                    </ScrollViewer>
                </Border>
            </ControlTemplate>
        </ListBox.Template>
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </ListBox.ItemContainerStyle>
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Margin="0" Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border>
                    <Image Source="{Binding Path=Type, Converter={StaticResource Motor.ATP.300H.ForecastInformationTypeToImageConverter}}" Stretch="Fill" />
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>

