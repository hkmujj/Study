<UserControl x:Class="Subway.CBTC.Casco.View.Contents.RegionF.RegionFLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Subway.CBTC.Casco.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
             d:DesignHeight="60"
             d:DesignWidth="117"
             Background="{StaticResource Subway.CBTC.Casco.Brush.Black}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource Subway.CBTC.Casco.Style.Text.DateTime}" Text="{Binding Path=Domain.Other.ShowingDateTime, StringFormat={}yyyy-MM-dd}" />
        <TextBlock Grid.Row="1"
                   Style="{StaticResource Subway.CBTC.Casco.Style.Text.DateTime}"
                   Text="{Binding Path=Domain.Other.ShowingDateTime,
                                  StringFormat={}HH:mm:ss}" />
    </Grid>
</UserControl>
