<Window x:Class="Subway.CBTC.BeiJiaoKong.Views.App.DataMonitor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
        xmlns:local="clr-namespace:Subway.CBTC.BeiJiaoKong.Views.App"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Subway.CBTC.BeiJiaoKong.ViewModel"
        Title="DataMonitor"
        Width="300"
        Height="600"
        d:DataContext="{d:DesignInstance viewModel:BeiJiaoKongViewModel}"
        mc:Ignorable="d">
    <Grid>

        <dxprg:PropertyGridControl AllowExpanding="ForceIfNoTypeConverter"
                                   AllowInstanceInitializer="False"
                                   SelectedObject="{Binding}"
                                   ShowCategories="False" />

    </Grid>
</Window>
