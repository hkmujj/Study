<UserControl x:Class="Subway.CBTC.BeiJiaoKong.Views.Root.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constance="clr-namespace:Subway.CBTC.BeiJiaoKong.Constance"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:events="clr-namespace:Subway.CBTC.BeiJiaoKong.Events"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Subway.CBTC.BeiJiaoKong.ViewModel"             
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             d:DataContext="{d:DesignInstance viewModel:BeiJiaoKongViewModel}"
             d:DesignHeight="480"
             d:DesignWidth="600"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="1" regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionC}" ></Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Border regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionA}"></Border>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <Border regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionK}"/>
                        <Border Grid.Row="1" regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionB}"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Border regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionT}"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionN}"/>
                    <Button Grid.Column="1" Width="60"
                            Height="30"
                            VerticalAlignment="Center"
                            Command="{Binding Controller.Navigator}"
                            Content="INFO" Background="{x:Null}" FontSize="18" Foreground="White" BorderThickness="1" BorderBrush="White" >
                        <Button.CommandParameter>
                            <events:NavigatorEventArgs ViewName="{x:Static constance:ViewNames.SettingMenuView}" />
                        </Button.CommandParameter>
                    </Button>
                </Grid>
                <Border Grid.Row="2" regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionM}"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionE}"/>
                <Grid Grid.Row="1">
                    <Border regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionG}"/>
                </Grid>
            </Grid>
            <Border Grid.Column="1" regions:RegionManager.RegionName="{x:Static constance:RegionNames.RegionF}"></Border>
        </Grid>
    </Grid>
</UserControl>
