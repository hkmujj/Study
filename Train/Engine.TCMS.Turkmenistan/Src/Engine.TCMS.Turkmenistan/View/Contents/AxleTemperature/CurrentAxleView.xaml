<UserControl
    x:Class="Engine.TCMS.Turkmenistan.View.Contents.AxleTemperature.CurrentAxleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Engine.TCMS.Turkmenistan.View.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Engine.TCMS.Turkmenistan.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="120"
    d:DesignWidth="530"
    mc:Ignorable="d">
    <Grid>
        <Border Style="{DynamicResource MainBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="300*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="120*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*" />
                        <RowDefinition Height="31*" />
                    </Grid.RowDefinitions>
                    <common:EffectBorder
                        Width="20"
                        Height="20"
                        Margin="0,0,5,5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="Red"
                        Style="{DynamicResource MainViewBorderStyle2}" />
                    <Button
                        Grid.Row="1"
                        Content="{DynamicResource FaultInfo}"
                        Style="{DynamicResource MainTextButtonStyle3}" />
                </Grid>
                <Border Grid.Column="1" Style="{DynamicResource MainBorderStyle2}">
                    <StackPanel
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <Button Content="{Binding Model.FaultModel.DispkayFault1.Message}" Style="{DynamicResource MainFaultInfoTextStyle1}" />
                        <Button
                            Content="{Binding Model.FaultModel.DispkayFault1.Car}"
                            Style="{DynamicResource MainFaultInfoTextStyle2}"
                            Visibility="{Binding Model.IsConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <Button Content="{Binding Model.FaultModel.DisplayFault2.Message}" Style="{DynamicResource MainFaultInfoTextStyle1}" />
                        <Button
                            Content="{Binding Model.FaultModel.DisplayFault2.Car}"
                            Style="{DynamicResource MainFaultInfoTextStyle2}"
                            Visibility="{Binding Model.IsConnection, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                </Border>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="120*" />
                    </Grid.RowDefinitions>
                    <Button
                        Grid.Row="1"
                        Content="{DynamicResource AxleTemperature}"
                        Style="{DynamicResource MainTextButtonStyle4}" />
                </Grid>
                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="120*" />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Style="{DynamicResource MainBorderStyle2}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                FontSize="{DynamicResource Double12}"
                                Foreground="White"
                                Text="{Binding Model.AxleBitModel.DisplayAxle1}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                FontSize="{DynamicResource Double12}"
                                Foreground="White"
                                Text="{Binding Model.AxleBitModel.DisplayAxle2}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                FontSize="{DynamicResource Double12}"
                                Foreground="White"
                                Text="{Binding Model.AxleBitModel.DisplayAxle3}" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                FontSize="{DynamicResource Double12}"
                                Foreground="White"
                                Text="{Binding Model.AxleBitModel.DisplayT1}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                FontSize="{DynamicResource Double12}"
                                Foreground="White"
                                Text="{Binding Model.AxleBitModel.DisplayT2}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                FontSize="{DynamicResource Double12}"
                                Foreground="White"
                                Text="{Binding Model.AxleBitModel.DisplayT3}" />
                        </Grid>

                    </Border>
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Content="{DynamicResource AxleBitTemperature}"
                        Style="{DynamicResource MainTextButtonStyle3}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
