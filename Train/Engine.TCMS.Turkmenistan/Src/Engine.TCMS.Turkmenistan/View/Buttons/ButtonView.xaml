<UserControl
    x:Class="Engine.TCMS.Turkmenistan.View.Buttons.ButtonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Engine.TCMS.Turkmenistan.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="50"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="0"
            Command="{Binding Model.CurrentStateInterface.BtnF1.ClickCommand}"
            Content="{Binding Model.CurrentStateInterface.BtnF1.Content}"
            Style="{StaticResource DownButtonStyle}" />
        <Button
            Grid.Column="1"
            Command="{Binding Model.CurrentStateInterface.BtnF2.ClickCommand}"
            Content="{Binding Model.CurrentStateInterface.BtnF2.Content}"
            Style="{StaticResource DownButtonStyle}" />
        <Button
            Grid.Column="2"
            Command="{Binding Model.CurrentStateInterface.BtnF3.ClickCommand}"
            Content="{Binding Model.CurrentStateInterface.BtnF3.Content}"
            Style="{StaticResource DownButtonStyle}" />
        <Button
            Grid.Column="3"
            Command="{Binding Model.CurrentStateInterface.BtnF4.ClickCommand}"
            Content="{Binding Model.CurrentStateInterface.BtnF4.Content}"
            Style="{StaticResource DownButtonStyle}" />
        <Button
            Grid.Column="4"
            Command="{Binding Model.CurrentStateInterface.BtnF5.ClickCommand}"
            Content="{Binding Model.CurrentStateInterface.BtnF5.Content}"
            Style="{StaticResource DownButtonStyle}" />
    </Grid>
</UserControl>
