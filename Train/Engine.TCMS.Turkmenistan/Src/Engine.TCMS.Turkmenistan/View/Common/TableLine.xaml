<UserControl
    x:Class="Engine.TCMS.Turkmenistan.View.Common.TableLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Engine.TCMS.Turkmenistan.View.Common"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="90"
    mc:Ignorable="d">
    <Viewbox Stretch="Fill">
        <Canvas Width="90" Height="50">
            <Line
                Fill="DarkGray"
                Stroke="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=LineBrush}"
                StrokeThickness="3"
                X1="0"
                X2="90"
                Y1="0"
                Y2="50" />
            <TextBlock
                Canvas.Left="5"
                Canvas.Bottom="5"
                Foreground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=TextForeground}"
                Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=TextOne}" />

            <TextBlock
                Canvas.Top="5"
                Canvas.Right="5"
                Foreground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=TextForeground}"
                Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=TextTwo}" />

        </Canvas>
    </Viewbox>

</UserControl>
