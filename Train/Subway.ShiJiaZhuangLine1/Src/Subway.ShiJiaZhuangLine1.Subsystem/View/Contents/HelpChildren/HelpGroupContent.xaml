<UserControl
    x:Class="Subway.ShiJiaZhuangLine1.Subsystem.View.Contents.HelpChildren.HelpGroupContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpChildren="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.View.Contents.HelpChildren"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootControl"
    Margin="12"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <GroupBox Header="{Binding ElementName=RootControl, Path=GroupName}">
        <GroupBox.HeaderTemplate>
            <DataTemplate>
                <Border Margin="12,0">
                    <TextBlock Text="{Binding}" />
                </Border>
            </DataTemplate>
        </GroupBox.HeaderTemplate>
        <ItemsControl
            Margin="{Binding ElementName=RootControl, Path=ContentMargin}"
            ItemTemplate="{Binding ElementName=RootControl, Path=ItemTemplate}"
            ItemTemplateSelector="{Binding ElementName=RootControl, Path=ItemDataTemplateSelector}"
            ItemsSource="{Binding ElementName=RootControl, Path=StateSource}" />
    </GroupBox>
</UserControl>