<UserControl
    x:Class="Subway.ShiJiaZhuangLine1.Subsystem.View.Contents.MainContentContents.BoradercastSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:ShellViewModel}"
    d:DesignHeight="380"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../../../AppResouce.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <Style x:Key="Raido1" TargetType="RadioButton">
                <Setter Property="Background" Value="{StaticResource ItemBackgroudBrush}" />
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF00FF00" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                            <Grid>
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="White"
                                    BorderThickness="2,2,0,0">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{TemplateBinding Content}" />
                                </Border>
                                <Border
                                    Panel.ZIndex="2"
                                    BorderBrush="Gray"
                                    BorderThickness="0,0,2,2" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="Raido2" TargetType="RadioButton">
                <Setter Property="Background" Value="{StaticResource ItemBackgroudBrush}" />
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background" Value="#FF00FF00" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                            <Grid>
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="White"
                                    BorderThickness="2,2,0,0">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{TemplateBinding Content}" />
                                </Border>
                                <Border
                                    Panel.ZIndex="2"
                                    BorderBrush="Gray"
                                    BorderThickness="0,0,2,2" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="350*" />
            <RowDefinition Height="65*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="450*" />
            <ColumnDefinition Width="200*" />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="22"
                Foreground="{StaticResource WhiteBrush}"
                Text="广播模式:" />
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <RadioButton
                    Width="86"
                    Height="36"
                    Margin="2,0,0,0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    Command="{Binding Model.StationSettingModel.ModelSelect}"
                    CommandParameter="Auto"
                    Content="自动"
                    Style="{StaticResource Raido1}" />
                <RadioButton
                    x:Name="half"
                    Grid.Column="1"
                    Width="86"
                    Height="36"
                    Margin="2,0,0,0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    Command="{Binding Model.StationSettingModel.ModelSelect}"
                    CommandParameter="Manual"
                    Content="半自动"
                    Style="{StaticResource Raido1}" />
            </Grid>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="22"
                Foreground="{StaticResource WhiteBrush}"
                Text="站点设置:" />
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="150*" />
                </Grid.ColumnDefinitions>
                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <RadioButton
                        Grid.Column="0"
                        Margin="15,10"
                        Command="{Binding Model.StationSettingModel.Up}"
                        Content="上行"
                        Style="{StaticResource Raido1}" />
                    <RadioButton
                        Grid.Column="1"
                        Margin="15,10"
                        Command="{Binding Model.StationSettingModel.Down}"
                        Content="下行"
                        Style="{StaticResource Raido1}" />
                </Grid>
                <RadioButton
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Command="{Binding Model.StationSettingModel.StationViewDump}"
                    CommandParameter="Start"
                    Content="始发站"
                    IsChecked="{Binding Model.StationSettingModel.StartStationDown, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                    IsEnabled="{Binding ElementName=half, Path=IsChecked}"
                    Style="{StaticResource Raido2}" />
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    BorderBrush="DarkGray"
                    BorderThickness="2">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Model.StationSettingModel.StartStation}" />
                </Border>
                <Border
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10"
                    BorderBrush="DarkGray"
                    BorderThickness="2">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Model.StationSettingModel.NextStation}" />
                </Border>
                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10"
                    BorderBrush="DarkGray"
                    BorderThickness="2">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="{Binding Model.StationSettingModel.EndStation}" />
                </Border>
                <RadioButton
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10"
                    Padding="0"
                    Command="{Binding Model.StationSettingModel.StationViewDump}"
                    CommandParameter="Next"
                    Content="下一站"
                    IsChecked="{Binding Model.StationSettingModel.NextStationDown, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                    IsEnabled="{Binding ElementName=half, Path=IsChecked}"
                    Style="{StaticResource Raido2}" />
                <RadioButton
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10"
                    Padding="0"
                    Command="{Binding Model.StationSettingModel.StationViewDump}"
                    CommandParameter="End"
                    Content="终点站"
                    IsChecked="{Binding Model.StationSettingModel.EndStationDown, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                    IsEnabled="{Binding ElementName=half, Path=IsChecked}"
                    Style="{StaticResource Raido2}" />

            </Grid>
            <Rectangle
                Grid.Row="1"
                Grid.Column="1"
                Panel.ZIndex="-1"
                RadiusX="10"
                RadiusY="10"
                Stroke="{StaticResource DarkGrayBrush}"
                StrokeThickness="2" />
        </Grid>
        <RadioButton
            Grid.Row="1"
            Grid.Column="2"
            Margin="20,0,90,20"
            Command="{Binding Model.StationSettingModel.SkipStation}"
            Content="越站"
            Style="{StaticResource Raido1}" />

    </Grid>
</UserControl>
