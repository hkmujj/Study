<UserControl
    x:Class="Subway.ShiJiaZhuangLine1.Subsystem.View.Contents.MainContentContents.EventConfirmView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.Model"
    xmlns:view="clr-namespace:MMI.Facility.WPFInfrastructure.View;assembly=MMI.Facility.WPFInfrastructure"
    xmlns:viewModels="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.ViewModels"
    d:DataContext="{d:DesignInstance {x:Type viewModels:ShellViewModel}}"
    d:DesignHeight="50"
    d:DesignWidth="800"
    Visibility="{Binding Model.EventPageModel.VisibilityFalut}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../../../AppResouce.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="120*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Grid.ColumnSpan="9"
                Panel.ZIndex="-1"
                view:FlickerManager.DurationMiliSecond="1000"
                view:FlickerManager.Flicking="{Binding Model.EventPageModel.ConfirmEvent.Level, Converter={StaticResource EventFlickerConverter}}"
                view:FlickerManager.VisibilityAfterFlicking="Visible"
                Background="{Binding Model.EventPageModel.ConfirmEvent.Level, Converter={StaticResource EventColorConverter}}" />
            <ContentControl
                x:Name="ContentControl"
                Grid.Column="0"
                Grid.ColumnSpan="9"
                >

                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Model.EventPageModel.ConfirmEvent.Level, Converter={StaticResource EventFlickerConverter}}" Value="True">
                                <Setter Property="Foreground" Value="White" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
                <Grid x:Name="Fault" Tag="{Binding Model.EventPageModel.ConfirmEvent.LogicId}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*" />
                        <ColumnDefinition Width="120*" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="100*" />
                        <ColumnDefinition Width="100*" />
                    </Grid.ColumnDefinitions>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDown">
                            <i:InvokeCommandAction Command="{Binding Model.EventPageModel.NavigatorToEvenInfo}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <TextBlock
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{Binding Model.EventPageModel.ConfirmEvent.FaultCode}" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{Binding Model.EventPageModel.ConfirmEvent.HappenDateTime, StringFormat={}{0:yyyy-MM-dd}}" />
                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Text="{Binding Model.EventPageModel.ConfirmEvent.HappenDateTime, StringFormat={}{0:HH:mm:dd}}" />
                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,-30,0"
                        Text="{Binding Model.EventPageModel.ConfirmEvent.Level, Converter={StaticResource EnumDescriptionConverter}}" />
                    <TextBlock
                        Grid.Column="4"
                        Grid.ColumnSpan="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding Model.EventPageModel.ConfirmEvent.Description}" />
                </Grid>
            </ContentControl>

            <controls:RecTextButton
                Grid.Column="9"
                Margin="5,0"
                Padding="0"
                Background="Transparent"
                BorderBrush="{StaticResource DarkGrayBrush}"
                BorderThickness="2"
                Command="{Binding Model.EventPageModel.Cofirm}"
                Content="确定"
                Foreground="White" />
        </Grid>
    </Grid>

</UserControl>
