<UserControl x:Class="Subway.ShiJiaZhuangLine1.Subsystem.View.Contents.MainRunningChildren.AirPumpValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.Model"
             xmlns:viewModels="clr-namespace:Subway.ShiJiaZhuangLine1.Subsystem.ViewModels"
             Margin="0,-20,0,0"
             d:DataContext="{d:DesignInstance viewModels:ShellViewModel}"
             d:DesignHeight="40"
             d:DesignWidth="700"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../../../AppResouce.xaml" />
    </UserControl.Resources>
    <Grid DataContext="{Binding Model}" d:DataContext="{d:DesignInstance model:MMIModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="111*" />
            <ColumnDefinition Width="110*" />
            <ColumnDefinition Width="74*" />
            <ColumnDefinition Width="37*" />
            <ColumnDefinition Width="74*" />
            <ColumnDefinition Width="37*" />
            <ColumnDefinition Width="111*" />
            <ColumnDefinition Width="110*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <controls:BorderText Grid.Column="0"
                                 Style="{StaticResource AirPumValueTextStyle}"
                                 Text="{Binding AirPunp.Car2CompressValue,
                                                StringFormat={}{0:F0}}" />

            <TextBlock Grid.Column="1"
                       Margin="2,1,0,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="White"
                       Text="Bar" />
        </Grid>

        <Grid Grid.Column="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <controls:BorderText Grid.Column="0"
                            Text="{Binding AirPunp.Car5CompressValue,
                                              StringFormat={}{0:F0}}"
                            Style="{StaticResource AirPumValueTextStyle}" />
            <TextBlock Grid.Column="1"
                       Margin="2,1,0,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="White"
                       Text="Bar" />
        </Grid>
    </Grid>
</UserControl>
