<UserControl x:Class="Engine.Angola.TCMS.View.Contents.FirstLevel.MaintainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Engine.Angola.TCMS.View.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Engine.Angola.TCMS.ViewModel"
             Background="{StaticResource ShellContentBackground}"
             d:DataContext="{d:DesignInstance viewModel:AngolaTCMSShellViewModel}"
             d:DesignHeight="600"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="750*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Border Margin="0,4" Style="{StaticResource ContentTextBorderStyle1}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="56*" />
                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="White"
                           Text="OPTION" />
                <Border Grid.Row="1"
                        Margin="5"
                        Background="#FFDBD6E1"
                        BorderBrush="Black"
                        BorderThickness="1,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="180*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="400*" />
                            <ColumnDefinition Width="90*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="109*" />
                                <RowDefinition Height="40*" />
                                <RowDefinition Height="20*" />
                                <RowDefinition Height="40*" />
                                <RowDefinition Height="20*" />
                                <RowDefinition Height="40*" />
                                <RowDefinition Height="20*" />
                                <RowDefinition Height="40*" />
                                <RowDefinition Height="243*" />
                            </Grid.RowDefinitions>
                            <Button Grid.Row="1"
                                    Content="Erase Register"
                                    Style="{StaticResource OptionButtonStyle}" />
                            <Button Grid.Row="3"
                                    Content="Loco number:9013-A"
                                    Style="{StaticResource OptionButtonStyle}" />
                            <Button Grid.Row="5"
                                    Content="Clear Parameter Rcd"
                                    Style="{StaticResource OptionButtonStyle}" />
                            <Button Grid.Row="7"
                                    Content="Time Set"
                                    Style="{StaticResource OptionButtonStyle}" />

                        </Grid>
                        <Grid Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="43*" />
                                <RowDefinition Height="312*" />
                                <RowDefinition Height="195*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1"
                                    Margin="0,4"
                                    Style="{StaticResource ContentTextBorderStyle1}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="56*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               Foreground="White"
                                               Text="CONFIRM PASSWORD" />
                                    <Border Grid.Row="1"
                                            Margin="5"
                                            Background="#FFDBD6E1"
                                            BorderBrush="Black"
                                            BorderThickness="1,1,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="67*" />
                                                <RowDefinition Height="24*" />
                                                <RowDefinition Height="186*" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="1"
                                                        HorizontalAlignment="Center"
                                                        Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource TextStyle4}" Text="Password" />
                                                <TextBlock Style="{StaticResource TextStyle4}" Text="    " />
                                                <TextBlock Style="{StaticResource TextStyle4}" Text=":" />
                                                <TextBlock Style="{StaticResource TextStyle4}" Text="    " />
                                                <TextBlock Style="{StaticResource TextStyle4}" Text="????????" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Border Grid.Column="1"
                Margin="2,4"
                Style="{StaticResource ContentTextBorderStyle1}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="110*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="110*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="110*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="110*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="110*" />
                </Grid.RowDefinitions>
                <common:BorderText Background="Transparent"
                                   RightText="1  "
                                   Style="{StaticResource ContentLedTextStyle3}" />

                <common:BorderText Grid.Row="2"
                                   Background="Transparent"
                                   RightText="2  "
                                   Style="{StaticResource ContentLedTextStyle3}" />

                <common:BorderText Grid.Row="4"
                                   Background="Transparent"
                                   RightText="3  "
                                   Style="{StaticResource ContentLedTextStyle3}" />

                <common:BorderText Grid.Row="6"
                                   Background="Transparent"
                                   RightText="4  "
                                   Style="{StaticResource ContentLedTextStyle3}" />

                <common:BorderText Grid.Row="8"
                                   Background="Transparent"
                                   RightText="··· "
                                   Style="{StaticResource ContentLedTextStyle3}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
