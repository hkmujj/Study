<UserControl x:Class="Engine.Angola.TCMS.View.Monitor.DataMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Engine.Angola.TCMS.ViewModel"
             d:DataContext="{d:DesignInstance {x:Type viewModel:AngolaTCMSShellViewModel}}"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <dxprg:PropertyGridControl AllowExpanding="ForceIfNoTypeConverter"
                               AllowInstanceInitializer="False"
                               SelectedObject="{Binding Path=Model}"
                               ShowCategories="False" />

</UserControl>
