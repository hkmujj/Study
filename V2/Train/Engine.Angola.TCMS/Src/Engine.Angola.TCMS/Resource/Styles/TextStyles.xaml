<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:common="clr-namespace:Engine.Angola.TCMS.View.Common">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Basic/TCMSBasicResource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  阴刻  -->
    <Style x:Key="ReliefCarvingTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="1"
                                      Direction="127"
                                      ShadowDepth="1.5"
                                      Color="White" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!--  阴刻  -->
    <Style x:Key="ReliefCarvingTextStyle1" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="1"
                                      Direction="127"
                                      ShadowDepth="1.5"
                                      Color="White" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!--  阴刻  -->
    <Style x:Key="ReliefCarvingTextStyle2" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="8,4" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="1"
                                      Direction="127"
                                      ShadowDepth="1.5"
                                      Color="White" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="TextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Yellow" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style.Setters>
    </Style>

    <Style x:Key="TextStyle1" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#FF7F7F7F" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style.Setters>
    </Style>

    <Style x:Key="TextStyle2" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Lime" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style.Setters>
    </Style>

    <Style x:Key="TextStyle3" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style.Setters>
    </Style>

    <Style x:Key="TextStyle4" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style.Setters>
    </Style>

    <!--  阳刻  -->
    <Style x:Key="IncisedCarvingTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="2"
                                      Direction="0"
                                      ShadowDepth="1.5"
                                      Color="White" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="BorderTextStyleBase" TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="Margin" Value="4" />
            <Setter Property="BorderThickness" Value="5,5,4,4" />
            <Setter Property="BorderBrush" Value="{StaticResource ContentTextBackgroundBrush}" />
            <Setter Property="InnerBorderStyle">
                <Setter.Value>
                    <Style TargetType="Border">
                        <Style.Setters>
                            <Setter Property="BorderThickness" Value="0,0,1,1" />
                            <Setter Property="BorderBrush" Value="White" />
                        </Style.Setters>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="StackPancelStyle">
                <Setter.Value>
                    <Style TargetType="StackPanel">
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Orientation" Value="Horizontal" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="LeftTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontFamily" Value="{StaticResource LEDFontFamily}" />
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RightTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="FontFamily" Value="{StaticResource LEDFontFamily}" />
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                    </Style>
                </Setter.Value>
            </Setter>

        </Style.Setters>
    </Style>

    <Style x:Key="DateTimeTextStyle"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="BorderThickness" Value="4,4,3,3" />
        </Style.Setters>
    </Style>

    <Style x:Key="ContentLedTextStyle"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="LeftTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="34" />
                        <Setter Property="FontFamily" Value="{StaticResource LEDFontFamily}" />
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RightTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="ContentLedTextStyle1"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="2,2,1,1" />
            <Setter Property="LeftTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20" />
                        <Setter Property="FontFamily" Value="{StaticResource LEDFontFamily}" />
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RightTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="ContentLedTextStyle2"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="Margin" Value="1" />
            <Setter Property="BorderThickness" Value="2,2,1,1" />

            <Setter Property="LeftTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="10" />
                        <Setter Property="FontFamily" Value="{StaticResource LEDFontFamily}" />
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RightTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource BlueForegoundBrush}" />
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="ContentLedTextStyle3"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="Margin" Value="4" />
            <Setter Property="BorderThickness" Value="1,1,0,0" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="InnerBorderStyle">
                <Setter.Value>
                    <Style TargetType="Border">
                        <Style.Setters>
                            <Setter Property="BorderThickness" Value="0,0,1,1" />
                            <Setter Property="BorderBrush" Value="Black" />
                        </Style.Setters>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RightTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="TextAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="2"
                                                  Direction="0"
                                                  ShadowDepth="1"
                                                  Color="White" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="ContentLedTextStyle4"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="Margin" Value="2" />
            <Setter Property="BorderThickness" Value="2,2,1,1" />
            <Setter Property="LeftTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20" />
                        <Setter Property="FontFamily" Value="{StaticResource LEDFontFamily}" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="WorkStateTextStyle"
           BasedOn="{StaticResource BorderTextStyleBase}"
           TargetType="common:BorderText">
        <Style.Setters>
            <Setter Property="StackPancelStyle">
                <Setter.Value>
                    <Style TargetType="StackPanel">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Orientation" Value="Horizontal" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="LeftTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="34" />
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="Foreground" Value="IndianRed" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RightTextStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="10" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

</ResourceDictionary>