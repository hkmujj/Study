<UserControl x:Class="Subway.ShenZhenLine7.Views.Help.SmokeHelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Subway.ShenZhenLine7.Views.Help"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:units="clr-namespace:Subway.ShenZhenLine7.Models.Units"
             xmlns:viewModels="clr-namespace:Subway.ShenZhenLine7.ViewModels"
             d:DesignHeight="420"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <x:Array x:Key="Subway.ShenZhenLine7.Items" Type="{x:Type viewModels:SmokeState}">
                <viewModels:SmokeState>Smoke</viewModels:SmokeState>
                <viewModels:SmokeState>Invalid</viewModels:SmokeState>
                <viewModels:SmokeState>Normal</viewModels:SmokeState>
            </x:Array>
            <Style TargetType="ItemsControl">
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <StackPanel IsItemsHost="True" Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate DataType="{x:Type viewModels:SmokeState}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Image Width="45"
                                       Height="45"
                                       Margin="10,15"
                                       Source="{Binding Converter={StaticResource Subway.ShenZhenLine7.SmokeConverter}}" />
                                <TextBlock Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontSize="18"
                                           Foreground="White"
                                           Text="{Binding Converter={StaticResource Subway.ShenZhenLine7.EnumToStringConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <ItemsControl Margin="100,60,0,0" ItemsSource="{StaticResource Subway.ShenZhenLine7.Items}" />
    </Grid>
</UserControl>
