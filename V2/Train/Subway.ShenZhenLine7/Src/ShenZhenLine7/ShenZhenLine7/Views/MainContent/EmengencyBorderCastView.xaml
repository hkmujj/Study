<UserControl
    x:Class="Subway.ShenZhenLine7.Views.MainContent.EmengencyBorderCastView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:baseInfo="clr-namespace:Subway.ShenZhenLine7.Views.BaseInfo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Subway.ShenZhenLine7.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:ShenZhenLine7ViewModel}"
    d:DesignHeight="480"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" />
            <RowDefinition Height="400*" />
        </Grid.RowDefinitions>
        <baseInfo:BaseInfoView />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Width="78"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding MasterPageViewModel.Controller.NextPage}"
                Content="下一页"
                Style="{StaticResource Subway.ShenZhenLine7.EmergencyBorderButtonStyle1}" />
            <Button
                Grid.Row="0"
                Width="78"
                Height="35"
                Margin="0,0,0,40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding MasterPageViewModel.Controller.LastPage}"
                Content="上一页"
                Style="{StaticResource Subway.ShenZhenLine7.EmergencyBorderButtonStyle1}" />
            <ListBox
                Grid.Row="0"
                ItemsSource="{Binding MasterPageViewModel.DisplayItems}"
                SelectedItem="{Binding MasterPageViewModel.SelectItem, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True, Mode=TwoWay}"
                SelectionChanged="Selector_OnSelectionChanged"
                Style="{StaticResource Subway.ShenZhenLine7.BorderCast}" />
            <Button
                Grid.Row="1"
                Width="78"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding MasterPageViewModel.Controller.Confirm}"
                Content="确认"
                Style="{StaticResource Subway.ShenZhenLine7.EmergencyBorderButtonStyle1}" />
            <TextBlock
                Grid.Row="1"
                Margin="40,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Text="{Binding MasterPageViewModel.PageInfo}" />
        </Grid>
    </Grid>
</UserControl>
