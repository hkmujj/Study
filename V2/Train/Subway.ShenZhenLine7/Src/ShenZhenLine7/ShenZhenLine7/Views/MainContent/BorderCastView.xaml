<UserControl x:Class="Subway.ShenZhenLine7.Views.MainContent.BorderCastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:baseInfo="clr-namespace:Subway.ShenZhenLine7.Views.BaseInfo"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Subway.ShenZhenLine7.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:ShenZhenLine7ViewModel}"
             d:DesignHeight="480"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" />
            <RowDefinition Height="400*" />
        </Grid.RowDefinitions>
        <baseInfo:BaseInfoView />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="131*" />
                <RowDefinition Height="274*" />
                <RowDefinition Height="75*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="283*" />
                <ColumnDefinition Width="140*" />
                <ColumnDefinition Width="135*" />
                <ColumnDefinition Width="242*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0,25,0,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Foreground="White"
                       Text="广播模式:" />
            <RadioButton x:Name="auto"
                         Grid.Row="0"
                         Grid.Column="1"
                         Margin="27,57,31,23"
                         Content="自动"
                         GroupName="model"
                         IsChecked="{Binding StationViewModel.IsAuto,
                                             Mode=TwoWay,
                                             NotifyOnSourceUpdated=True,
                                             NotifyOnTargetUpdated=True}"
                         Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle}" />
            <RadioButton x:Name="manul"
                         Grid.Row="0"
                         Grid.Column="2"
                         Margin="27,57,31,23"
                         Content="手动"
                         GroupName="model"
                         IsChecked="{Binding StationViewModel.IsManual,
                                             Mode=TwoWay,
                                             NotifyOnSourceUpdated=True,
                                             NotifyOnTargetUpdated=True}"
                         Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle}" />
            <RadioButton x:Name="lib"
                         Grid.Row="0"
                         Grid.Column="3"
                         Margin="27,57,100,23"
                         Content="库内报站"
                         GroupName="model"
                         IsChecked="{Binding StationViewModel.IsLib,
                                             Mode=TwoWay,
                                             NotifyOnSourceUpdated=True,
                                             NotifyOnTargetUpdated=True}"
                         Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle}"
                         Visibility="{Binding ElementName=auto,
                                              Path=IsChecked,
                                              Converter={StaticResource  Subway.ShenZhenLine7.BoolToVisibility}}" />

            <Grid Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="4"
                  Visibility="{Binding ElementName=lib,
                                       Path=Visibility}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="284*" />
                    <ColumnDefinition Width="363*" />
                    <ColumnDefinition Width="153*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Foreground="White"
                           Text="站点设置:" />
                <Border Grid.Column="1"
                        Margin="15,15,15,5"
                        BorderBrush="White"
                        BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="135*" />
                            <ColumnDefinition Width="194*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0"
                                Grid.Column="0"
                                Margin="30,37,28,5"
                                Command="{Binding StationViewModel.Controller.ChangedStation}"
                                CommandParameter="1"
                                Content="始发站"
                                Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle2}" />
                        <Button Grid.Row="0"
                                Grid.Column="1"
                                Margin="25,35,35,2"
                                Content="{Binding StationViewModel.StartStation}"
                                Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle3}" />
                        <Button Grid.Row="1"
                                Grid.Column="0"
                                Margin="30,25,28,20"
                                Command="{Binding StationViewModel.Controller.ChangedStation}"
                                CommandParameter="2"
                                Content="下一站"
                                Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle2}" />
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                Margin="25,25,35,15"
                                Content="{Binding StationViewModel.NextStation}"
                                Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle3}" />
                        <Button Grid.Row="2"
                                Grid.Column="0"
                                Margin="30,10,28,32"
                                Command="{Binding StationViewModel.Controller.ChangedStation}"
                                CommandParameter="3"
                                Content="终点站"
                                Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle2}" />
                        <Button Grid.Row="2"
                                Grid.Column="1"
                                Margin="25,10,35,30"
                                Content="{Binding StationViewModel.EndStation}"
                                Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle3}" />
                    </Grid>
                </Border>
            </Grid>
            <Button Grid.Row="2"
                    Grid.Column="3"
                    Width="80"
                    Height="40"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding StationViewModel.Controller.Confirm}"
                    Content="确认"
                    Style="{StaticResource  Subway.ShenZhenLine7.BorderCastBtnStyle2}" />
        </Grid>
    </Grid>
</UserControl>
