    </Style>
    <Style x:Key="Subway.ShenZhenLine7.EmegcnyTalkButtomStyle" TargetType="ItemsControl">
        <Setter Property="Margin" Value="-5,0" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="units:EnmergencyTalkUnit">
                    <Border Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=ActualWidth, Converter={StaticResource Subway.ShenZhenLine7.MaxthConverter}, ConverterParameter=x/5}" Margin="8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="21*" />
                                <RowDefinition Height="16*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}">
                                <Image Source="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.EmergencyTalkConverter}}" />
                            </Border>
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{Binding Location}" />
                        </Grid>
                    </Border>

                </DataTemplate>
            </Setter.Value>
