<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:Subway.ShenZhenLine7.Config"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interfaces="clr-namespace:Subway.ShenZhenLine7.Interfaces"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:units="clr-namespace:Subway.ShenZhenLine7.Models.Units"
    xmlns:view="clr-namespace:MMI.Facility.WPFInfrastructure.View;assembly=MMI.Facility.WPFInfrastructure"
    mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Converter/ConverterResource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Subway.ShenZhenLine7.DoorItemTop" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="units:DoorUnit">
                    <Border>
                        <Border.Width>
                            <Binding
                                Converter="{StaticResource Subway.ShenZhenLine7.MaxthConverter}"
                                ConverterParameter="x/5"
                                Path="ActualWidth"
                                RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                        </Border.Width>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8*" />
                                <RowDefinition Height="9*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{Binding Location}" />
                            <Image
                                Grid.Row="1"
                                Margin="1,0"
                                view:FlickerManager.DurationMiliSecond="200"
                                view:FlickerManager.Flicking="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.DoorVisibilityConverter}}"
                                view:FlickerManager.VisibilityAfterFlicking="Visible"
                                Source="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.DoorConverter}}"
                                Stretch="Fill" />
                        </Grid>
                    </Border>

                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Subway.ShenZhenLine7.DoorItemBottom" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="units:DoorUnit">
                    <Border>
                        <Border.Width>
                            <Binding
                                Converter="{StaticResource Subway.ShenZhenLine7.MaxthConverter}"
                                ConverterParameter="x/5"
                                Path="ActualWidth"
                                RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                        </Border.Width>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="9*" />
                                <RowDefinition Height="8*" />
                            </Grid.RowDefinitions>
                            <Image
                                Grid.Row="0"
                                Margin="1,0"
                                view:FlickerManager.DurationMiliSecond="200"
                                view:FlickerManager.Flicking="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.DoorVisibilityConverter}}"
                                view:FlickerManager.VisibilityAfterFlicking="Visible"
                                Source="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.DoorConverter}}"
                                Stretch="Fill" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="{Binding Location}" />
                        </Grid>
                    </Border>

                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Subway.ShenZhenLine7.AirConditionItemStyle" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="units:AirConditionUnit">
                    <Border Width="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=ActualWidth, Converter={StaticResource Subway.ShenZhenLine7.MaxthConverter}, ConverterParameter=(x-12)/2}" Height="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=ActualHeight}">
                        <Image
                            Margin="5"
                            Source="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.AirConditionConverter}}"
                            Stretch="Fill" />
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Subway.ShenZhenLine7.EmegcnyTalkTopStyle" TargetType="ItemsControl">
        <Setter Property="Margin" Value="-5,0" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="units:EnmergencyTalkUnit">
