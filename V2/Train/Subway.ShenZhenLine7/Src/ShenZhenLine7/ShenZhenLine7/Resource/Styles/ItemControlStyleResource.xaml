    </Style>
    <Style x:Key="Subway.ShenZhenLine7.BrakeTopStyle" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="units:BrakeUnit">
                    <Border
                        Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=ActualWidth, Converter={StaticResource Subway.ShenZhenLine7.MaxthConverter}, ConverterParameter=(x)/2.5}"
                        Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}, Path=ActualHeight}"
                        Padding="5,2">
                        <Grid>

                            <Border>
                                <Image Source="{Binding State, Converter={StaticResource Subway.ShenZhenLine7.BrakeConverter}}" />
                            </Border>
                        </Grid>
                    </Border>
