<UserControl x:Class="Subway.CBTC.QuanLuTong.View.Common.Keyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Subway.CBTC.QuanLuTong.View.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             Background="{StaticResource Subway.CBTC.QuanLuTong.Brush.LightGray}"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style BasedOn="{StaticResource Subway.CBTC.QuanLuTong.Style.Button.RunningAndMantence}" TargetType="Button" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Grid.Column="0"
                Click="ButtonBase_OnClick">
            1
        </Button>
        <Button Grid.Row="0"
                Grid.Column="1"
                Click="ButtonBase_OnClick">
            2
        </Button>
        <Button Grid.Row="0"
                Grid.Column="2"
                Click="ButtonBase_OnClick">
            3
        </Button>
        <Button Grid.Row="0"
                Grid.Column="3"
                Click="ButtonBase_OnClick">
            &lt;-
        </Button>
        <Button Grid.Row="1"
                Grid.Column="0"
                Click="ButtonBase_OnClick">
            4
        </Button>
        <Button Grid.Row="1"
                Grid.Column="1"
                Click="ButtonBase_OnClick">
            5
        </Button>
        <Button Grid.Row="1"
                Grid.Column="2"
                Click="ButtonBase_OnClick">
            6
        </Button>
        <Button Grid.Row="1"
                Grid.Column="3"
                Click="ButtonBase_OnClick"
                Content="{StaticResource Subway.CBTC.QuanLuTong.String.OK}" />
        <Button Grid.Row="2"
                Grid.Column="0"
                Click="ButtonBase_OnClick">
            7
        </Button>
        <Button Grid.Row="2"
                Grid.Column="1"
                Click="ButtonBase_OnClick">
            8
        </Button>
        <Button Grid.Row="2"
                Grid.Column="2"
                Click="ButtonBase_OnClick">
            9
        </Button>
        <Button Grid.Row="2"
                Grid.Column="3"
                Click="ButtonBase_OnClick">
            0
        </Button>


    </Grid>
</UserControl>
