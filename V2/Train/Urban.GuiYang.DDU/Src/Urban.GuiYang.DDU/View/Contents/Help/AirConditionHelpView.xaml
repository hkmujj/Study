<UserControl
    x:Class="Urban.GuiYang.DDU.View.Contents.Help.AirConditionHelpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Urban.GuiYang.DDU.View.Common"
    xmlns:constant="clr-namespace:Urban.GuiYang.DDU.Model.Constant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Urban.GuiYang.DDU.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="355"
    d:DesignWidth="480"
    Background="{StaticResource HelpBack}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Image">
                <Setter Property="Stretch" Value="Fill" />
            </Style>
        </Grid.Resources>
        <Border BorderBrush="White" BorderThickness="2,2,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3.5*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />

                </Grid.RowDefinitions>
                <Canvas Grid.Row="0">
                    <TextBlock
                        Canvas.Left="8"
                        Canvas.Top="5"
                        Text="空调状态：" />
                    <Grid
                        Canvas.Left="10"
                        Canvas.Top="25"
                        Width="458"
                        Height="110">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.3*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewCool}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="(闪烁)预冷" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewWarm}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="(闪烁)预热" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewWind}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="(闪烁)紧急通风" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewCool}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="制冷" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewWarm}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="半暖" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewWind}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="通风" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewStoped}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="停止" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewAllWarm}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="全暖" />
                        </StackPanel>


                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgAirConditionViewFault}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="故障" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image
                                Width="45"
                                Height="28"
                                Margin="2"
                                HorizontalAlignment="Left"
                                Source="{StaticResource ImgCommonUnkownBig}"
                                Stretch="Fill" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="未知" />
                        </StackPanel>
                    </Grid>
                </Canvas>
                <Canvas Grid.Row="1">
                    <TextBlock
                        Canvas.Left="8"
                        Canvas.Top="12"
                        Text="控制模式：" />
                    <Image
                        Canvas.Left="88"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Source={x:Static constant:ControlState.FocusControl}, Converter={StaticResource ControlStateToImageConverter}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="139"
                        Canvas.Top="12"
                        Text="集控" />
                    <Image
                        Canvas.Left="181"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource ControlStateToImageConverter}, Source={x:Static constant:ControlState.SelfControl}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="232"
                        Canvas.Top="12"
                        Text="本控" />
                    <Image
                        Canvas.Left="279"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource ControlStateToImageConverter}, Source={x:Static constant:ControlState.SelfControl}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="330"
                        Canvas.Top="12"
                        Text="未知" />
                </Canvas>
                <Canvas Grid.Row="2">
                    <TextBlock
                        Canvas.Left="8"
                        Canvas.Top="12"
                        Text="新风阀状态：" />
                    <Image
                        Canvas.Left="88"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Source={x:Static constant:NewAirValveState.Three}, Converter={StaticResource NewAirValveStateToImageConverter}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="139"
                        Canvas.Top="12"
                        Text="全开" />
                    <Image
                        Canvas.Left="181"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Source={x:Static constant:NewAirValveState.Two}, Converter={StaticResource NewAirValveStateToImageConverter}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="232"
                        Canvas.Top="12"
                        Text="2/3开" />
                    <Image
                        Canvas.Left="279"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Source={x:Static constant:NewAirValveState.One}, Converter={StaticResource NewAirValveStateToImageConverter}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="330"
                        Canvas.Top="12"
                        Text="1/3开" />
                    <Image
                        Canvas.Left="88"
                        Canvas.Top="44"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource NewAirValveStateToImageConverter}, Source={x:Static constant:NewAirValveState.Closed}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="139"
                        Canvas.Top="50"
                        Text="关闭" />
                    <Image
                        Canvas.Left="181"
                        Canvas.Top="44"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource NewAirValveStateToImageConverter}, Source={x:Static constant:NewAirValveState.Fault}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="232"
                        Canvas.Top="50"
                        Text="故障" />
                    <Image
                        Canvas.Left="279"
                        Canvas.Top="44"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource NewAirValveStateToImageConverter}, Source={x:Static constant:NewAirValveState.Unkown}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="330"
                        Canvas.Top="50"
                        Text="未知" />
                </Canvas>
                <Canvas Grid.Row="3">
                    <TextBlock
                        Canvas.Left="8"
                        Canvas.Top="12"
                        Text="回风阀状态：" />
                    <Image
                        Canvas.Left="88"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource BackAirValveStateToImageConverter}, Source={x:Static constant:BackAirValveState.Opened}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="139"
                        Canvas.Top="12"
                        Text="打开" />
                    <Image
                        Canvas.Left="181"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource BackAirValveStateToImageConverter}, Source={x:Static constant:BackAirValveState.Closed}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="232"
                        Canvas.Top="12"
                        Text="关闭" />
                    <Image
                        Canvas.Left="279"
                        Canvas.Top="6"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource BackAirValveStateToImageConverter}, Source={x:Static constant:BackAirValveState.Fault}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="330"
                        Canvas.Top="12"
                        Text="故障" />
                    <Image
                        Canvas.Left="393"
                        Canvas.Top="4"
                        Width="45"
                        Height="28"
                        Source="{Binding Converter={StaticResource BackAirValveStateToImageConverter}, Source={x:Static constant:BackAirValveState.Unkown}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="444"
                        Canvas.Top="10"
                        Text="未知" />
                </Canvas>
                <Canvas Grid.Row="4">
                    <TextBlock
                        Canvas.Left="437"
                        Canvas.Top="44"
                        Text="页1-3" />
                    <common:NavigationButton
                        Canvas.Left="170"
                        Canvas.Top="0"
                        Width="83"
                        Height="44"
                        Margin="0"
                        Command="{Binding Controller.CloseHelp}"
                        Content="确认" />

                </Canvas>
                <Line
                    Grid.Row="0"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="1"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="2"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="3"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="4"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
            </Grid>
        </Border>
        <!--<Border BorderBrush="Black" BorderThickness="0,0,2,2" />-->
    </Grid>
</UserControl>
