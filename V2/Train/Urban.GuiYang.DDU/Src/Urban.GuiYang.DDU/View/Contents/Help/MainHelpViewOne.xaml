<UserControl
    x:Class="Urban.GuiYang.DDU.View.Help.MainHelpViewOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Urban.GuiYang.DDU.View.Common"
    xmlns:constant="clr-namespace:Urban.GuiYang.DDU.Model.Constant"
    xmlns:constant1="clr-namespace:Urban.GuiYang.DDU.Constant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Urban.GuiYang.DDU.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="355"
    d:DesignWidth="480"
    Background="{StaticResource HelpBack}"
    mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="White" BorderThickness="2,2,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="车门状态:" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.Close}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="门关闭" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.Isolation}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="隔离" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.FaultClose}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="故障关" />
                        </StackPanel>
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.CheckedObstruction}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="检测到障碍物" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.Open}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="门打开" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.Unkonw}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="未知" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.FaultOpen}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="故障开" />
                        </StackPanel>
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding Source={x:Static constant:DoorState.EmergLock}, Converter={StaticResource DoorStateImageConverter}}" />
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                Text="紧急解锁" />
                        </StackPanel>
                    </Grid>

                </Grid>
                <Canvas Grid.Row="1">
                    <TextBlock
                        Canvas.Left="5"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="PECU状态:" />
                    <Ellipse
                        Canvas.Left="79"
                        Canvas.Top="13"
                        Width="20"
                        Height="20"
                        Fill="Yellow" />
                    <TextBlock
                        Canvas.Left="107"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="通话中" />
                    <Ellipse
                        Canvas.Left="247"
                        Canvas.Top="13"
                        Width="20"
                        Height="20"
                        Fill="Yellow" />
                    <TextBlock
                        Canvas.Left="275"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="(闪烁)激活" />
                </Canvas>
                <Canvas Grid.Row="2">
                    <TextBlock
                        Canvas.Left="5"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="司机室状态:" />
                    <ed:Arc
                        Canvas.Left="80"
                        Canvas.Top="8"
                        Width="15"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        ArcThickness="1"
                        ArcThicknessUnit="Percent"
                        EndAngle="360"
                        Fill="{Binding Source={x:Static constant:DriverRoomState.Unactive}, Converter={StaticResource DriverRoomStateColorConverter}}"
                        RenderTransformOrigin="0.5,0.5"
                        StartAngle="180"
                        Stretch="Fill"
                        Stroke="Black">
                        <ed:Arc.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="180" />
                                <TranslateTransform />
                            </TransformGroup>
                        </ed:Arc.RenderTransform>
                    </ed:Arc>

                    <TextBlock
                        Canvas.Left="107"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="未激活" />

                    <ed:Arc
                        Canvas.Left="212"
                        Canvas.Top="8"
                        Width="15"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        ArcThickness="1"
                        ArcThicknessUnit="Percent"
                        EndAngle="360"
                        Fill="{Binding Converter={StaticResource DriverRoomStateColorConverter}, Source={x:Static constant:DriverRoomState.Active}}"
                        RenderTransformOrigin="0.5,0.5"
                        StartAngle="180"
                        Stretch="Fill"
                        Stroke="Black">
                        <ed:Arc.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="180" />
                                <TranslateTransform />
                            </TransformGroup>
                        </ed:Arc.RenderTransform>
                    </ed:Arc>
                    <TextBlock
                        Canvas.Left="239"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="激活" />
                    <ed:Arc
                        Canvas.Left="380"
                        Canvas.Top="11"
                        Width="15"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        ArcThickness="1"
                        ArcThicknessUnit="Percent"
                        EndAngle="360"
                        Fill="{Binding Converter={StaticResource DriverRoomStateColorConverter}, Source={x:Static constant:DriverRoomState.Unknow}}"
                        RenderTransformOrigin="0.5,0.5"
                        StartAngle="180"
                        Stretch="Fill"
                        Stroke="Black">
                        <ed:Arc.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="180" />
                                <TranslateTransform />
                            </TransformGroup>
                        </ed:Arc.RenderTransform>
                    </ed:Arc>
                    <TextBlock
                        Canvas.Left="407"
                        Canvas.Top="19"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="未知" />
                </Canvas>
                <Canvas Grid.Row="3">
                    <TextBlock
                        Canvas.Left="5"
                        Canvas.Top="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="列车方向:" />
                    <ed:RegularPolygon
                        Canvas.Left="74"
                        Canvas.Top="14"
                        Width="30"
                        Height="15"
                        Fill="{Binding Source={x:Static constant:RunningDirection.Unkown}, Converter={StaticResource RunningDirectionLeftColorConverter}}"
                        PointCount="3"
                        RenderTransformOrigin="0.5,0.5"
                        Stretch="Fill"
                        Stroke="{StaticResource BlackBrush}"
                        UseLayoutRounding="False"
                        Visibility="{Binding Path=TrainViewModel.Model.RunningDirection, Converter={StaticResource RunningDirectionLeftVisibilityConverter}}">
                        <ed:RegularPolygon.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="90" />
                                <TranslateTransform />
                            </TransformGroup>
                        </ed:RegularPolygon.RenderTransform>

                    </ed:RegularPolygon>

                    <TextBlock
                        Canvas.Left="101"
                        Canvas.Top="14"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="未激活" />
                    <ed:RegularPolygon
                        Canvas.Left="206"
                        Canvas.Top="14"
                        Width="30"
                        Height="15"
                        Fill="{Binding Source={x:Static constant:RunningDirection.Left}, Converter={StaticResource RunningDirectionLeftColorConverter}}"
                        PointCount="3"
                        RenderTransformOrigin="0.5,0.5"
                        Stretch="Fill"
                        Stroke="{StaticResource BlackBrush}"
                        UseLayoutRounding="False"
                        Visibility="{Binding TrainViewModel.Model.RunningDirection, Converter={StaticResource RunningDirectionLeftVisibilityConverter}}">
                        <ed:RegularPolygon.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform Angle="90" />
                                <TranslateTransform />
                            </TransformGroup>
                        </ed:RegularPolygon.RenderTransform>

                    </ed:RegularPolygon>
                    <TextBlock
                        Canvas.Left="233"
                        Canvas.Top="14"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="此侧为列车行进方向" />


                </Canvas>
                <Canvas Grid.Row="4">
                    <TextBlock
                        Canvas.Left="5"
                        Canvas.Top="5"
                        Text="受电弓状态:" />
                    <Image
                        Canvas.Left="7"
                        Canvas.Top="21"
                        Width="25"
                        Height="25"
                        Source="{Binding Source={x:Static constant:PantographState.Uped}, Converter={StaticResource PantograpnStateImageConverter}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="41"
                        Canvas.Top="26"
                        Text="升弓" />
                    <Image
                        Canvas.Left="82"
                        Canvas.Top="21"
                        Width="25"
                        Height="25"
                        Source="{Binding Converter={StaticResource PantograpnStateImageConverter}, Source={x:Static constant:PantographState.Downed}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="117"
                        Canvas.Top="26"
                        Text="降弓" />
                    <Image
                        Canvas.Left="181"
                        Canvas.Top="21"
                        Width="25"
                        Height="25"
                        Source="{Binding Converter={StaticResource PantograpnStateImageConverter}, Source={x:Static constant:PantographState.DownFault}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="214"
                        Canvas.Top="26"
                        Text="降弓有故障" />
                    <Image
                        Canvas.Left="302"
                        Canvas.Top="21"
                        Width="25"
                        Height="25"
                        Source="{Binding Converter={StaticResource PantograpnStateImageConverter}, Source={x:Static constant:PantographState.UpFault}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="335"
                        Canvas.Top="26"
                        Text="升弓有故障" />
                    <Image
                        Canvas.Left="410"
                        Canvas.Top="21"
                        Width="25"
                        Height="25"
                        Source="{Binding Converter={StaticResource PantograpnStateImageConverter}, Source={x:Static constant:PantographState.Unkown}}"
                        Stretch="Fill" />
                    <TextBlock
                        Canvas.Left="444"
                        Canvas.Top="26"
                        Text="未知" />

                </Canvas>
                <Canvas Grid.Row="5">
                    <TextBlock
                        Canvas.Left="437"
                        Canvas.Top="44"
                        Text="页1-3" />
                    <common:NavigationButton
                        Canvas.Left="170"
                        Canvas.Top="25"
                        Width="83"
                        Height="44"
                        Margin="0"
                        Command="{Binding Controller.CloseHelp}"
                        Content="确认" />
                    <common:NavigationButton
                        Canvas.Left="255"
                        Canvas.Top="25"
                        Width="83"
                        Height="44"
                        Margin="0"
                        Command="{Binding Controller.GoToHelp}"
                        CommandParameter="{x:Static constant1:ViewNames.MainHelpViewTwo}"
                        Content="下一页" />
                </Canvas>
                <Line
                    Grid.Row="0"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="1"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="2"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="3"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
                <Line
                    Grid.Row="4"
                    Height="5"
                    VerticalAlignment="Bottom"
                    Stroke="Black"
                    StrokeThickness="2"
                    X1="5"
                    X2="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource MathConverter}, ConverterParameter=x-5}"
                    Y1="5"
                    Y2="5" />
            </Grid>
        </Border>
        <!--<Border BorderBrush="Black" BorderThickness="0,0,2,2" />-->
    </Grid>


</UserControl>
