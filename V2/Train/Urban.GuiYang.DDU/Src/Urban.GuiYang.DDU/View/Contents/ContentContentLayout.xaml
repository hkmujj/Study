<UserControl
    x:Class="Urban.GuiYang.DDU.View.Contents.ContentContentLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:constant="clr-namespace:Urban.GuiYang.DDU.Constant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regions="http://www.codeplex.com/CompositeWPF"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*" />
            <RowDefinition Height="133*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Border regions:RegionManager.RegionName="{x:Static constant:RegionNames.ContentContentTrain}" />
        <Viewbox Grid.Row="1" Stretch="Fill">
            <Border
                Width="800"
                Height="266"
                regions:RegionManager.RegionName="{x:Static constant:RegionNames.ContentContentContent}" />
        </Viewbox>
        <Border Grid.Row="2" regions:RegionManager.RegionName="{x:Static constant:RegionNames.ContentContentFault}" />
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="155,35,170,25"
            Panel.ZIndex="1"
            regions:RegionManager.RegionName="{x:Static constant:RegionNames.HelpRegion}" />
    </Grid>
</UserControl>
