<UserControl
    x:Class="Urban.GuiYang.DDU.View.Contents.Fault.CurrentFaulyListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Urban.GuiYang.DDU.View.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fault="clr-namespace:Urban.GuiYang.DDU.Model.Fault"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:MMI.Facility.WPFInfrastructure.View;assembly=MMI.Facility.WPFInfrastructure"
    xmlns:viewModel="clr-namespace:Urban.GuiYang.DDU.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="410"
    d:DesignWidth="800"
    Background="{StaticResource ContentBackgroundBrush}"
    mc:Ignorable="d">
    <Canvas>
        <TextBlock
            Canvas.Left="41"
            Canvas.Top="10"
            FontSize="20"
            Text="故障事件清单" />
        <TextBlock
            Canvas.Left="486"
            Canvas.Top="15"
            FontSize="20"
            RenderTransformOrigin="0,0.472">
            <Run Text="故障条数:" />
            <Run Text="{Binding FaultViewModel.Model.Count}" />
        </TextBlock>
        <ListBox
            Canvas.Left="22"
            Canvas.Top="40"
            Width="667"
            Height="259"
            Background="Black"
            ItemsSource="{Binding FaultViewModel.Model.CurrentPageInfo}"
            SelectedItem="{Binding FaultViewModel.Model.SelectItem, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}">
            <ListBox.Style>
                <Style TargetType="ListBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBox">
                                <Grid
                                    view:GridLine.Brush="White"
                                    view:GridLine.Style="ShowAll"
                                    view:GridLine.Width="2"
                                    view:GridLine.WidthStyle="AllLineSame"
                                    Background="{TemplateBinding Background}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="330*" />
                                        <ColumnDefinition Width="120*" />
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="20" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </Grid.Resources>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Text="车号" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Text="故障名称" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Text="发生事件" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Text="代码" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="4"
                                        Text="等级" />
                                    <ItemsPresenter
                                        Grid.Row="1"
                                        Grid.RowSpan="9"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="5" />
                                </Grid>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ItemContainerStyle">
                        <Setter.Value>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="White" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="ItemTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="fault:FaultInfo">
                                <Grid Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsPresenter}, Path=ActualHeight, Converter={StaticResource MathConverter}, ConverterParameter=x/9}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="300*" />
                                        <ColumnDefinition Width="150*" />
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="Margin" Value="2" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </Grid.Resources>
                                    <TextBlock Grid.Column="0" Text="{Binding Car}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Text="{Binding Content}" />
                                    <TextBlock Grid.Column="2" Text="{Binding HapendTime, StringFormat={}{0:HH:mm:ss}}" />
                                    <TextBlock Grid.Column="3" Text="{Binding Code}" />
                                    <TextBlock Grid.Column="4" Text="{Binding Level, Converter={StaticResource EnumDescritionConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.Style>
        </ListBox>
        <!--<Grid
            Canvas.Left="22"
            Canvas.Top="40"
            Width="634"
            Height="259"
            Panel.ZIndex="100"
            view:GridLine.Brush="White"
            view:GridLine.Style="ShowAll"
            view:GridLine.Width="2"
            view:GridLine.WidthStyle="AllLineSame"
            Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="300*" />
                <ColumnDefinition Width="150*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
        </Grid>-->
        <common:ImageButton
            Canvas.Left="723"
            Canvas.Top="185"
            Width="40"
            Height="25"
            Margin="0"
            Command="{Binding FaultViewModel.Controller.NextPage}"
            PressedImage="{StaticResource ImgOtherBtnDown}"
            RelasedImage="{StaticResource ImgOtherBtnDown}" />
        <TextBlock
            Canvas.Left="22"
            Canvas.Top="314"
            FontSize="20"
            Text="提示：" />
        <TextBlock
            Canvas.Left="730"
            Canvas.Top="112"
            FontSize="12"
            Text="{Binding FaultViewModel.Model.PageInfo}" />
        <TextBlock
            Canvas.Left="87"
            Canvas.Top="314"
            FontSize="20"
            Text="{Binding FaultViewModel.Model.SelectItem.Trips}" />
        <common:ImageButton
            Canvas.Left="723"
            Canvas.Top="155"
            Width="40"
            Height="25"
            Margin="0"
            Command="{Binding FaultViewModel.Controller.LastPage}"
            PressedImage="{StaticResource ImgOtherBtnUp}"
            RelasedImage="{StaticResource ImgOtherBtnUp}" />

    </Canvas>
</UserControl>
