<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Base/GuiYangBaseResource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="PISContentBlackTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamilySongTypeface}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="24,6,6,6" />
        </Style.Setters>
    </Style>

    <Style x:Key="PISEmergBroadcastBlackTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamilySongTypeface}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="6" />
        </Style.Setters>
    </Style>

    <Style x:Key="PISContentWhiteTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamilySongTypeface}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="0,6,6,6" />
        </Style.Setters>
    </Style>

    <Style x:Key="PageIndicatorTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamilySongTypeface}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="1,1,0,1" />
        </Style.Setters>
    </Style>

    <Style x:Key="LocationCenterBlackTextStyle" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource BlackBrush}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="{StaticResource FontFamilySongTypeface}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="1,1,0,1" />
        </Style.Setters>
    </Style>

</ResourceDictionary>