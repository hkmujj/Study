<UserControl x:Class="Engine.Dial.Angola.Views.DialShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Engine.Dial.Angola.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Engine.Dial.Angola.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:AngolaViewModel}"
             d:DesignHeight="600"
             d:DesignWidth="800"
             Background="Transparent"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../Reourse/AppResource.xaml" />
    </UserControl.Resources>

    <Grid>
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="../Reourse/Image/背景图.png" />
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="53*" />
                    <RowDefinition Height="226*" />
                    <RowDefinition Height="52*" />
                    <RowDefinition Height="215*" />
                    <RowDefinition Height="54*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*" />
                    <ColumnDefinition Width="367*" />
                    <ColumnDefinition Width="332*" />
                    <ColumnDefinition Width="54*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="1"
                       Source="../Reourse/Image/气表03.png" />

                <Image Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="2"
                       RenderTransformOrigin="0.5,0.5"
                       Source="../Reourse/Image/气表04.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="{Binding BCValue, Converter={StaticResource AngleConverterOne}}" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="2"
                       RenderTransformOrigin="0.5,0.5"
                       Source="../Reourse/Image/气表05.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="{Binding MRValue, Converter={StaticResource AngleConverterOne}}" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="2"
                       RenderTransformOrigin="0.5,0.5"
                       Source="../Reourse/Image/气表04.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="{Binding BPValue, Converter={StaticResource AngleConverterTwo}}" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="2"
                       RenderTransformOrigin="0.5,0.5"
                       Source="../Reourse/Image/气表05.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="{Binding ERValue, Converter={StaticResource AngleConverterTwo}}" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Grid.Row="1"
                       Grid.RowSpan="2"
                       Grid.Column="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Panel.ZIndex="1"
                       Source="../Reourse/Image/气表02.png" />
                <Image Grid.Row="2"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Panel.ZIndex="1"
                       Source="../Reourse/Image/气表01a.png" />
                <Image Grid.Row="2"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Panel.ZIndex="2"
                       RenderTransformOrigin="0.5,0.5"
                       Source="../Reourse/Image/气表04.png">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="{Binding VBPValue, Converter={StaticResource AngleConverterThree}}" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <Grid Grid.Row="3" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="91*" />
                        <RowDefinition Height="48*" />
                        <RowDefinition Height="77*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16*" />
                        <ColumnDefinition Width="141*" />
                        <ColumnDefinition Width="210*" />
                    </Grid.ColumnDefinitions>
                    <Border x:Name="border"
                            Grid.Row="1"
                            Grid.Column="1"
                            Background="{StaticResource LECBack}">

                        <Grid>
                            <ItemsControl Panel.ZIndex="1"
                                          ItemsSource="{Binding Reservatono,
                                                                Converter={StaticResource LedValueConverter}}"
                                          Style="{StaticResource LEDStyle}" />
                            <ItemsControl Foreground="{StaticResource LECFontBack}"
                                          ItemsSource="{Binding RelativeSource={RelativeSource Self},
                                                                Path=Tag}"
                                          Style="{StaticResource LEDStyle}"
                                          Tag="888" />
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="3" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="91*" />
                        <RowDefinition Height="48*" />
                        <RowDefinition Height="77*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="174*" />
                        <ColumnDefinition Width="141*" />
                        <ColumnDefinition Width="17*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Background="{StaticResource LECBack}">
                        <Grid>
                            <ItemsControl Panel.ZIndex="1"
                                          ItemsSource="{Binding Fornecimento,
                                                                Converter={StaticResource LedValueConverter}}"
                                          Style="{StaticResource LEDStyle}" />
                            <ItemsControl Foreground="{StaticResource LECFontBack}"
                                          ItemsSource="{Binding RelativeSource={RelativeSource Self},
                                                                Path=Tag}"
                                          Style="{StaticResource LEDStyle}"
                                          Tag="888" />
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>