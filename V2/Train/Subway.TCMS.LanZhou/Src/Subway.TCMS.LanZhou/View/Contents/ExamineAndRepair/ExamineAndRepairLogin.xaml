<UserControl x:Class="Subway.TCMS.LanZhou.View.Contents.ExamineAndRepair.ExamineAndRepairLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Subway.TCMS.LanZhou.View.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="{StaticResource Subway.TCMS.LanZhou.Brush.ContentBackground}"
             d:DesignHeight="466"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <!--<Grid.Background>
            <ImageBrush ImageSource="{StaticResource Subway.TCMS.LanZhou.ImgTemporaryRepairLoadin}" />
        </Grid.Background>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="72*" />
                <RowDefinition Height="341*" />
                <RowDefinition Height="42*" />
                <RowDefinition Height="55*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Grid Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="118*" />
                    <ColumnDefinition Width="312*" />
                    <ColumnDefinition Width="71*" />
                    <ColumnDefinition Width="221*" />
                    <ColumnDefinition Width="78*" />
                </Grid.ColumnDefinitions>
                <Grid Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="42*" />
                        <RowDefinition Height="29*" />
                        <RowDefinition Height="46*" />
                        <RowDefinition Height="55*" />
                        <RowDefinition Height="100*" />
                        <RowDefinition Height="55*" />
                        <RowDefinition Height="14*" />
                    </Grid.RowDefinitions>
                    <Grid Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="203*" />
                            <ColumnDefinition Width="11*" />
                            <ColumnDefinition Width="98*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Background="{StaticResource Subway.TCMS.LanZhou.Brush.TextBoxForeground}"
                                 BorderThickness="3"
                                 Style="{StaticResource Subway.TCMS.LanZhou.BorderTextStyle}" />
                        <Button Grid.Column="2"
                                Width="95"
                                Height="50"
                                Content="{StaticResource Subway.TCMS.LanZhou.String.ClearButton}"
                                Style="{StaticResource Subway.TCMS.LanZhou.HardwareBtnStyle}" />
                    </Grid>
                    <Grid Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="94*" />
                            <ColumnDefinition Width="16*" />
                            <ColumnDefinition Width="94*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="98*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="4"
                                Width="95"
                                Height="50"
                                Content="{StaticResource Subway.TCMS.LanZhou.String.MakeSureButton}"
                                Style="{StaticResource Subway.TCMS.LanZhou.HardwareBtnStyle}" />
                    </Grid>
                    <TextBlock Grid.Row="1"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource FontFamilyKaiTypeface}"
                               FontSize="21"
                               Foreground="{StaticResource Subway.TCMS.LanZhou.Brush.ForegroundWhite}"
                               Text="{StaticResource Subway.TCMS.LanZhou.String.PleaseEnterPasswords}" />
                </Grid>
                <common:PasswordsView Grid.Column="3" />
            </Grid>
            <Grid Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="700*" />
                    <ColumnDefinition Width="98*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1"
                        Width="95"
                        Height="50"
                        Content="{StaticResource Subway.TCMS.LanZhou.String.CancelButton}"
                        Style="{StaticResource Subway.TCMS.LanZhou.HardwareBtnStyle}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
