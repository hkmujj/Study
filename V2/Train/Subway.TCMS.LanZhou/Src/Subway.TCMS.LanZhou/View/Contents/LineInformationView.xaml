                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Margin="10" Fill="{Binding TrainViewModel.Model.CarModels[0].LineInformationDatas.Value.AllDoorsClosedStatus.State, Converter={StaticResource Subway.TCMS.LanZhou.Converter.BranchInformationConverter}}" />
