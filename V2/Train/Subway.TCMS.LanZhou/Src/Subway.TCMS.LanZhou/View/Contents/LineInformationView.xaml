                        </Grid>
                        <Grid Grid.Row="9" view:GridLine.Brush="{StaticResource Subway.TCMS.LanZhou.Brush.ButtonBackground}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Margin="10" Fill="{Binding TrainViewModel.Model.CarModels[0].LineInformationDatas.Value.ZeroSpeedStatus.State, Converter={StaticResource Subway.TCMS.LanZhou.Converter.BranchInformationConverter}}" />
                            <Rectangle Grid.Column="1"
                                       Margin="10"
                                       Fill="{Binding TrainViewModel.Model.CarModels[5].LineInformationDatas.Value.ZeroSpeedStatus.State,
