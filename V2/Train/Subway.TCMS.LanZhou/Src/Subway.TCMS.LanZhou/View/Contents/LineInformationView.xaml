                        </Grid>
                        <Grid Grid.Row="2" view:GridLine.Brush="{StaticResource Subway.TCMS.LanZhou.Brush.ButtonBackground}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle Margin="10" Fill="{Binding TrainViewModel.Model.CarModels[0].LineInformationDatas.Value.SemiAutomaticSwitchStatus.State, Converter={StaticResource Subway.TCMS.LanZhou.Converter.BranchInformationConverter}}" />
