                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Index, Converter={StaticResource StringLengthConverter}}" />
                        <TextBlock Text="、" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
