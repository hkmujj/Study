<UserControl
    x:Class="Motor.TCMS.CRH400BF.View.Buttons.MainHardwareButtonBottom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Motor.TCMS.CRH400BF.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="60"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Command="{Binding Path=HardwareBtnViewModel.Model.B1Command}"
            Content="1"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="1"
            Command="{Binding Path=HardwareBtnViewModel.Model.B2Command}"
            Content="2"
            Style="{StaticResource HardwareBtnStyle}" />

        <Button
            Grid.Column="2"
            Command="{Binding Path=HardwareBtnViewModel.Model.B3Command}"
            Content="3"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="3"
            Command="{Binding Path=HardwareBtnViewModel.Model.B4Command}"
            Content="4"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="4"
            Command="{Binding Path=HardwareBtnViewModel.Model.B5Command}"
            Content="5"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="5"
            Command="{Binding Path=HardwareBtnViewModel.Model.B6Command}"
            Content="6"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="6"
            Command="{Binding Path=HardwareBtnViewModel.Model.B7Command}"
            Content="7"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="7"
            Command="{Binding Path=HardwareBtnViewModel.Model.B8Command}"
            Content="8"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="8"
            Command="{Binding Path=HardwareBtnViewModel.Model.B9Command}"
            Content="9"
            Style="{StaticResource HardwareBtnStyle}" />
        <Button
            Grid.Column="9"
            Command="{Binding Path=HardwareBtnViewModel.Model.B10Command}"
            Content="0"
            Style="{StaticResource HardwareBtnStyle}" />





    </Grid>
</UserControl>
