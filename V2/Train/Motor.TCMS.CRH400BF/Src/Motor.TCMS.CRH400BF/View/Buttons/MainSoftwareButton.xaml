            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <common:NaviButton
            Grid.Column="0"
            Width="80"
            Height="Auto"
            Command="{Binding Path=HardwareBtnViewModel.Model.B1Command}"
            Content="{Binding Path=StateViewModel.Model.CurrentStateInterface.BtnB1.Content}"
            IsSelected="{Binding Path=StateViewModel.Model.CurrentStateInterface.BtnB1.IsSelected}" />

