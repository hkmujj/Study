<UserControl
    x:Class="Motor.TCMS.CRH400BF.View.Contents.MainEquipmentCutOffContentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Motor.TCMS.CRH400BF.View.Contents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Motor.TCMS.CRH400BF.ViewModel"
    d:DataContext="{d:DesignInstance {x:Type viewModel:DomainViewModel}}"
    d:DesignHeight="400"
    d:DesignWidth="800"
    Background="Black"
    mc:Ignorable="d">
    <!--<Image Source="{StaticResource ImgEquipmentCutOffPage}" Stretch="Fill" />-->
    <Grid Width="800" HorizontalAlignment="Right">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="38*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="CR400BF"
                    TextAlignment="Right" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="-"
                    TextAlignment="Center" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="0503"
                    TextAlignment="Left" />
            </StackPanel>
        </Grid>
        <ItemsControl
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding Path=TrainViewModel.Model.CarCollection}"
            Style="{StaticResource CarNameItemStyle}" />
        <Border
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="White"
            BorderThickness="0,2,0,2" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="受电弓"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="3"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource PantographItemStyle}" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="主断路器"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="4"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource MainBreakerItemStyle}" />
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="高压隔离开关"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="5"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource HighPressSwitchItemStyle}" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="牵引变流器"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="6"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource TractionConverterItemStyle}" />
        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="牵引逆变器"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="7"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource TractionInvertorItemStyle}" />
        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="辅助逆变器"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="8"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource AssistConverterItemStyle}" />
        <TextBlock
            Grid.Row="9"
            Grid.RowSpan="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="充电机"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="9"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource BatteryCharger1ItemStyle}" />
        <ItemsControl
            Grid.Row="10"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource BatteryCharger2ItemStyle}" />
        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="空压机"
            TextAlignment="Center" />
        <ItemsControl
            Grid.Row="11"
            Grid.Column="1"
            ItemsSource="{Binding TrainViewModel.Model.CarCollection}"
            Style="{StaticResource AirCompressorItemStyle}" />
    </Grid>
</UserControl>
