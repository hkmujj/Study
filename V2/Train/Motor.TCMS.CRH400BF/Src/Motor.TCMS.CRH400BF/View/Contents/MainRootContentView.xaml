                Grid.Column="2"
                VerticalAlignment="Center"
                Foreground="White"
                Text="03"
                TextAlignment="Center " />
            <TextBlock
                Grid.Row="0"
                Grid.Column="4"
                VerticalAlignment="Center"
                Foreground="White"
                Text="06"
                TextAlignment="Center " />

