<UserControl
    x:Class="Motor.TCMS.CRH400BF.View.StateIcon.MainTrainStateIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:MMI.Facility.WPFInfrastructure.View;assembly=MMI.Facility.WPFInfrastructure"
    xmlns:viewModel="clr-namespace:Motor.TCMS.CRH400BF.ViewModel"
    Width="800"
    Height="70"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    mc:Ignorable="d">
    <Grid Margin="0.5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="13" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="13" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="13" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="5"
            VerticalAlignment="Center"
            Foreground="White "
            Text="02/04"
            TextAlignment="Center" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="7"
            VerticalAlignment="Center"
            Foreground="White "
            Text="05/07"
            TextAlignment="Center" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="9"
            VerticalAlignment="Center"
            Foreground="White "
            Text="01"
            TextAlignment="Center" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="11"
            VerticalAlignment="Center"
            Foreground="White "
            Text="08"
            TextAlignment="Center" />
        <Image
            Grid.Row="1"
            Grid.Column="0"
            Margin="2,2,2,2"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.DoorStateIcon, Converter={StaticResource DoorStateIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="1"
            Margin="2,2,2,2"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.MainBreakerStateIcon, Converter={StaticResource MainBreakerStateIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="2"
            Margin="2,2,2,2"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.ChangePortIcon, Converter={StaticResource ChangePortIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="3"
            Source="{StaticResource ImgTrainIconExternalPower}"
            Stretch="Fill"
            Visibility="{Binding TrainViewModel.Model.TrainStateIcon.ExternalPower, Converter={StaticResource ShowStateIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="5"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.OneOrThreeAssistInvertor, Converter={StaticResource AssistInvertorStateIconToImageConverter}}"
            Stretch="Fill" />

        <Image
            Grid.Row="1"
            Grid.Column="7"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.SixOrEightAssistInvertor, Converter={StaticResource AssistInvertorStateIconToImageConverter}}"
            Stretch="Fill" />

        <Image
            Grid.Row="1"
            Grid.Column="9"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.OneOrEightBatteryCharger, Converter={StaticResource BatteryChargerStateIconToImageConverter}}"
            Stretch="Fill" />
        <Image
            Grid.Row="1"
            Grid.Column="11"
            Source="{Binding TrainViewModel.Model.TrainStateIcon.EightBatteryCharger, Converter={StaticResource BatteryChargerStateIconToImageConverter}}"
            Stretch="Fill" />

        <Image
            Grid.Row="1"
            Grid.Column="13"
            Source="{StaticResource ImgTrainIconPassengerCall}"
            Stretch="Fill"
            Visibility="{Binding TrainViewModel.Model.TrainStateIcon.PassengerCall, Converter={StaticResource ShowStateIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="14"
            Margin="2,2,2,2"
            Source="{StaticResource ImgTrainIconDriverFoot}"
            Visibility="{Binding TrainViewModel.Model.TrainStateIcon.AutoSafetyEquip, Converter={StaticResource ShowStateIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="15"
            Margin="2,2,2,2"
            Source="{StaticResource ImgTrainIconFireHelp}"
            Visibility="{Binding TrainViewModel.Model.TrainStateIcon.FireCall, Converter={StaticResource ShowStateIconToImageConverter}}" />
        <Image
            Grid.Row="1"
            Grid.Column="16"
            Margin="2,2,2,2"
            Source="{StaticResource ImgTrainIconEmptyWork}"
            Visibility="{Binding TrainViewModel.Model.TrainStateIcon.EmptyRun, Converter={StaticResource ShowStateIconToImageConverter}}" />
    </Grid>
</UserControl>
