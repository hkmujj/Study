<UserControl x:Class="Engine.HMI.SS3B.View.View.KunMing.MasterGraduationTwo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:kunMing="clr-namespace:Engine.HMI.SS3B.View.View.KunMing"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="60"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Rectangle Name="PART_Track" Fill="{TemplateBinding Background}" />
                                <Rectangle Name="PART_Indicator"
                                           HorizontalAlignment="Left"
                                           Fill="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="border" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="270" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Style">
                                    <Setter.Value>
                                        <Style TargetType="FrameworkElement">
                                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                                            <Style.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation AutoReverse="True"
                                                                            Duration="0:0:0.5"
                                                                            RepeatBehavior="Forever"
                                                                            Storyboard.TargetProperty="Fill.Color"
                                                                            To="Transparent" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="Violet" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="White" />
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <ProgressBar Grid.Column="0"
                     Maximum="1"
                     Minimum="0"
                     Orientation="Vertical"
                     Style="{StaticResource ProgressBarStyle}"
                     Value="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                    AncestorType={x:Type UserControl},
                                                                    AncestorLevel=1},
                                     Path=BarValueTwoOne}" />
        <kunMing:GraduationLine x:Name="GraduationLineOne" Grid.Column="1" />
        <ProgressBar Grid.Column="2"
                     Maximum="1"
                     Minimum="0"
                     Orientation="Vertical"
                     Style="{StaticResource ProgressBarStyle}"
                     Value="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                    AncestorType={x:Type UserControl},
                                                                    AncestorLevel=1},
                                     Path=BarValueTwoTwo}" />
    </Grid>
</UserControl>
