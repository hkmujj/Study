<UserControl x:Class="Subway.XiaMenLine1.Subsystem.Controls.TriangleBlack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Control"
             d:DesignHeight="20"
             d:DesignWidth="30"
             mc:Ignorable="d">
    <Viewbox Width="{Binding ElementName=Control,
                             Path=ActualWidth}"
             Height="{Binding ElementName=Control,
                              Path=ActualHeight}"
             Stretch="Fill">
        <Canvas Width="30" Height="20">
            <Path Data="M 0,16 L 30,16 L 15,4" Fill="White" />
            <Rectangle Width="30"
                       Height="20"
                       Stroke="White"
                       StrokeThickness="1" />
        </Canvas>
    </Viewbox>
</UserControl>
