<UserControl
    x:Class="Subway.XiaMenLine1.Subsystem.View.Contents.EmergencyCauseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Subway.XiaMenLine1.Subsystem.View.Contents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Subway.XiaMenLine1.Subsystem.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:ShellViewModel}"
    d:DesignHeight="380"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../AppResouce.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ItemsControl
            Grid.Column="0"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Model.EmergencyCause.EnmergencyCause}"
            Style="{StaticResource EmergencyCauseItemStyle}" />
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <Rectangle
                Grid.Column="1"
                Margin="6"
                Fill="Red" />
            <TextBlock
                Grid.Column="2"
                Margin="18,0,18,3"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="16"
                Foreground="White"
                Text="紧急制动原因" />
        </Grid>
    </Grid>
</UserControl>
