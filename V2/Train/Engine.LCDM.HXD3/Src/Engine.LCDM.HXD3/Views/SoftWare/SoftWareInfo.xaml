<UserControl x:Class="Engine.LCDM.HXD3.Views.SoftWare.SoftWareInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Grid Background="{DynamicResource GrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="2"
                Style="{DynamicResource BorderStyleOne}"
                BorderThickness="3"
                />
        <Border Grid.Row="1"
                Grid.Column="0"
                Style="{DynamicResource BorderStyleTwo}"
                BorderThickness="2"
                Margin="20,0,20,20"
                />
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="{DynamicResource SofwareInstall}"
                   Style="{DynamicResource ButtonTextStyle}"
                   FontSize="26"
                   />
    </Grid>
</UserControl>
