    <Style x:Key="BypassViewStyle" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>

            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="model:BypassUnit">
                    <Border Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=ActualHeight, Converter={StaticResource BesizeConverter10}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="{StaticResource WhiteBrush}"
                                       Text="{Binding Name}" />
                            <Border x:Name="PART_Border1"
                                    Grid.Column="1"
                                    Width="50"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                    AncestorType={x:Type Grid}},
                                                     Path=ActualHeight,
                                                     Converter={StaticResource BesizeConverter1.5}}"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource WhiteBrush}"
                                    BorderThickness="0,0,1,1" />
                            <Border Grid.Column="1"
                                    Width="50"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                    AncestorType={x:Type Grid}},
                                                     Path=ActualHeight,
                                                     Converter={StaticResource BesizeConverter1.5}}"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource TitleBackBrush}"
                                    BorderThickness="1,1,0,0" />
                            <Border x:Name="PART_Border2"
                                    Grid.Column="2"
                                    Width="50"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                    AncestorType={x:Type Grid}},
                                                     Path=ActualHeight,
                                                     Converter={StaticResource BesizeConverter1.5}}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource WhiteBrush}"
                                    BorderThickness="0,0,1,1" />
                            <Border Grid.Column="2"
                                    Width="50"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                    AncestorType={x:Type Grid}},
                                                     Path=ActualHeight,
                                                     Converter={StaticResource BesizeConverter1.5}}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource TitleBackBrush}"
                                    BorderThickness="1,1,0,0" />
                        </Grid>
                    </Border>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding CarA1Bypass}" Value="true">
                            <Setter TargetName="PART_Border1" Property="Background" Value="{StaticResource YellowBrush}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CarA2Bypass}" Value="true">
                            <Setter TargetName="PART_Border2" Property="Background" Value="{StaticResource YellowBrush}" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="TractionViewItemStyleOne" TargetType="ItemsControl">
