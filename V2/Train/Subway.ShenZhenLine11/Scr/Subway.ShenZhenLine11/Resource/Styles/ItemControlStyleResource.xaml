                            <Border Width="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                   AncestorType={x:Type ItemsControl}},
                                                    Path=ActualWidth,
                                                    Converter={StaticResource BesizeConverter8},
                                                    ConverterParameter=30}"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                    AncestorType={x:Type ItemsControl}},
                                                     Path=ActualHeight,
                                                     Converter={StaticResource BesizeConverter1},
                                                     ConverterParameter=10}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource WhiteBrush}"
                                    BorderThickness="0,0,1,1" />
                            <Border Width="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                   AncestorType={x:Type ItemsControl}},
                                                    Path=ActualWidth,
                                                    Converter={StaticResource BesizeConverter8},
                                                    ConverterParameter=30}"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                    AncestorType={x:Type ItemsControl}},
                                                     Path=ActualHeight,
                                                     Converter={StaticResource BesizeConverter1},
                                                     ConverterParameter=10}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderBrush="{StaticResource TitleBackBrush}"
                                    BorderThickness="1,1,0,0" />

                        </Grid>
                    </Border>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsLock}" Value="true">
                            <Setter TargetName="PART_Grid" Property="Background" Value="{StaticResource RedBrush}" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="-15,0" />
    </Style>





    <Style x:Key="BorderCastItemStyle" TargetType="ItemsControl">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="model:StationUnit">
                    <Border Width="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                           AncestorType={x:Type ItemsControl}},
                                            Path=ActualWidth,
                                            Converter={StaticResource BesizeConverter3},
                                            ConverterParameter=10}"
                            Height="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                            AncestorType={x:Type ItemsControl}},
                                             Path=ActualHeight,
                                             Converter={StaticResource BesizeConverter6},
                                             ConverterParameter=30}"
                            Margin="5,0,5,30"
                            BorderBrush="{StaticResource WhiteBrush}"
                            BorderThickness="0,0,0,2">
                        <Button Background="Transparent"
                                Command="{Binding Source={x:Static viewModels:BorderCastViewModel.Instance},
                                                  Path=Controller.StationDown}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                                           Path=Tag,
                                                           Converter={StaticResource IntToStringConverter}}"
                                FontSize="16"
                                Tag="{Binding Index}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <TextBlock HorizontalAlignment="Center"
                                                           VerticalAlignment="Bottom"
                                                           Foreground="{StaticResource WhiteBrush}"
                                                           Text="{Binding Name}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
