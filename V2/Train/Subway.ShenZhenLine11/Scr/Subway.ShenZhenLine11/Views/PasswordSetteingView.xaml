<UserControl x:Class="Subway.ShenZhenLine11.Views.PasswordSetteingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Subway.ShenZhenLine11.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Subway.ShenZhenLine11.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type viewModels:ShenZhenViewModel}}"
             d:DesignHeight="250"
             d:DesignWidth="500"
             Background="{StaticResource BackgroundBrush}"
             FontSize="18"
             Visibility="{Binding PasswordSetting.Controller.Visibility}"
             mc:Ignorable="d">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderBrush="{StaticResource WhiteBrush}"
                BorderThickness="2,2,0,0" />
        <Border Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderBrush="{StaticResource CarBorderBrush}"
                BorderThickness="0,0,2,2" />
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="52*" />
                <RowDefinition Height="48*" />
                <RowDefinition Height="75*" />
                <RowDefinition Height="75*" />
            </Grid.RowDefinitions>

            <TextBlock Margin="2"
                       FontSize="14"
                       Foreground="White"
                       Text="请输入3位密码：" />
            <Border Grid.Row="1"
                    Margin="20,0,0,0"
                    Background="White"
                    BorderBrush="DarkGray"
                    BorderThickness="2,2,0,0">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="{Binding PasswordSetting.DisplayPassword}" />
            </Border>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Margin="30,15,0,15"
                        Command="{Binding PasswordSetting.Controller.ConfirmCommand}"
                        Content="确认"
                        Style="{StaticResource PasswordSettingViewBtnStyle}" />
                <Button Grid.Column="1"
                        Margin="30,15,0,15"
                        Command="{Binding PasswordSetting.Controller.ConfirmBackCommand}"
                        Content="返回"
                        Style="{StaticResource PasswordSettingViewBtnStyle}" />
            </Grid>

        </Grid>
        <Grid Grid.Column="1" Margin="20,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="1"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="2"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="3"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="1"
                    Grid.Column="0"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="4"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="5"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="6"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="2"
                    Grid.Column="0"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="7"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="8"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="2"
                    Grid.Column="2"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="9"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="0"
                    Style="{StaticResource PasswordSettingStyle}" />
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Command="{Binding PasswordSetting.Controller.InputCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self},
                                               Path=Content}"
                    Content="Del"
                    Style="{StaticResource PasswordSettingStyle}"
                    Tag="true" />

        </Grid>

    </Grid>
</UserControl>
