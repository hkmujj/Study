<UserControl
    x:Class="Subway.ShenZhenLine11.Views.MainContent.BorderCastView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resource="clr-namespace:Subway.ShenZhenLine11.Resource"
    xmlns:viewModels="clr-namespace:Subway.ShenZhenLine11.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:ShenZhenViewModel}"
    d:DesignHeight="485"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Column="0"
            Margin="50,30,50,0"
            BorderBrush="{StaticResource WhiteBrush}"
            BorderThickness="2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Content="站名" Style="{StaticResource BorderCastBtnStyleOne}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Content="站名"
                    Style="{StaticResource BorderCastBtnStyleOne}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="站名"
                    Style="{StaticResource BorderCastBtnStyleOne}" />
                <Grid
                    Grid.Row="1"
                    Grid.RowSpan="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="3">
                    <ItemsControl ItemsSource="{Binding BorderCast.AllStation}" Style="{StaticResource BorderCastItemStyle}" />
                </Grid>
            </Grid>
        </Border>
        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="50,30,20,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource BorderCastViewTextStyle}"
                Text="广播模式:" />
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RadioButton
                    x:Name="Auto"
                    Command="{Binding BorderCast.Controller.ModelSelect}"
                    CommandParameter="Auto"
                    Content="自动"
                    IsChecked="{Binding BorderCast.IsAuto, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                    Style="{StaticResource BorderCastBtnStyleTwo}" />
                <RadioButton
                    x:Name="Manual"
                    Grid.Column="1"
                    Command="{Binding BorderCast.Controller.ModelSelect}"
                    CommandParameter="Manual"
                    Content="手动"
                    Style="{StaticResource BorderCastBtnStyleTwo}" />
            </Grid>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource BorderCastViewTextStyle}"
                Text="广播模式手动触发:" />
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RadioButton
                    Command="{Binding BorderCast.Controller.SendBoolCommand}"
                    CommandParameter="{x:Static resource:OutBoolKeys.到站广播}"
                    Content="到站广播"
                    IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                    Style="{StaticResource BorderCastBtnStyle3}" />
                <RadioButton
                    Grid.Column="1"
                    Command="{Binding BorderCast.Controller.SendBoolCommand}"
                    CommandParameter="{x:Static resource:OutBoolKeys.离站广播}"
                    Content="离站广播"
                    IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                    Style="{StaticResource BorderCastBtnStyle3}" />
            </Grid>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource BorderCastViewTextStyle}"
                Text="跳站触发:" />
            <Grid
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RadioButton
                    Command="{Binding BorderCast.Controller.SendBoolCommand}"
                    CommandParameter="{x:Static resource:OutBoolKeys.跳站前一站}"
                    Content="前一站"
                    IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                    Style="{StaticResource BorderCastBtnStyle3}" />
                <RadioButton
                    Grid.Column="1"
                    Command="{Binding BorderCast.Controller.SendBoolCommand}"
                    CommandParameter="{x:Static resource:OutBoolKeys.跳站后一战}"
                    Content="后一站"
                    IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                    Style="{StaticResource BorderCastBtnStyle3}" />
            </Grid>
            <TextBlock
                Grid.Row="3"
                Grid.RowSpan="3"
                Grid.Column="0"
                Style="{StaticResource BorderCastViewTextStyle}"
                Text="站点设置:" />

            <Border
                Grid.Row="3"
                Grid.RowSpan="3"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                BorderBrush="{StaticResource WhiteBrush}"
                BorderThickness="0,0,2,2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <RadioButton
                        Command="{Binding BorderCast.Controller.StationSelect}"
                        CommandParameter="1"
                        Content="始发站"
                        IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                        Style="{StaticResource BorderCastBtnStyleTwo}" />
                    <RadioButton
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="{Binding BorderCast.StartStation}"
                        IsEnabled="False"
                        Style="{StaticResource BorderCastBtnStyle4}" />
                    <RadioButton
                        Grid.Row="1"
                        Grid.Column="0"
                        Command="{Binding BorderCast.Controller.StationSelect}"
                        CommandParameter="2"
                        Content="下一站"
                        IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                        Style="{StaticResource BorderCastBtnStyleTwo}" />
                    <RadioButton
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="{Binding BorderCast.NextStation}"
                        IsEnabled="False"
                        Style="{StaticResource BorderCastBtnStyle4}" />
                    <RadioButton
                        Grid.Row="2"
                        Grid.Column="0"
                        Command="{Binding BorderCast.Controller.StationSelect}"
                        CommandParameter="3"
                        Content="终点站"
                        IsEnabled="{Binding ElementName=Manual, Path=IsChecked}"
                        Style="{StaticResource BorderCastBtnStyleTwo}" />
                    <RadioButton
                        Grid.Row="2"
                        Grid.Column="1"
                        Content="{Binding BorderCast.EndStation}"
                        IsEnabled="True"
                        Style="{StaticResource BorderCastBtnStyle4}" />
                </Grid>
            </Border>
            <Border
                Grid.Row="3"
                Grid.RowSpan="3"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Panel.ZIndex="1"
                BorderBrush="{StaticResource CarBorderBrush}"
                BorderThickness="2,2,0,0" />
        </Grid>

        <Button
            Grid.Row="1"
            Grid.Column="1"
            Width="80"
            HorizontalAlignment="Right"
            Command="{Binding BorderCast.Controller.Confirm}"
            Content="确定"
            Style="{StaticResource BorderCastBnStyleThree}" />
    </Grid>
</UserControl>
