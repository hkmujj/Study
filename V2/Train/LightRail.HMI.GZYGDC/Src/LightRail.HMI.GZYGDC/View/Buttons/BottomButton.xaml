<UserControl x:Class="LightRail.HMI.GZYGDC.View.Buttons.BottomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LightRail.HMI.GZYGDC.View.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Column="0">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB1.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB1.ClickCommand}"></Button>
        </Grid>
        <Grid Column="1">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB2.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB2.ClickCommand}"></Button>
        </Grid>
        <Grid Column="2">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB3.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB3.ClickCommand}"></Button>
        </Grid>
        <Grid Column="3">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB4.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB4.ClickCommand}"></Button>
        </Grid>
        <Grid Column="4">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB5.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB5.ClickCommand}"></Button>
        </Grid>
        <Grid Column="5">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB6.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB6.ClickCommand}"></Button>
        </Grid>
        <Grid Column="6">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB7.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB7.ClickCommand}"></Button>
        </Grid>
        <Grid Column="7">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB8.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB8.ClickCommand}"></Button>
        </Grid>
        <Grid Column="8">
            <Button Style="{StaticResource BottomButtonStyle}" Content="{Binding Path=Model.BottomStateInterface.BtnB9.Content,Converter={StaticResource ButtonContentConverter},Mode=OneWay}"  Command="{Binding Model.BottomStateInterface.BtnB9.ClickCommand}"></Button>
        </Grid>
    </Grid>
</UserControl>
