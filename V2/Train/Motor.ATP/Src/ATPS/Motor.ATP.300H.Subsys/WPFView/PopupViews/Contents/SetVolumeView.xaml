<UserControl
    x:Class="Motor.ATP._300H.Subsys.WPFView.PopupViews.Contents.SetVolumeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:popupViewModels="clr-namespace:Motor.ATP._300H.Subsys.ViewModel.PopupViewModels"
    d:DataContext="{d:DesignInstance popupViewModels:SetVolumePopupViewModel}"
    d:DesignHeight="250"
    d:DesignWidth="232"
    Background="{StaticResource Motor.ATP.300H.BackgroudBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition />
            <RowDefinition Height="2.5*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Image Source="{StaticResource Motor.ATP.Infrasturcture.Image.音量设置图标}" />
            <Grid Width="150" Margin="6,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <ProgressBar
                    Grid.Row="1"
                    Background="{StaticResource Motor.ATP.300H.DarkGrayBrush}"
                    BorderThickness="0"
                    Foreground="{StaticResource Motor.ATP.300H.GreenBrush}"
                    Orientation="Horizontal"
                    Style="{StaticResource Motor.ATP.300H.ProgressBarOrdinaryStyle}"
                    Value="{Binding Path=VolumePercent}" />
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource Motor.ATP.300H.PopupViewSettingPercentTextStyle}"
                    Text="{Binding VolumePercent, StringFormat={}0\'%\'}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
