            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Line />
                <TextBlock Grid.Row="0" Text="机信" />
                <TextBlock Grid.Row="1" Text="3 DEF" />
            </Grid>
        </Button>
        <Button Grid.Column="3" IsEnabled="{Binding Path=DriverInterfaceController.CurrentInterface.DriverSelectable[B4].Enabled}">
