                <Line />

                <TextBlock Grid.Row="1" Text="7 PQRS" />
            </Grid>
        </Button>
        <Button Grid.Column="7" IsEnabled="{Binding Path=DriverInterfaceController.CurrentInterface.DriverSelectable[B8].Enabled}">
