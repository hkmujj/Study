            </i:Interaction.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Line />
                <TextBlock Grid.Row="0" Text="启动" />
                <TextBlock Grid.Row="1" Text="4 GHI" />
            </Grid>
        </Button>
        <Button Grid.Column="4" IsEnabled="{Binding Path=DriverInterfaceController.CurrentInterface.DriverSelectable[B5].Enabled}">
