             xmlns:userAction="clr-namespace:Motor.ATP.Infrasturcture.Interface.UserAction;assembly=Motor.ATP.Infrasturcture"
             d:DataContext="{d:DesignInstance interface:IATP}"
             d:DesignHeight="480"
             d:DesignWidth="100"
             mc:Ignorable="d">
