        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="幼圆" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Margin" Value="12,6" />
                <Setter Property="Background" Value="{StaticResource Motor.ATP.300S.BlackBrush}" />
                <Setter Property="Focusable" Value="False" />
            </Style>
        </Grid.Resources>
        <Button Grid.Row="0"
                Content="F1"
                IsEnabled="{Binding Path=DriverInterfaceController.CurrentInterface.DriverSelectable[F1].Enabled}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseDown">
                    <interactivity:InvokeCommandAction Command="{Binding Path=ATPHardwareButton.HardwareButtonViewModel.ButtonEventCommand}" CommandParameter="{x:Static userAction:UserActionType.F1}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="PreviewMouseUp">
                    <interactivity:InvokeCommandAction Command="{Binding Path=ATPHardwareButton.HardwareButtonViewModel.ButtonEventCommand}" CommandParameter="{x:Static userAction:UserActionType.F1}" />
                </i:EventTrigger>
