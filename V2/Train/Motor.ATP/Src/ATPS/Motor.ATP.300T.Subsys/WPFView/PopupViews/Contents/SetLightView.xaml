<UserControl x:Class="Motor.ATP._300T.Subsys.WPFView.PopupViews.Contents.SetLightView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:popupViewModels="clr-namespace:Motor.ATP._300T.Subsys.ViewModel.PopupViewModels"
             Background="{StaticResource Motor.ATP.300T.PopviewBackgroudBrush}"
             d:DataContext="{d:DesignInstance popupViewModels:SetLightPopupViewModel}"
             d:DesignHeight="250"
             d:DesignWidth="232"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition />
            <RowDefinition Height="2.5*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Image Source="{StaticResource Motor.ATP.Infrasturcture.Image.亮度设置图标白}" />
            <Grid Width="150" Margin="6,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <ProgressBar Grid.Row="1"
                             Background="{StaticResource Motor.ATP.300T.DarkGrayBrush}"
                             BorderThickness="0"
                             Foreground="{StaticResource Motor.ATP.300T.GreenBrush}"
                             Orientation="Horizontal"
                             Style="{StaticResource Motor.ATP.300T.ProgressBarOrdinaryStyle}"
                             Value="{Binding Path=LightPercent}" />
                <TextBlock Grid.Row="1"
                           Style="{StaticResource Motor.ATP.300T.PopupViewSettingPercentTextStyle}"
                           Text="{Binding LightPercent,
                                          StringFormat={}0\'%\'}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
