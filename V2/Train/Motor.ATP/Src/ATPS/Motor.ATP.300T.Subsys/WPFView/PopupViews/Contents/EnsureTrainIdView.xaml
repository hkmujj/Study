<UserControl x:Class="Motor.ATP._300T.Subsys.WPFView.PopupViews.Contents.EnsureTrainIdView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interface="clr-namespace:Motor.ATP.Infrasturcture.Interface;assembly=Motor.ATP.Infrasturcture"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:popupViewModels="clr-namespace:Motor.ATP._300T.Subsys.ViewModel.PopupViewModels"
             Background="{StaticResource Motor.ATP.300T.PopviewBackgroudBrush}"
             d:DataContext="{d:DesignInstance popupViewModels:EnsureTrainIdViewModel}"
             d:DesignHeight="250"
             d:DesignWidth="232"
             mc:Ignorable="d">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource Motor.ATP.300T.PopupViewContentTextStyle}" Text="{StaticResource Motor.ATP.Infrasturcture.String.TrainId}" />
        <TextBlock Grid.Row="1"
                   Style="{StaticResource Motor.ATP.300T.PopupViewInputLongDataTextStyle}"
                   Text="{Binding Path=TrainId,
                                  StringFormat={}#}" />
    </Grid>
</UserControl>
