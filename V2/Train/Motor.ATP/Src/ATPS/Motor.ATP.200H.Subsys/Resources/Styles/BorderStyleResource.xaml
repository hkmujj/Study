<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Basic/ATP200HBasicResource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Motor.ATP.200H.BackGridBorderStyleLeft" TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderBrush" Value="{StaticResource Motor.ATP.200H.BackGridBrush}" />
            <Setter Property="BorderThickness" Value="2,0,0,0" />
        </Style.Setters>
    </Style>

    <Style x:Key="Motor.ATP.200H.BackGridBorderStyleLeftUp" TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderBrush" Value="{StaticResource Motor.ATP.200H.BackGridBrush}" />
            <Setter Property="BorderThickness" Value="2,2,0,0" />
        </Style.Setters>
    </Style>
    <Style x:Key="Motor.ATP.200H.BackGridBorderStyleUp" TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderBrush" Value="{StaticResource Motor.ATP.200H.BackGridBrush}" />
            <Setter Property="BorderThickness" Value="0,2,0,0" />
        </Style.Setters>
    </Style>
    <Style x:Key="Motor.ATP.200H.BackGridBorderStyleRightDown" TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderBrush" Value="{StaticResource Motor.ATP.200H.BackGridBrush}" />
            <Setter Property="BorderThickness" Value="0,0,2,2" />
        </Style.Setters>
    </Style>
    <Style x:Key="Motor.ATP.200H.BackGridBorderStyleNoDown" TargetType="Border">
        <Style.Setters>
            <Setter Property="BorderBrush" Value="{StaticResource Motor.ATP.200H.BackGridBrush}" />
            <Setter Property="BorderThickness" Value="2,2,2,0" />
        </Style.Setters>
    </Style>

    <Style x:Key="Motor.ATP.200H.AssistSpeedBorder" TargetType="Border" >
        <Setter Property="Background" Value="{StaticResource Motor.ATP.200H.BackgroudBrush}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource Motor.ATP.200H.BackGridBrush}"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
    </Style>

</ResourceDictionary>