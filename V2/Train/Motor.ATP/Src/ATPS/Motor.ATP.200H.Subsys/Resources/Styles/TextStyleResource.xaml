    <Style x:Key="Motor.ATP.200H.AssistLEDTextStyle" TargetType="TextBox">
        <Style.Setters>
            <Setter Property="Margin" Value="3,6" />
            <Setter Property="Padding" Value="3,6,5,3" />
            <Setter Property="FontFamily" Value="{StaticResource Motor.ATP.200H.LEDFontFamily}" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Foreground" Value="{StaticResource Motor.ATP.200H.WhiteBrush}" />
            <Setter Property="Background" Value="{StaticResource Motor.ATP.200H.LEDBackgroundBrush}" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Margin="{TemplateBinding Padding}"
                                       d:DataContext="{d:DesignInstance interface:IATP}"
                                       Text="{TemplateBinding Text}"
                                       Visibility="{Binding Path=AssistDisplayInfo.Visible,
                                                            Converter={StaticResource Motor.ATP.200H.BoolVisibilityConverter}}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style TargetType="TextBlock" x:Key="Motor.ATP.200H.AssistSpeedTextStyle">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="24"></Setter>
        <Setter Property="Foreground" Value="{StaticResource Motor.ATP.200H.WhiteBrush}"></Setter>
        <Style.Triggers>
            <Trigger Property="Tag" Value="{StaticResource Motor.ATP.200H.BooleanTrue}">
                <Setter Property="Visibility" Value="Visible"></Setter>
            </Trigger>
            <Trigger Property="Tag" Value="{StaticResource Motor.ATP.200H.BooleanFalse}">
                <Setter Property="Visibility" Value="Hidden"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

