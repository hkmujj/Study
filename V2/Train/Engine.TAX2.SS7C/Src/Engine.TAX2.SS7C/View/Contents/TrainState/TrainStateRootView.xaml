                               Grid.Column="7"
                               Style="{StaticResource ContentConstWhiteTextStyle}"
                               Text="A" />


                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Style="{StaticResource ContentConstWhiteTextStyle}"
                               Text="IM12=" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="2"
                               Style="{StaticResource ContentConstWhiteTextStyle}"
                               Text="{Binding Path=TrainStateViewModel.Model.TruckState1.IM2,
                                              StringFormat={}0}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="3"
                               Style="{StaticResource ContentConstWhiteTextStyle}"
