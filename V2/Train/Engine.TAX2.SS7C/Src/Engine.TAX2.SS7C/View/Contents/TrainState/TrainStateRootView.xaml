                           Grid.Column="7"
                           Height="19"
                           Margin="0,18"
                           Style="{StaticResource ContentConstWhiteTextStyle}"
                           Text="V" />

                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource CenterHTextStackPancelStyle}">
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="{StaticResource StringTrain}" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="{StaticResource StringPowerSupply}" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="1" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="{StaticResource StringEleCurrent}" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="=" />
                </StackPanel>
                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           HorizontalAlignment="Right"
                           Style="{StaticResource ContentConstWhiteTextStyle}"
