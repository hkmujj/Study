                </StackPanel>
                <TextBlock Grid.Row="2"
                           Grid.Column="6"
                           Grid.ColumnSpan="3"
                           Margin="-10,0,0,0"
                           Style="{StaticResource ContentConstWhiteTextStyle}"
                           Text="{Binding Path=TrainStateViewModel.Model.RunningTime,
                                          Converter={StaticResource TimespanToRunningTimeConverter}}" />
