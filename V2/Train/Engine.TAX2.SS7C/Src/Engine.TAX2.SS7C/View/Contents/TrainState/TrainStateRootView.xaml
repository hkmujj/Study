                    <TextBlock Grid.Row="3"
                               Grid.Column="6"
                               Style="{StaticResource ContentConstWhiteTextStyle}"
                               Text="{Binding Path=TrainStateViewModel.Model.TruckState2.IF1,
                                              StringFormat={}0}" />
