                               Grid.Column="6"
                               Style="{StaticResource ContentConstWhiteTextStyle}"
                               Text="{Binding Path=TrainStateViewModel.Model.TruckState2.UM1,
                                              StringFormat={}0}" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="7"
