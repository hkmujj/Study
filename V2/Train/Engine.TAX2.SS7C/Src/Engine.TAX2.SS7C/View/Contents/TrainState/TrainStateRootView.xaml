                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="{StaticResource StringPowerSupply}" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="2" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="{StaticResource StringVoltage}" />
                    <TextBlock Style="{StaticResource ContentConstWhiteTextStyle}" Text="=" />
                </StackPanel>
                <TextBlock Grid.Row="0"
                           Grid.Column="6"
                           Height="19"
                           Margin="0,18"
