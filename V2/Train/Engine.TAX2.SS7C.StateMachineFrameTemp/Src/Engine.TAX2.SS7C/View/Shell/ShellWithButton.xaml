<UserControl x:Class="Engine.TAX2.SS7C.View.Shell.ShellWithButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constant="clr-namespace:Engine.TAX2.SS7C.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             d:DesignHeight="800"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="600*" />
            <RowDefinition Height="200*" />
        </Grid.RowDefinitions>

        <Border Background="{StaticResource ContentBackgroundBrush}" regions:RegionManager.RegionName="{x:Static constant:RegionNames.ShellContent}" />

        <Border Grid.Row="1"
                Background="{StaticResource ShellBackgroundBrush}"
                regions:RegionManager.RegionName="{x:Static constant:RegionNames.ShellButton}" />
    </Grid>
</UserControl>
