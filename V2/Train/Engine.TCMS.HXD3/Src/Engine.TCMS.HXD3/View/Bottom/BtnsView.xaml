<UserControl x:Class="Engine.TCMS.HXD3.View.Bottom.BtnsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Engine.TCMS.HXD3.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:HXD3TCMSViewModel}"
             d:DesignHeight="40"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB1.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB1.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="1 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB2.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB2.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="2 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB3.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB3.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="3 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB4.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB4.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="4 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB5.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB5.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="5 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB6.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB6.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="6 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB7.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB7.Content}"
                Style="{StaticResource TCMSBtnStyle}" />
        <Button Grid.Column="7 "
                Command="{Binding Path=Model.CurrentStateInterface.BtnB8.ClickCommand,
                                  Mode=OneWay}"
                Content="{Binding Path=Model.CurrentStateInterface.BtnB8.Content}"
                Style="{StaticResource TCMSBtnStyle}" />

    </Grid>
</UserControl>
