<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">


    <system:Boolean x:Key="BoolTrue">True</system:Boolean>
    <system:Boolean x:Key="BoolFalse">False</system:Boolean>

    <Visibility x:Key="Visible">Visible</Visibility>
    <Visibility x:Key="Hidden">Hidden</Visibility>

    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent" />

    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="Black" />
    <SolidColorBrush x:Key="ContentBackgroundRedBrush" Color="Red" />
    <SolidColorBrush x:Key="ContentForegroundBlackBrush" Color="Black" />

    <SolidColorBrush x:Key="ContentBackgroundYellowBrush" Color="Yellow" />

    <SolidColorBrush x:Key="ContentBackgroundOrangeBrush" Color="Coral" />

    <SolidColorBrush x:Key="ContentLimeGreenBrush" Color="LimeGreen" />

    <SolidColorBrush x:Key="ContentDimGrayBrush" Color="DimGray" />

    <SolidColorBrush x:Key="ContentBlueBrush" Color="#00AEAE" />

    <SolidColorBrush x:Key="SelectedBlueBrush" Color="Blue" />

    <SolidColorBrush x:Key="ShellBackgroundBrush" Color="#3B393D" />

    <SolidColorBrush x:Key="ForegroundWhiteBrush" Color="White" />



    <SolidColorBrush x:Key="HarwareButtonWhiteBrush" Color="White" />

    <SolidColorBrush x:Key="HarwareButtonRedBrush" Color="Red" />

    <SolidColorBrush x:Key="HarwareButtonPressedBackground" Color="LightBlue" />

</ResourceDictionary>