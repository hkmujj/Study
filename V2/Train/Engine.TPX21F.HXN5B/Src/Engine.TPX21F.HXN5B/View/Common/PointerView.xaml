<UserControl x:Class="Engine.TPX21F.HXN5B.View.Common.PointerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             RenderTransformOrigin="0.5,0.5"
             SnapsToDevicePixels="True"
             d:DesignHeight="210"
             d:DesignWidth="210"
             mc:Ignorable="d">
    <UserControl.RenderTransform>
        <TransformGroup>
            <RotateTransform Angle="0" />
            <RotateTransform x:Name="RotateTransform" x:FieldModifier="private" />
        </TransformGroup>
    </UserControl.RenderTransform>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1"
              Grid.Column="0"
              d:DesignWidth="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="20*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="0,0,-1,0">
                <Rectangle Name="Rectangle4"
                           Height="2"
                           VerticalAlignment="Center"
                           Fill="Gray" />
            </Border>
            <Border Grid.Column="1" Margin="0,0,-1,0">
                <Rectangle Name="Rectangle3"
                           Height="4"
                           VerticalAlignment="Center"
                           Fill="Gray" />
            </Border>
            <Border Grid.Column="2" Margin="0,0,-1,0">
                <Rectangle Name="Rectangle2"
                           Height="6"
                           VerticalAlignment="Center"
                           Fill="Gray" />
            </Border>
            <Border Grid.Column="3" Margin="0,0,-1,0">
                <Rectangle Name="Rectangle1"
                           Height="8"
                           Margin="0"
                           VerticalAlignment="Center"
                           Fill="Gray" />
            </Border>
        </Grid>
        <Ellipse Name="Ellipse"
                 Grid.Row="1"
                 Grid.Column="1"
                 Fill="Gray"
                 Stretch="Fill" />
    </Grid>
</UserControl>
