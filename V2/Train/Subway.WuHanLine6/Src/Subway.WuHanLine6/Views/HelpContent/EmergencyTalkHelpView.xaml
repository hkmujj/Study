<UserControl x:Class="Subway.WuHanLine6.Views.HelpContent.EmergencyTalkHelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:Subway.WuHanLine6.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:WuHanViewModel}"
             d:DesignHeight="465"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="170*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="360*"/>
            <ColumnDefinition Width="120*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="乘客紧急通讯单元故障" HorizontalAlignment="Left" Style="{StaticResource HelpViewTextStyle}" Margin="15,0" ></TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="乘客紧急通讯单元激活，乘客要求紧急对讲。" HorizontalAlignment="Left" Style="{StaticResource HelpViewTextStyle}" Margin="15,0"  ></TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="2" Text="乘客紧急通讯单元激活，司机已打开通讯通道。" HorizontalAlignment="Left" Style="{StaticResource HelpViewTextStyle}"  Margin="15,0" ></TextBlock>
        <TextBlock Grid.Row="7" Grid.Column="2" Text="乘客紧急通讯单元正常，未激活。" HorizontalAlignment="Left" Style="{StaticResource HelpViewTextStyle}" Margin="15,0" ></TextBlock>
        <Image Grid.Row="1" Grid.Column="1" Source="{StaticResource 乘客紧急通讯单元故障}" ></Image>
        <Image Grid.Row="3" Grid.Column="1" Source="{StaticResource 乘客要求紧急对讲}" ></Image>
        <Image Grid.Row="5" Grid.Column="1" Source="{StaticResource 司机已打开通讯通道}" ></Image>
        <Image Grid.Row="7" Grid.Column="1" Source="{StaticResource 乘客紧急通讯单元正常}" ></Image>

    </Grid>
</UserControl>
