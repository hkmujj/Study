<UserControl x:Class="Subway.WuHanLine6.Views.Title.RunTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Subway.WuHanLine6.Views.Title"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Subway.WuHanLine6.ViewModels"
             d:DataContext="{d:DesignInstance viewModel:WuHanViewModel}"
             d:DesignHeight="60"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Content="{Binding Model.CurrentStateInterface.TitleName}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="1"
                Content="{StaticResource 网压}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="2"
                Content="{StaticResource 网流}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="3"
                Content="{StaticResource 速度}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="4"
                Content="{StaticResource 限速值}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="5"
                Content="{StaticResource 当前站}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="6"
                Content="{StaticResource 下一站}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="7"
                Content="{StaticResource 终点站}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.Column="8"
                Content="{Binding Model.TitleModel.Data}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="9"
                Command="{Binding Model.FaultInfoModel.Controller.NavigatorToCurrent}"
                Style="{StaticResource RunTitleTextStyle}">
            <Image Source="{StaticResource 故障报警}" Visibility="{Binding Model.FaultInfoModel.HasFault}" />
        </Button>
        <Button Grid.Row="1"
                Grid.Column="1"
                Background="{Binding Model.TitleModel.NetVoltage,
                                     Converter={StaticResource NetVoltageConverter},
                                     ConverterParameter=Back}"
                Content="{Binding Model.TitleModel.NetVoltage,
                                  Converter={StaticResource SymbolConverter},
                                  ConverterParameter=V}"
                Foreground="{Binding Model.TitleModel.NetVoltage,
                                     Converter={StaticResource NetVoltageConverter},
                                     ConverterParameter=For}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="2"
                Content="{Binding Model.TitleModel.NetCurrent,
                                  Converter={StaticResource SymbolConverter},
                                  ConverterParameter=A}"
                Foreground="{StaticResource TitleTextBrushOne}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="3"
                Content="{Binding Model.TitleModel.Speed,
                                  Converter={StaticResource SymbolConverter},
                                  ConverterParameter=km/h}"
                Foreground="{StaticResource TitleTextBrushOne}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="4"
                Content="{Binding Model.TitleModel.LimitSpeed,
                                  Converter={StaticResource SymbolConverter},
                                  ConverterParameter=km/h}"
                Foreground="{StaticResource TitleTextBrushTwo}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="5"
                Content="{Binding Model.TitleModel.CurrentStation}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="6"
                Content="{Binding Model.TitleModel.NextStation}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="7"
                Content="{Binding Model.TitleModel.EndStation}"
                Style="{StaticResource RunTitleTextStyle}" />
        <Button Grid.Row="1"
                Grid.Column="8"
                Content="{Binding Model.TitleModel.Time}"
                Style="{StaticResource RunTitleTextStyle}" />
    </Grid>
</UserControl>