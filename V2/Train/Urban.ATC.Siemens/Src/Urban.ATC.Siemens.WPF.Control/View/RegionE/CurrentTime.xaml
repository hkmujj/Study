<UserControl x:Class="Urban.ATC.Siemens.WPF.Control.View.RegionE.CurrentTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:Urban.ATC.Siemens.WPF.Control.ViewModel"
             d:DataContext="{d:DesignInstance model:RegionEViewModel}"
             d:DesignHeight="24"
             d:DesignWidth="120"
             mc:Ignorable="d">

    <Grid>
        <Viewbox>
            <TextBlock Name="LblTime"
                       Margin="15,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{Binding Path=LightGreyColor}"
                       Padding="0" />
        </Viewbox>
    </Grid>
</UserControl>