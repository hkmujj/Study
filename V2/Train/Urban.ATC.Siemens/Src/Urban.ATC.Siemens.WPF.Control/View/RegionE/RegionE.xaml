<UserControl x:Class="Urban.ATC.Siemens.WPF.Control.View.RegionE.RegionE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Urban.ATC.Siemens.WPF.Control.View.RegionE"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Urban.ATC.Siemens.WPF.Control.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:RegionEViewModel}"
             d:DesignHeight="96"
             d:DesignWidth="376"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120*" />
            <ColumnDefinition Width="120*" />
            <ColumnDefinition Width="136" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*" />
            <RowDefinition Height="24*" />
        </Grid.RowDefinitions>
        <local:Logo Grid.Row="1" Grid.Column="0" />
        <local:CurrentTime Grid.Row="1" Grid.Column="1" />
        <TextBlock Grid.Row="1"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="12"
                   FontWeight="Bold"
                   Foreground="{Binding Path=LightGreyColor}"
                   Text="v1.0.0" />
    </Grid>
</UserControl>