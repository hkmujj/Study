<UserControl x:Class="Urban.ATC.Siemens.WPF.Control.View.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Urban.ATC.Siemens.WPF.Control.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:Urban.ATC.Siemens.WPF.Control.ViewModel"
             d:DataContext="{d:DesignInstance viewmodel:SiemensData}"
             d:DesignHeight="600"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="0,150,0,0" Orientation="Vertical">

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="160"
                       FontWeight="Bold"
                       Foreground="{Binding RegionC.LogoColor}"
                       Text="SIEMENS" />
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="Trainguarad/MT" />

        </StackPanel>
        <TextBlock Margin="10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="20"
                   Foreground="White"
                   Text="Loading…" />

    </Grid>
</UserControl>
