<UserControl x:Class="Urban.ATC.Siemens.WPF.Control.View.ButtonRestScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:name="clr-namespace:Urban.ATC.Siemens.WPF.Control.Constant"
             xmlns:viewModel="clr-namespace:Urban.ATC.Siemens.WPF.Control.ViewModel"
             d:DataContext="{d:DesignInstance {x:Type viewModel:SiemensData}}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             Loaded="ButtonRestScreen_OnLoaded"
             mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="28" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="#c3c3c3" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="78*" />
            <RowDefinition Height="272*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Grid.ColumnSpan="5"
                  Margin="0,15,0,15"
                  Background="#25455D">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" Text="{Binding GeneralSrceen.ChinaTitle}" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Left"
                           Text="{Binding GeneralSrceen.EnglishTitle}" />
            </Grid>
            <Grid Grid.Column="5"
                  Margin="1"
                  Background="#515B6D">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding Menu.ChangPage}" CommandParameter="{x:Static name:ControlNames.DomainControl}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="运营" />
                <TextBlock Grid.Row="1"
                           FontSize="18"
                           Text="Operation" />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid x:Name="ButtonGrid" Margin="3,3,3,3">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle Grid.RowSpan="5"
                           Margin="-3"
                           Stroke="#C3C3C3"
                           StrokeThickness="2" />
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Right"
                       FontSize="60"
                       Foreground="Yellow"
                       Text="恢复中"
                       Visibility="{Binding ReactionModel.ButtonVisibility}" />
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           FontSize="28"
                           Foreground="Yellow"
                           Text="Reactivation In"
                           Visibility="{Binding ReactionModel.ButtonVisibility}" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="28"
                           Foreground="Yellow"
                           Text="Progress"
                           Visibility="{Binding ReactionModel.ButtonVisibility}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>