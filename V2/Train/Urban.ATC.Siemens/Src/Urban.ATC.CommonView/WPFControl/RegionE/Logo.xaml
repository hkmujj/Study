<UserControl x:Class="Urban.ATC.CommonView.WPFControl.RegionE.Logo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:Urban.ATC.Siemens.Model.ViewModel;assembly=Urban.ATC.Siemens.Model"
             d:DataContext="{d:DesignInstance model:RegionEViewModel}"
             d:DesignHeight="24"
             d:DesignWidth="120"
             mc:Ignorable="d">
    <Grid>
        <Label Margin="3"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="{Binding Path=Logo}"
               Foreground="{Binding Path=LogoColor}" />
    </Grid>
</UserControl>