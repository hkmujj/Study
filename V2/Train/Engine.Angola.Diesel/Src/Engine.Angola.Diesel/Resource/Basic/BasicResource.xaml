<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Boolean x:Key="BooleanTrue">True</system:Boolean>
    <system:Boolean x:Key="BooleanFalse">False</system:Boolean>

    <SolidColorBrush x:Key="ScreenBackground" Color="#424445" />
    <SolidColorBrush x:Key="DialWhite" Color="White" />
    <SolidColorBrush x:Key="Transparent" Color="Transparent" />
    <SolidColorBrush x:Key="DialRed" Color="Red" />
    <LinearGradientBrush x:Key="IndicatorLEDBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#6C6F72" />
        <GradientStop Offset="1" Color="#628F9C" />
    </LinearGradientBrush>

</ResourceDictionary>