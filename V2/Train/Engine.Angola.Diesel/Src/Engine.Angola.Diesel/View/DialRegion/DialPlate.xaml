<UserControl x:Class="Engine.Angola.Diesel.View.DialRegion.DialPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="RootControl"
             d:DesignHeight="50"
             d:DesignWidth="50"
             x:FieldModifier="private"
             mc:Ignorable="d">
    <Border>
        <Grid>
            <ed:Arc EndAngle="65"
                    StartAngle="-65"
                    Stretch="None"
                    Stroke="{StaticResource DialWhite}"
                    StrokeThickness="2" />

            <ed:Arc x:Name="LongWhite1"
                    EndAngle="-61"
                    StartAngle="-65"
                    Stretch="None"
                    Stroke="{StaticResource DialWhite}"
                    StrokeThickness="5.5"
                    x:FieldModifier="private" />

            <ed:Arc EndAngle="2"
                    StartAngle="-2"
                    Stretch="None"
                    Stroke="{StaticResource DialWhite}"
                    StrokeThickness="5.5" />

            <ed:Arc x:Name="LongWhite2"
                    EndAngle="65"
                    StartAngle="61"
                    Stretch="None"
                    Stroke="{StaticResource DialWhite}"
                    StrokeThickness="5.5"
                    x:FieldModifier="private" />

            <ed:Arc x:Name="ShortWhite1"
                    EndAngle="-31"
                    StartAngle="-34"
                    Stretch="None"
                    Stroke="{StaticResource DialWhite}"
                    StrokeThickness="4"
                    x:FieldModifier="private" />

            <ed:Arc x:Name="ShortWhite2"
                    EndAngle="33"
                    StartAngle="30"
                    Stretch="None"
                    Stroke="{StaticResource DialWhite}"
                    StrokeThickness="4"
                    x:FieldModifier="private" />

            <Grid Margin="3">
                <ed:Arc x:Name="Red1"
                        EndAngle="-32"
                        StartAngle="-65"
                        Stretch="None"
                        Stroke="{StaticResource DialRed}"
                        StrokeThickness="2"
                        x:FieldModifier="private" />

                <ed:Arc x:Name="Red2"
                        EndAngle="65"
                        StartAngle="32"
                        Stretch="None"
                        Stroke="{StaticResource DialRed}"
                        StrokeThickness="2"
                        x:FieldModifier="private" />
            </Grid>

            <Image Margin="2"
                   VerticalAlignment="Top"
                   RenderTransformOrigin="0.5,0.5"
                   Source="{StaticResource Pointer}"
                   Stretch="Fill">
                <Image.RenderTransform>
                    <RotateTransform Angle="{Binding ElementName=RootControl, Path=Value, Converter={StaticResource DialValutToAngleConverter}}" />
                </Image.RenderTransform>
            </Image>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition />
                    <RowDefinition Height="2.5*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="1"
                       Grid.Column="1"
                       Source="{Binding ImageSource,
                                        ElementName=RootControl}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
