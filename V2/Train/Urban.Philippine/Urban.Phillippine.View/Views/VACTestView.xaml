<UserControl x:Class="Urban.Phillippine.View.Views.VACTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Urban.Phillippine.View.Interface.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:IPhilippineViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Margin="70,50,70,0">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../Resource/PhilippineResource.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <RadioButton Grid.Row="0"
                     Grid.Column="0"
                     Command="{Binding VACTest.TestCommand}"
                     CommandParameter="1"
                     Content="VAC 25% Cool"
                     Style="{StaticResource InstructionViewRadioStyle}" />
        <RadioButton Grid.Row="0"
                     Grid.Column="1"
                     Command="{Binding VACTest.TestCommand}"
                     CommandParameter="2"
                     Content="VAC 50% Cool"
                     Style="{StaticResource InstructionViewRadioStyle}" />
        <RadioButton Grid.Row="0"
                     Grid.Column="2"
                     Command="{Binding VACTest.TestCommand}"
                     CommandParameter="3"
                     Content="VAC 75% Cool"
                     Style="{StaticResource InstructionViewRadioStyle}" />
        <RadioButton Grid.Row="0"
                     Grid.Column="3"
                     Command="{Binding VACTest.TestCommand}"
                     CommandParameter="4"
                     Content="VAC 100% Cool"
                     Style="{StaticResource InstructionViewRadioStyle}" />
        <RadioButton Grid.Row="1"
                     Grid.Column="0"
                     Command="{Binding VACTest.TestCommand}"
                     CommandParameter="5"
                     Content="Stop"
                     Style="{StaticResource InstructionViewRadioStyle}" />
    </Grid>
</UserControl>
