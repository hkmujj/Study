                    Background="Red"
                    BorderBrush="Green"
                    BorderThickness="3">
                <TextBlock Style="{StaticResource TrainNumTextStyle}" Text="00" />
            </Border>
            <Ellipse Width="10"
                     Height="10"
                     Margin="8,25,72,30"
                     Fill="Black"
                     Stroke="Black"
                     Visibility="{Binding Model.TraiModel.MC00,
                                          Converter={StaticResource VOBCtatusToVisibilityConverter}}" />
