        <Grid Grid.Column="1">
            <Path Data="M0,20 L25,0 90,0 90,65 35,65 0,47 0,20"
                  Fill="{StaticResource TrainBackground}"
                  Stroke="White"
                  StrokeThickness="3" />
            <Path Data="M25,0 L90,0 90,2 25,2" Fill="White" />
            <Path Data="M89,2 L90,2 90,65 89,65" Fill="White" />
