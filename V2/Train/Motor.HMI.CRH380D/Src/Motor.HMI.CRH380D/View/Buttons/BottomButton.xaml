<UserControl x:Class="Motor.HMI.CRH380D.View.Buttons.BottomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Motor.HMI.CRH380D.View.Buttons"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="60"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="{StaticResource Gray2Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Column="0">
            <Button Command="{Binding Model.StateInterface.BtnB1.ClickCommand}"
                    Content="{Binding Path=Model.StateInterface.BtnB1.Content}"
                    FontSize="18"
                    IsEnabled="{Binding Path=Model.StateInterface.BtnB1.IsEnable}"
                    Style="{StaticResource WarringSumMenuBtnStyle}"
                    Tag="{StaticResource Gray2Color}"
                    Visibility="{Binding Path=Model.StateInterface.BtnB1.Content,
                                         Converter={StaticResource ButtonVisibilityConverter}}" />
        </Grid>
