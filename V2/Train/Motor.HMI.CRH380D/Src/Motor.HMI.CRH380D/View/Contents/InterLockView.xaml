<UserControl x:Class="Motor.HMI.CRH380D.View.Contents.InterLockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Motor.HMI.CRH380D.View.Common"
             xmlns:constant="clr-namespace:Motor.HMI.CRH380D.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             xmlns:viewModel="clr-namespace:Motor.HMI.CRH380D.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
             d:DesignHeight="420"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="{StaticResource Gray2Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*" />
            <RowDefinition Height="65*" />
            <RowDefinition Height="11*" />
            <RowDefinition Height="305*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Style="{StaticResource TitleTextStyle}" Text="警报汇总" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <common:TrainCommon1 />
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid Margin="175,10,173,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="191*" />
                    <ColumnDefinition Width="70*" />
                    <ColumnDefinition Width="191*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="{StaticResource Gray1Background}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="49*" />
                        <RowDefinition Height="82*" />
                        <RowDefinition Height="82*" />
                        <RowDefinition Height="72*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextForeground}"
                               Text="牵引阻断" />
                    <Button Grid.Row="1"
                            Margin="44,9,46,9"
                            Content="可旁通"
                            Style="{StaticResource InterLockBtnStyle}"
                            Tag="{Binding Model.InterLockModel.Btn1,
                                          Converter={StaticResource ButtonColorStateToColorConverter}}" />
                    <Button Grid.Row="2"
                            Margin="44,9,46,9"
                            Content="阻断"
                            Style="{StaticResource InterLockBtnStyle}"
                            Tag="{Binding Model.InterLockModel.Btn2,
                                          Converter={StaticResource ButtonColorStateToColorConverter}}" />
                </Grid>
                <Grid Grid.Column="2" Background="{StaticResource Gray1Background}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="49*" />
                        <RowDefinition Height="82*" />
                        <RowDefinition Height="82*" />
                        <RowDefinition Height="72*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1"
                            Margin="44,9,46,9"
                            Content="紧急制动"
                            Style="{StaticResource InterLockBtnStyle}"
                            Tag="{Binding Model.InterLockModel.Btn3,
                                          Converter={StaticResource ButtonColorStateToColorConverter}}" />
                    <Button Grid.Row="2"
                            Margin="44,9,46,9"
                            Content="限速"
                            Style="{StaticResource InterLockBtnStyle}"
                            Tag="{Binding Model.InterLockModel.Btn4,
                                          Converter={StaticResource ButtonColorStateToColorConverter}}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
