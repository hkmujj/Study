<UserControl x:Class="Motor.HMI.CRH380D.View.Contents.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Motor.HMI.CRH380D.View.Common"
             xmlns:constant="clr-namespace:Motor.HMI.CRH380D.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             xmlns:viewModel="clr-namespace:Motor.HMI.CRH380D.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
             d:DesignHeight="420"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="{StaticResource Gray2Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*" />
            <RowDefinition Height="65*" />
            <RowDefinition Height="11*" />
            <RowDefinition Height="296*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Style="{StaticResource TitleTextStyle}" Text="主菜单" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <common:TrainCommon1 />
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28*" />
                <ColumnDefinition Width="142*" />
                <ColumnDefinition Width="23*" />
                <ColumnDefinition Width="250*" />
                <ColumnDefinition Width="23*" />
                <ColumnDefinition Width="142*" />
                <ColumnDefinition Width="23*" />
                <ColumnDefinition Width="142*" />
                <ColumnDefinition Width="23*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="{StaticResource Gray1Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*" />
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="21*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="78*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1"
                            Command="{Binding Model.StateInterface.BtnB11.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB11.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                    <Button Grid.Row="2"
                            Command="{Binding Model.StateInterface.BtnB12.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB12.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                    <Button Grid.Row="3"
                            Command="{Binding Model.StateInterface.BtnB13.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB13.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />

                </Grid>
            </Grid>
            <Grid Grid.Column="3" Background="{StaticResource Gray1Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="99*" />
                    <ColumnDefinition Width="13*" />
                    <ColumnDefinition Width="99*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="78*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1"
                            Command="{Binding Model.StateInterface.BtnB15.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB15.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                    <Button Grid.Row="2"
                            Command="{Binding Model.StateInterface.BtnB16.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB16.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                    <Button Grid.Row="3"
                            Command="{Binding Model.StateInterface.BtnB17.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB17.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                </Grid>
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="78*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1"
                            Command="{Binding Model.StateInterface.BtnB19.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB19.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                    <Button Grid.Row="2"
                            Command="{Binding Model.StateInterface.BtnB20.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB20.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                </Grid>
            </Grid>
            <Grid Grid.Column="5" Background="{StaticResource Gray1Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*" />
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="21*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="78*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1"
                            Command="{Binding Model.StateInterface.BtnB23.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB23.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                </Grid>
            </Grid>
            <Grid Grid.Column="7"
                  Grid.ColumnSpan="2"
                  Margin="10,0,13,0"
                  Background="{StaticResource Gray1Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*" />
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="21*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="65*" />
                        <RowDefinition Height="78*" />
                    </Grid.RowDefinitions>
                    <Button Grid.Row="1"
                            Command="{Binding Model.StateInterface.BtnB27.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB27.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                    <Button Grid.Row="2"
                            Command="{Binding Model.StateInterface.BtnB28.ClickCommand}"
                            Content="{Binding Path=Model.StateInterface.BtnB28.Content,
                                              Converter={StaticResource ButtonContentConverter},
                                              Mode=OneWay}"
                            FontSize="18"
                            Style="{StaticResource MainMenuBtnStyle}"
                            Tag="{StaticResource Gray2Color}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
