<UserControl x:Class="Motor.HMI.CRH380D.View.Contents.StationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:Motor.HMI.CRH380D.View.Common"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Motor.HMI.CRH380D.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
             d:DesignHeight="420"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="{StaticResource Gray2Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="65*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="212*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Style="{StaticResource TitleTextStyle}" Text="车站" />
        </Grid>
        <Grid Grid.Row="2"
              Height="20"
              VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="22*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="21*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="27*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="22*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="27*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="120*" />
            </Grid.ColumnDefinitions>
            <ToggleButton Grid.Column="1"
                          Content="{Binding Model.StationModel.Car0Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="3"
                          Content="{Binding Model.StationModel.Car7Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="5"
                          Content="{Binding Model.StationModel.Car7Station2.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="7"
                          Content="{Binding Model.StationModel.Car6Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="9"
                          Content="{Binding Model.StationModel.Car6Station2.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="11"
                          Content="{Binding Model.StationModel.Car5Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="13"
                          Content="{Binding Model.StationModel.Car5Station2.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="15"
                          Content="{Binding Model.StationModel.Car4Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="19"
                          Content="{Binding Model.StationModel.Car3Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="21"
                          Content="{Binding Model.StationModel.Car3Station2.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="23"
                          Content="{Binding Model.StationModel.Car2Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="25"
                          Content="{Binding Model.StationModel.Car2Station2.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="27"
                          Content="{Binding Model.StationModel.Car1Station1.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
        </Grid>
        <Grid Grid.Row="3">
            <common:TrainCommon3 DataContext="{Binding Model.StationModel.TrainModel}" />
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="62*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="22*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="21*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="27*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="22*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="27*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="120*" />
            </Grid.ColumnDefinitions>
            <ToggleButton Grid.Column="1"
                          Content="{Binding Model.StationModel.Car0Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="3"
                          Content="{Binding Model.StationModel.Car7Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="5"
                          Content="{Binding Model.StationModel.Car7Station4.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="7"
                          Content="{Binding Model.StationModel.Car6Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="9"
                          Content="{Binding Model.StationModel.Car6Station4.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="11"
                          Content="{Binding Model.StationModel.Car5Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="13"
                          Content="{Binding Model.StationModel.Car5Station4.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="15"
                          Content="{Binding Model.StationModel.Car4Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="19"
                          Content="{Binding Model.StationModel.Car3Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="21"
                          Content="{Binding Model.StationModel.Car3Station4.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="23"
                          Content="{Binding Model.StationModel.Car2Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="25"
                          Content="{Binding Model.StationModel.Car2Station4.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
            <ToggleButton Grid.Column="27"
                          Content="{Binding Model.StationModel.Car1Station3.State}"
                          IsEnabled="False"
                          Style="{StaticResource StationBtnStyle}" />
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="90*" />
                <ColumnDefinition Width="70*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk0,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="2"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk7,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="3"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk6,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="4"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk5,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="5"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk4,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="6"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk3,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="7"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk2,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
            <Image Grid.Column="8"
                   Width="20"
                   Height="20"
                   Source="{Binding Model.StationModel.PassengerTalk1,
                                    Converter={StaticResource BooleanToPassengerTalkConverter}}" />
        </Grid>
    </Grid>
</UserControl>

