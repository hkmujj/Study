<UserControl x:Class="Motor.HMI.CRH380D.View.Title.TitleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Motor.HMI.CRH380D.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
             d:DesignHeight="60"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="{StaticResource Gray1Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*" />
            <ColumnDefinition Width="204*" />
            <ColumnDefinition Width="127*" />
            <ColumnDefinition Width="149*" />
            <ColumnDefinition Width="73*" />
            <ColumnDefinition Width="74*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="19"
                       Foreground="White"
                       Text="{Binding Model.TitleModel.Data}" />
        </Grid>
        <Grid Grid.Column="1">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="32"
                       Foreground="White"
                       Text="{Binding Model.TitleModel.Time}" />
        </Grid>
        <Grid Grid.Column="2">
            <TextBlock Margin="0,9,14,9"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="32"
                       Foreground="White"
                       Text="{Binding Model.TitleModel.Speed}" />
        </Grid>
        <Grid Grid.Column="3">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="19"
                       Foreground="White"
                       Text="公里/小时" />
        </Grid>
        <Grid Grid.Column="4">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="32"
                       Foreground="White"
                       Text="{Binding Model.TitleModel.Voltage}" />
        </Grid>
        <Grid Grid.Column="5">
            <TextBlock HorizontalAlignment="left"
                       VerticalAlignment="Center"
                       FontSize="19"
                       Foreground="White"
                       Text="千伏" />
        </Grid>
    </Grid>
</UserControl>
