                        <Ellipse Width="10"
                                 Height="10"
                                 Margin="15,25,15,5"
                                 Fill="{TemplateBinding Foreground}" />
                        <Path Data="M19,40 L21,40 21,35 19,35" Fill="{TemplateBinding Foreground}" />
                    </Grid>
