<UserControl x:Class="Motor.HMI.CRH380BG.View.Contents.Maintain.TractionHandleDetectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Motor.HMI.CRH380BG.ViewModel"
             Background="{StaticResource Motor.HMI.CRH380BG.ContentBackgroundBrush}"
             d:DataContext="{d:DesignInstance viewModel:CRH380BGViewModel}"
             d:DesignHeight="495"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="26*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0"
                      Grid.Column="0"
                      RowSpan="13">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.VerticalRectangle}" />
                </Grid>

                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="32*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">检测值</TextBlock>
                    </Grid>
                </Grid>

                <Grid Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="18*" />
                        <ColumnDefinition Width="14*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">通道1</TextBlock>
                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBlock Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">通道2</TextBlock>
                    </Grid>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">100</TextBlock>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="0">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>

                
                <Grid Grid.Row="4"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="4" Grid.Column="1">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">80</TextBlock>
                </Grid>
                <Grid Grid.Row="5" Grid.Column="0">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="6"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="6" Grid.Column="1">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">60</TextBlock>
                </Grid>
                <Grid Grid.Row="7" Grid.Column="0">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="8"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="8" Grid.Column="1">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">40</TextBlock>
                </Grid>
                <Grid Grid.Row="9" Grid.Column="0">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="10"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="10" Grid.Column="1">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">20</TextBlock>
                </Grid>
                <Grid Grid.Row="11" Grid.Column="0">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="12"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Rectangle Style="{StaticResource Motor.HMI.CRH380BG.HorizontalRectangle}" />
                </Grid>
                <Grid Grid.Row="12" Grid.Column="1">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">0</TextBlock>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="23*" />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="23*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Border Margin="0,10,23,10"
                            Background="{Binding Path=Domain.Model.MaintainModel.TractionHandleDetectionModel.TractionHandleDetectionPipe1State,
                                                 Converter={StaticResource Motor.HMI.CRH380BG.PipeState}}"
                            BorderBrush="White"
                            BorderThickness="1" />
                </Grid>
                <Grid Grid.Column="3">
                    <Border Margin="0,10,23,10"
                            Background="{Binding Path=Domain.Model.MaintainModel.TractionHandleDetectionModel.TractionHandleDetectionPipe2State,
                                                 Converter={StaticResource Motor.HMI.CRH380BG.PipeState}}"
                            BorderBrush="White"
                            BorderThickness="1" />
                </Grid>
                <Grid Grid.Column="4">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">%</TextBlock>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="26*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="3"
                      Grid.RowSpan="10"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="27*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="27*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <ProgressBar Maximum="100"
                                     Style="{StaticResource Motor.HMI.CRH380BG.MainViewProgressBarStyle}"
                                     Value="{Binding Path=Domain.Model.MaintainModel.TractionHandleDetectionModel.TractionHandleDetectionPipe1ProgressBar}" />
                    </Grid>

                    <Grid Grid.Column="3">
                        <ProgressBar Maximum="100"
                                     Style="{StaticResource Motor.HMI.CRH380BG.MainViewProgressBarStyle}"
                                     Value="{Binding Path=Domain.Model.MaintainModel.TractionHandleDetectionModel.TractionHandleDetectionPipe2ProgressBar}" />
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="23*" />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="23*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Border Margin="0,10,23,10"
                            Background="{Binding Path=Domain.Model.MaintainModel.TractionHandleDetectionModel.TractionHandleDetectionPipe1State,
                                                 Converter={StaticResource Motor.HMI.CRH380BG.PipeState}}"
                            BorderBrush="White"
                            BorderThickness="1" />
                </Grid>
                <Grid Grid.Column="3">
                    <Border Margin="0,10,23,10"
                            Background="{Binding Path=Domain.Model.MaintainModel.TractionHandleDetectionModel.TractionHandleDetectionPipe2State,
                                                 Converter={StaticResource Motor.HMI.CRH380BG.PipeState}}"
                            BorderBrush="White"
                            BorderThickness="1" />
                </Grid>
                <Grid Grid.Column="4">
                    <TextBlock HorizontalAlignment="Right" Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">%</TextBlock>
                </Grid>
            </Grid>
        </Grid>
       

        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="47*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="46*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Border BorderBrush="White" BorderThickness="1" />
                </Grid>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="20*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0">
                        <Border Margin="12,10"
                                Background="Black"
                                BorderBrush="White"
                                BorderThickness="1" />
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <TextBlock Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">通道被断开</TextBlock>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Border Margin="12,10"
                                Background="Yellow"
                                BorderBrush="White"
                                BorderThickness="1" />
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <TextBlock Style="{StaticResource Motor.HMI.CRH380BG.NumberOneCarVersionTextStyle}">通道已接通</TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
