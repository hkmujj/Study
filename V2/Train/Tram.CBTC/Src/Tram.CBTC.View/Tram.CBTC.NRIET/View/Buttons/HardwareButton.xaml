<UserControl
    x:Class="Tram.CBTC.NRIET.View.Buttons.HardwareButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Tram.CBTC.NRIET.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="100"
    d:DesignWidth="800"
    Background="{StaticResource Tram.CBTC.Nriet.Brush.Black}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Content="{StaticResource Tram.CBTC.Nriet.String.1}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Content="{StaticResource Tram.CBTC.Nriet.String.2}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Content="{StaticResource Tram.CBTC.Nriet.String.3}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Content="{StaticResource Tram.CBTC.Nriet.String.4}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="4"
            Content="{StaticResource Tram.CBTC.Nriet.String.5}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="5"
            Content="{StaticResource Tram.CBTC.Nriet.String.6}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="6"
            Content="{StaticResource Tram.CBTC.Nriet.String.7}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="7"
            Content="{StaticResource Tram.CBTC.Nriet.String.8}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="8"
            Content="{StaticResource Tram.CBTC.Nriet.String.9}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
        <Button
            Grid.Row="1"
            Grid.Column="9"
            Content="{StaticResource Tram.CBTC.Nriet.String.0}"
            Style="{StaticResource Tram.CBTC.Nriet.HardwareBtnStyle}" />
    </Grid>
</UserControl>
