<UserControl
    x:Class="Tram.CBTC.NRIET.View.Contents.Main.RegionDeviceStatus.Device"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Tram.CBTC.NRIET.ViewModel"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    d:DesignHeight="55"
    d:DesignWidth="75"
    mc:Ignorable="d">
    <Viewbox Stretch="Fill">
        <Grid Width="75" Height="55">
            <Border
                Margin="0.5"
                Background="LawnGreen"
                BorderBrush="White"
                BorderThickness="2"
                CornerRadius="4">
                <Grid>
                    <TextBlock x:Name="TextBlockDeviceTitle" Style="{StaticResource Tram.CBTC.Nriet.Style.Text.WhiteText3}" />
                    <Border
                        x:Name="BorderRedundancyDeviceFault"
                        BorderBrush="OrangeRed"
                        BorderThickness="3"
                        CornerRadius="1"
                        Visibility="Hidden" />
                    <Path
                        x:Name="PathDeviceFault1"
                        Data="M 4,4 L 67,47"
                        Stroke="OrangeRed"
                        StrokeThickness="3"
                        Visibility="Hidden" />
                    <Path
                        x:Name="PathDeviceFault2"
                        Data="M 3,46 L 67,4"
                        Stroke="OrangeRed"
                        StrokeThickness="3"
                        Visibility="Hidden" />
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
