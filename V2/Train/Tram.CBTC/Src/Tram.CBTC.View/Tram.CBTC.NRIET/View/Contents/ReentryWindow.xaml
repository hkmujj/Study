<UserControl
    x:Class="Tram.CBTC.NRIET.View.Contents.ReentryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Tram.CBTC.NRIET.ViewModel"
    Width="550"
    Height="330"
    d:DataContext="{d:DesignInstance viewModel:DomainViewModel}"
    Background="{StaticResource Tram.CBTC.Nriet.StartView.BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <Border Background="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*" />
                        <ColumnDefinition Width="0.1*" />
                        <ColumnDefinition Width="0.85*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="黑体"
                        FontSize="22"
                        Text="信息" />
                </Grid>
            </Border>
        </Grid>
        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="114*" />
                <ColumnDefinition Width="57*" />
                <ColumnDefinition Width="155*" />
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="150*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="宋体"
                FontSize="22"
                Text="折返&lt;" />
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="宋体"
                FontSize="22"
                >
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource Tram.CBTC.Nriet.Converter.ReturnInfoToTextConvert}">
                        <Binding Path="CBTC.RoadInfo.ReturnState" />
                        <Binding Path="CBTC.RoadInfo.StationInfo" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="宋体"
                FontSize="22"
                Text="&gt;" />
        </Grid>
        <Grid Row="4" RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*" />
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <Grid Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.65*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="1"
                        Background="Gray"
                        Content="{StaticResource Tram.CBTC.Nriet.String.Ensure}"
                        FontFamily="黑体"
                        FontSize="20"
                        Foreground="Black" 
                        Command="{Binding Path=Controller.ReentryWindowConfirmCommand}"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
