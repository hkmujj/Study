<UserControl x:Class="LightRail.HMI.SZLHLF.View.Common.AirConditionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LightRail.HMI.SZLHLF.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:SZLHLFViewModel}"
             d:DesignHeight="500"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="24*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="21*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="26*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,0,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="模式选择" />
                    <RadioButton Grid.Column="1"
                                 Content="自动模式"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllModelSelects[0].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="2"
                                 Content="通风模式"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllModelSelects[1].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="3"
                                 Content="关闭预冷"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllModelSelects[2].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="4"
                                 Content="制冷测试"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllModelSelects[3].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />

                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,0,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="司机室风速" />
                    <RadioButton Grid.Column="1"
                                 Content="强风"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllWindSpeedSet[0].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="2"
                                 Content="中风"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllWindSpeedSet[1].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="3"
                                 Content="弱风"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllWindSpeedSet[2].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,0,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="新风量调节" />
                    <RadioButton Grid.Column="1"
                                 Content="Ⅰ档"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllNewAirValueSet[0].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="2"
                                 Content="Ⅱ档"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllNewAirValueSet[1].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="3"
                                 Content="Ⅲ档"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllNewAirValueSet[2].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                    <RadioButton Grid.Column="4"
                                 Content="Ⅳ档"
                                 IsChecked="{Binding TrainInfoViewModel.AirConditionModel.AllNewAirValueSet[3].IsChecked,
                                                     Mode=TwoWay,
                                                     NotifyOnSourceUpdated=True,
                                                     NotifyOnTargetUpdated=True}"
                                 Style="{StaticResource RadioBtnStyle}" />
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,0,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="室外温度" />
                    <Border Grid.Column="1"
                            Margin="1,0,-1,0"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.TemperatureOut}" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="72*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="9*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*" />
                    <RowDefinition />
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="6*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="0,0,10,0"
                            Background="#FF00557F"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2"
                            CornerRadius="30" />
                    <Grid Grid.Column="1">
                        <Image Width="35"
                               Height="35"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="{Binding TrainInfoViewModel.AirConditionModel.Car1Location1AirConditionUnit.State,
                                                Converter={StaticResource AirConditionConverter}}" />
                    </Grid>
                    <Border Grid.Column="2"
                            Margin="0,0,1,0"
                            Background="#FF00557F"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2" />
                    <TextBlock Grid.Column="2"
                               Style="{StaticResource TextStyle}"
                               Text="Mc1" />
                    <Border Grid.Column="3"
                            Background="#FF00557F"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2">
                        <Image Width="35"
                               Height="35"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Source="{Binding TrainInfoViewModel.AirConditionModel.Car2Location1AirConditionUnit.State,
                                                Converter={StaticResource AirConditionConverter}}" />
                    </Border>
                    <TextBlock Grid.Column="3"
                               Style="{StaticResource TextStyle}"
                               Text="T" />
                    <Border Grid.Column="4"
                            Background="#FF00557F"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2">
                        <Image Width="35"
                               Height="35"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Source="{Binding TrainInfoViewModel.AirConditionModel.Car3Location1AirConditionUnit.State,
                                                Converter={StaticResource AirConditionConverter}}" />
                    </Border>
                    <TextBlock Grid.Column="4"
                               Style="{StaticResource TextStyle}"
                               Text="M" />
                    <Border Grid.Column="5"
                            Grid.ColumnSpan="2"
                            Margin="45,0,0,0"
                            Background="#FF00557F"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2"
                            CornerRadius="30" />
                    <Border Grid.Column="5"
                            Background="#FF00557F"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2" />
                    <TextBlock Grid.Column="5"
                               Style="{StaticResource TextStyle}"
                               Text="Mc2" />
                    <Grid Grid.Column="6">
                        <Image Width="35"
                               Height="35"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="{Binding TrainInfoViewModel.AirConditionModel.Car4Location1AirConditionUnit.State,
                                                Converter={StaticResource AirConditionConverter}}" />
                    </Grid>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*" />
                        <ColumnDefinition Width="17*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="17*" />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,1,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="空调模式" />
                    <Border Grid.Column="1"
                            Margin="0,0,1,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.AirModelState1,
                                              Converter={StaticResource AirModelStateConverter}}" />
                    <Border Grid.Column="2"
                            Margin="0,0,1,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.AirModelState2,
                                              Converter={StaticResource AirModelStateConverter}}" />
                    <Border Grid.Column="3"
                            Margin="0,0,1,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.AirModelState3,
                                              Converter={StaticResource AirModelStateConverter}}" />
                    <Border Grid.Column="4"
                            Margin="0,0,0,1"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.AirModelState4,
                                              Converter={StaticResource AirModelStateConverter}}" />
                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="14*" />
                        <ColumnDefinition Width="17*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="17*" />
                    </Grid.ColumnDefinitions>
                    <Border Margin="0,0,1,0"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="温度" />
                    <Border Grid.Column="1"
                            Margin="0,0,1,0"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.Temperature1}" />
                    <Border Grid.Column="2"
                            Margin="0,0,1,0"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.Temperature2}" />
                    <Border Grid.Column="3"
                            Margin="0,0,1,0"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.Temperature3}" />
                    <Border Grid.Column="4"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Column="4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.Temperature4}" />
                </Grid>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="18*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Grid.Row="1" Background="#FFB3B3AA" />
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Style="{StaticResource BlackTextStyle}"
                           Text="温度调节"
                           TextWrapping="Wrap" />
            </Grid>
            <Grid Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="18*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button Command="{Binding TrainInfoViewModel.AirConditionModel.AirConditionController.SetTemPeratureCommand}"
                            CommandParameter="BtnUp"
                            Content="{StaticResource UpAdjustBitmapImage}"
                            Style="{StaticResource BlackImageButtonStyle}" />
                    <Border Grid.Row="1"
                            Width="60"
                            Height="40"
                            Background="#FFB3B3AA"
                            CornerRadius="5" />
                    <TextBlock Grid.Row="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding TrainInfoViewModel.AirConditionModel.TemperatureAdjust}"
                               TextWrapping="Wrap" />
                    <Button Grid.Row="2"
                            Command="{Binding TrainInfoViewModel.AirConditionModel.AirConditionController.SetTemPeratureCommand}"
                            CommandParameter="BtnDown"
                            Content="{StaticResource DownAdjustBitmapImage}"
                            Style="{StaticResource BlackImageButtonStyle}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
