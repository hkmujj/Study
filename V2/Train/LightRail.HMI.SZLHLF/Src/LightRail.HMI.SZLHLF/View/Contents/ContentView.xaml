<UserControl x:Class="LightRail.HMI.SZLHLF.View.Contents.ContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LightRail.HMI.SZLHLF.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:SZLHLFViewModel}"
             d:DesignHeight="50"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Margin="0,0,3,0"
              Background="#FFB3B3AA">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Margin="0,3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{StaticResource NextStation}" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.NextStation}" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Margin="8,3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="列车号" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   Style="{StaticResource BlackTextStyle}"
                                   Text="T" />
                        <TextBlock Grid.Column="1"
                                   Margin="3,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   Style="{StaticResource BlackTextStyle}"
                                   Text="{Binding OtherViewModel.Model.TrainNum,
                                                  StringFormat={}{0:000}}" />
                    </Grid>
                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="电流" />

                    <TextBlock Grid.Column="3"
                               Margin="3,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.Electricity}" />
                    <TextBlock Grid.Column="3"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Style="{StaticResource BlackTextStyle}"
                               Text="A" />

                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1"
              Margin="0,0,3,0"
              Background="#FFB3B3AA">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.CurViewTitle}" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="电压" />
                    <TextBlock Grid.Column="1"
                               Margin="3,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.Voltage}" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Style="{StaticResource BlackTextStyle}"
                               Text="V" />

                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="速度" />

                    <TextBlock Grid.Column="3"
                               Margin="3,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.Speed,
                                              StringFormat={}{0:F0}}" />
                    <TextBlock Grid.Column="3"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Style="{StaticResource BlackTextStyle}"
                               Text="km/h" />

                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="2"
              Margin="0,0,3,0"
              Background="#FFB3B3AA">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="终点站" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.EndStation}" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Style="{StaticResource BlackTextStyle}"
                               Text="日期" />
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.CurrentTime,
                                              Converter={StaticResource TimeConverter},
                                              ConverterParameter=1,
                                              Mode=OneWay}" />
                    <TextBlock Grid.Row="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Style="{StaticResource BlackTextStyle}"
                               Text="时间" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Style="{StaticResource BlackTextStyle}"
                               Text="{Binding OtherViewModel.Model.CurrentTime,
                                              Converter={StaticResource TimeConverter},
                                              ConverterParameter=2,
                                              Mode=OneWay}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
