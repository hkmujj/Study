<UserControl x:Class="LightRail.HMI.SZLHLF.View.Contents.RootContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModel="clr-namespace:LightRail.HMI.SZLHLF.ViewModel"
             xmlns:constance="clr-namespace:LightRail.HMI.SZLHLF.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:events="clr-namespace:LightRail.HMI.SZLHLF.Event"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewSource="clr-namespace:LightRail.HMI.SZLHLF.Model.ViewSource"
             d:DataContext="{d:DesignInstance ViewModel:SZLHLFViewModel}"
             d:DesignHeight="500"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="90*" />
            </Grid.ColumnDefinitions>
            <Grid Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="8*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ProgressBar Maximum="100"
                                 Style="{StaticResource TractionProgressBarOrdinaryStyle}"
                                 Value="{Binding Path=TrainInfoViewModel.Model.TractionPercent}" />
                    <ItemsControl Grid.Column="1"
                                  ItemsSource="{Binding Source={x:Static viewSource:MainMax100Scale.Instance},
                                                        Path=TargitDistanceScaleItems}"
                                  Style="{StaticResource ItemControlMainDegreeStyle}" />
                    <TextBlock Grid.Column="1"
                               Margin="-5,0,0,-7"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               FontSize="18"
                               Style="{StaticResource WhiteTextStyle}"
                               Text="0" />
                    <ItemsControl Grid.Column="1"
                                  ItemsSource="{Binding Source={x:Static viewSource:MainMax100Scale.Instance},
                                                        Path=TargitDistanceScaleItems}"
                                  Style="{StaticResource ItemControlMainDegreeStyle1}" />
                    <ProgressBar Grid.Row="1"
                                 Maximum="100"
                                 RenderTransformOrigin="0.5,0.5"
                                 Style="{StaticResource BrakeProgressBarOrdinaryStyle}"
                                 Value="{Binding Path=TrainInfoViewModel.Model.BrakePercent}">
                        <ProgressBar.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="-180" />
                            </TransformGroup>
                        </ProgressBar.RenderTransform>
                    </ProgressBar>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Style="{StaticResource WhiteTextStyle}"
                               Text="{StaticResource PredictResidueMileage}" />
                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Style="{StaticResource WhiteTextStyle}"
                               Text="{Binding TrainInfoViewModel.Model.ResidueMileage}" />
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="130*" />
                        <ColumnDefinition Width="14*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="9*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="1" Source="{Binding TrainInfoViewModel.Model.TurnLeftLight, Converter={StaticResource TurnLeftLightConverter}}" />
                    </Grid>
                    <Border Grid.Column="3"
                            Background="Black"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="12*" />
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="12*" />
                                <ColumnDefinition Width="19*" />
                                <ColumnDefinition Width="12*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8*" />
                                </Grid.ColumnDefinitions>
                                <ProgressBar Margin="0,10,0,0"
                                             Maximum="100"
                                             Style="{StaticResource ProgressStyle}"
                                             Value="{Binding Path=TrainInfoViewModel.Model.RemainElectricQuantity1}" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="4*" />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="1"
                                           Margin="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding Path=TrainInfoViewModel.Model.Car1BatteryUnit.State,
                                                            Converter={StaticResource BatteryStateConverter}}" />
                                    <Border Grid.Row="2"
                                            Margin="2,0,2,1"
                                            Background="#FFB3B3AA" />
                                    <TextBlock Grid.Row="2"
                                               Margin="3,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="{Binding Path=TrainInfoViewModel.Model.PowerSourceTemperature1}" />
                                    <TextBlock Grid.Row="2"
                                               Margin="0,0,5,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="℃" />
                                    <Border Grid.Row="3"
                                            Margin="2,0,0,1"
                                            Background="#FFB3B3AA" />
                                    <TextBlock Grid.Row="3"
                                               Margin="3,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="{Binding Path=TrainInfoViewModel.Model.RemainElectricQuantity1}" />
                                    <TextBlock Grid.Row="3"
                                               Margin="0,0,3,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="%" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8*" />
                                </Grid.ColumnDefinitions>
                                <ProgressBar Margin="0,10,0,0"
                                             Maximum="100"
                                             Style="{StaticResource ProgressStyle}"
                                             Value="{Binding Path=TrainInfoViewModel.Model.RemainElectricQuantity2}" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="4*" />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="1"
                                           Margin="2,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding TrainInfoViewModel.Model.Car2BatteryUnit.State,
                                                            Converter={StaticResource BatteryStateConverter}}" />
                                    <Border Grid.Row="2"
                                            Margin="2,0,2,1"
                                            Background="#FFB3B3AA" />
                                    <TextBlock Grid.Row="2"
                                               Margin="3,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="{Binding Path=TrainInfoViewModel.Model.PowerSourceTemperature2}" />
                                    <TextBlock Grid.Row="2"
                                               Margin="0,0,5,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="℃" />
                                    <Border Grid.Row="3"
                                            Margin="2,0,0,0"
                                            Background="#FFB3B3AA" />
                                    <TextBlock Grid.Row="3"
                                               Margin="3,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="{Binding Path=TrainInfoViewModel.Model.RemainElectricQuantity2}" />
                                    <TextBlock Grid.Row="3"
                                               Margin="0,0,3,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="%" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8*" />
                                </Grid.ColumnDefinitions>
                                <ProgressBar Margin="0,10,0,0"
                                             Maximum="100"
                                             Style="{StaticResource ProgressStyle}"
                                             Value="{Binding Path=TrainInfoViewModel.Model.RemainElectricQuantity3}" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="4*" />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="1"
                                           Margin="2,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding Path=TrainInfoViewModel.Model.Car4BatteryUnit.State,
                                                            Converter={StaticResource BatteryStateConverter}}" />
                                    <Border Grid.Row="2"
                                            Margin="2,0,2,1"
                                            Background="#FFB3B3AA" />
                                    <TextBlock Grid.Row="2"
                                               Margin="3,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="{Binding Path=TrainInfoViewModel.Model.PowerSourceTemperature3}" />
                                    <TextBlock Grid.Row="2"
                                               Margin="0,0,5,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="℃" />
                                    <Border Grid.Row="3"
                                            Margin="2,0,0,0"
                                            Background="#FFB3B3AA" />
                                    <TextBlock Grid.Row="3"
                                               Margin="3,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="{Binding Path=TrainInfoViewModel.Model.RemainElectricQuantity3}" />
                                    <TextBlock Grid.Row="3"
                                               Margin="0,0,3,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="22"
                                               Style="{StaticResource BlackTextStyle}"
                                               Text="%" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Margin="5,5,0,0" Background="#FFB3B3AA">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock FontSize="20"
                                           Style="{StaticResource BlackTextStyle}"
                                           Text="储能" />
                                <TextBlock FontSize="20"
                                           Style="{StaticResource BlackTextStyle}"
                                           Text="{StaticResource System}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="5" Margin="5,0,-5,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="9*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="1" Source="{Binding TrainInfoViewModel.Model.TurnRightLight, Converter={StaticResource TurnRightLightConverter}}" />
                    </Grid>
                </Grid>
                <Grid Grid.Row="3" Margin="0,3,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="21*" />
                        <ColumnDefinition Width="130*" />
                        <ColumnDefinition Width="14*" />
                        <ColumnDefinition Width="11*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1"
                            Background="Black"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="22*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Margin="0,12,0,12" Source="{Binding TrainInfoViewModel.Model.Car1TractionUnit.State, Converter={StaticResource TractionStateConverter}}" />
                                <Image Grid.Column="1"
                                       Margin="4,12,-4,12"
                                       Source="{Binding TrainInfoViewModel.Model.AssistPowerSource,
                                                        Converter={StaticResource AssistPowerSourceConverter}}" />
                            </Grid>
                            <Grid Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Margin="0,12,0,12" Source="{Binding TrainInfoViewModel.Model.HighSpeedBreaker, Converter={StaticResource HighSpeedBreakerConverter}}" />
                                <Image Grid.Column="1"
                                       Margin="4,12,-4,12"
                                       Source="{Binding TrainInfoViewModel.Model.Pantograph,
                                                        Converter={StaticResource PantographConverter}}" />
                            </Grid>
                            <Image Grid.Column="5"
                                   Margin="0,12,0,12"
                                   Source="{Binding TrainInfoViewModel.Model.Car3TractionUnit.State,
                                                    Converter={StaticResource TractionStateConverter}}" />
                            <Grid Grid.Column="7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Margin="0,12,0,12" Source="{Binding TrainInfoViewModel.Model.Car4TractionUnit.State, Converter={StaticResource TractionStateConverter}}" />
                                <Image Grid.Column="1"
                                       Margin="4,12,-4,12"
                                       Source="{Binding TrainInfoViewModel.Model.BatteryCharger,
                                                        Converter={StaticResource BatteryChargerConverter}}" />
                            </Grid>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2"
                            Margin="5,0,0,0"
                            Background="#FFB3B3AA">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock FontSize="20"
                                       Style="{StaticResource BlackTextStyle}"
                                       Text="主辅" />
                            <TextBlock FontSize="20"
                                       Style="{StaticResource BlackTextStyle}"
                                       Text="设备" />
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*" />
                        <ColumnDefinition Width="17*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1"
                              Background="Red"
                              Visibility="{Binding TrainInfoViewModel.Model.BogieApron,
                                                   Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Style="{StaticResource BlackTextStyle}"
                                       Text="转向架裙板" />
                        </Grid>
                    </Grid>
                    <Border Grid.Column="2"
                            Margin="0,10,0,0"
                            Background="Black" />
                    <Border Grid.Column="4"
                            Margin="0,10,0,0"
                            Background="Black" />
                    <Border Grid.Column="6"
                            Margin="0,10,0,0"
                            Background="Black" />
                </Grid>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="78*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Height="130">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource DirectionArrowLeftMulConverter}" ConverterParameter="{StaticResource DirectionArrowArrayImageResource}">
                                <Binding Path="TrainInfoViewModel.Model.DirectionArrow" />
                                <Binding Path="TrainInfoViewModel.Model.MC1Drivers" />
                                <Binding Path="TrainInfoViewModel.Model.MC2Drivers" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                    <Border Grid.Column="1"
                            BorderBrush="#FF00AAFF"
                            BorderThickness="2"
                            CornerRadius="30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*" />
                                <ColumnDefinition Width="17*" />
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="15*" />
                                <ColumnDefinition Width="17*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <Border Width="75"
                                    Background="{Binding TrainInfoViewModel.Model.MC1Drivers,
                                                         Converter={StaticResource DriversConverter}}"
                                    CornerRadius="30" />
                            <Border Grid.Column="1"
                                    Background="#FF00557F"
                                    BorderBrush="#FF00AAFF"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="15*" />
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="25*" />
                                    </Grid.RowDefinitions>
                                    <Image Width="25"
                                           Margin="2,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding TrainInfoViewModel.Model.Car1Door1.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <TextBlock Margin="40,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="1" />
                                    <TextBlock Margin="0,0,40,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="3" />
                                    <Image Width="25"
                                           Margin="0,0,5,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car1Door3.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="35"
                                           Margin="15,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{StaticResource FireAlarmBitmapImage}"
                                           Visibility="{Binding TrainInfoViewModel.Model.Fire1,
                                                                Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="45"
                                           Margin="0,0,25,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car1Location1BrakeUnit.State,
                                                            Converter={StaticResource BrakeStateConverter}}" />
                                    <TextBlock Grid.Row="4"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="Mc1" />
                                    <TextBlock Grid.Row="5"
                                               Margin="0,0,40,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               Foreground="White"
                                               Text="2" />
                                    <Image Grid.Row="5"
                                           Width="25"
                                           Margin="0,0,5,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car1Door2.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                </Grid>
                                <!--<StackPanel>
                                    <Border Width="30" Height="30" VerticalAlignment="top" HorizontalAlignment="Left" Margin="2,0,0,0"></Border>
                                    <TextBlock Text="1" FontSize="16" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBlock>
                                </StackPanel>-->
                            </Border>
                            <Border Grid.Column="2"
                                    Background="#FF00557F"
                                    BorderBrush="#FF00AAFF"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="15*" />
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="25*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,0,40,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="5" />
                                    <Image Width="25"
                                           Margin="0,0,5,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car2Door5.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="35"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{StaticResource FireAlarmBitmapImage}"
                                           Visibility="{Binding TrainInfoViewModel.Model.Fire2,
                                                                Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="45"
                                           Margin="0,0,20,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car2Location1BrakeUnit.State,
                                                            Converter={StaticResource BrakeStateConverter}}" />
                                    <TextBlock Grid.Row="4"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="T" />
                                    <Image Grid.Row="5"
                                           Width="25"
                                           Margin="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding TrainInfoViewModel.Model.Car2Door4.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <TextBlock Grid.Row="5"
                                               Margin="40,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="4" />
                                </Grid>
                            </Border>
                            <Border Grid.Column="3"
                                    Background="#FF00557F"
                                    BorderBrush="#FF00AAFF"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="15*" />
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="25*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,0,40,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="7" />
                                    <Image Width="25"
                                           Margin="0,0,5,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car3Door7.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="35"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{StaticResource FireAlarmBitmapImage}"
                                           Visibility="{Binding TrainInfoViewModel.Model.Fire3,
                                                                Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="45"
                                           Margin="0,0,20,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car3Location1BrakeUnit.State,
                                                            Converter={StaticResource BrakeStateConverter}}" />
                                    <TextBlock Grid.Row="4"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="M" />
                                    <Image Grid.Row="5"
                                           Width="25"
                                           Margin="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding TrainInfoViewModel.Model.Car3Door6.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <TextBlock Grid.Row="5"
                                               Margin="40,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="6" />
                                </Grid>
                            </Border>
                            <Border Grid.Column="4"
                                    Grid.ColumnSpan="2"
                                    Margin="105,0,0,0"
                                    Background="{Binding TrainInfoViewModel.Model.MC2Drivers,
                                                         Converter={StaticResource DriversConverter}}"
                                    CornerRadius="30" />
                            <Border Grid.Column="4"
                                    Background="#FF00557F"
                                    BorderBrush="#FF00AAFF"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="15*" />
                                        <RowDefinition Height="25*" />
                                        <RowDefinition Height="25*" />
                                    </Grid.RowDefinitions>
                                    <Image Width="25"
                                           Margin="2,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding TrainInfoViewModel.Model.Car4Door9.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <TextBlock Margin="40,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="9" />
                                    <TextBlock Margin="0,0,40,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="10" />
                                    <Image Width="25"
                                           Margin="0,0,5,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car4Door10.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="35"
                                           Margin="15,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{StaticResource FireAlarmBitmapImage}"
                                           Visibility="{Binding TrainInfoViewModel.Model.Fire4,
                                                                Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <Image Grid.Row="2"
                                           Width="45"
                                           Margin="0,0,25,0"
                                           HorizontalAlignment="Right"
                                           Source="{Binding TrainInfoViewModel.Model.Car4Location1BrakeUnit.State,
                                                            Converter={StaticResource BrakeStateConverter}}" />
                                    <TextBlock Grid.Row="4"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="Mc2" />
                                    <Image Grid.Row="5"
                                           Width="25"
                                           Margin="5,0,0,0"
                                           HorizontalAlignment="Left"
                                           Source="{Binding TrainInfoViewModel.Model.Car4Door8.State,
                                                            Converter={StaticResource DoorStateConverter}}" />
                                    <TextBlock Grid.Row="5"
                                               Margin="40,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Style="{StaticResource WhiteTextStyle}"
                                               Text="8" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <Image Grid.Column="2" Height="130">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource DirectionArrowRightMulConverter}" ConverterParameter="{StaticResource DirectionArrowArrayImageResource}">
                                <Binding Path="TrainInfoViewModel.Model.DirectionArrow" />
                                <Binding Path="TrainInfoViewModel.Model.MC1Drivers" />
                                <Binding Path="TrainInfoViewModel.Model.MC2Drivers" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Margin="0,0,15,0" Background="Black" />
                <TextBlock Margin="5,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="24"
                           Style="{StaticResource WhiteTextStyle}"
                           Text="参考值" />
                <TextBlock Margin="0,0,15,0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="24"
                           Style="{StaticResource WhiteTextStyle}">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource TractionOrBrakeMulConverter}">
                            <Binding Path="TrainInfoViewModel.Model.BrakePercent" />
                            <Binding Path="TrainInfoViewModel.Model.TractionPercent" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Background="Black" />
                    <TextBlock Grid.Column="1"
                               Margin="20,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Style="{StaticResource WhiteTextStyle}"
                               Text="{Binding TrainInfoViewModel.Model.DirectionArrow,
                                              Converter={StaticResource DirectionArrowStringConverter}}" />
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="7*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Background="Black" />
                    <Border Grid.Column="3" Background="Black" />
                    <Border Grid.Column="5" Background="Black" />
                    <Border Grid.Column="7" Background="Black" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30*" />
                            <RowDefinition Height="55*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="130*" />
                                <ColumnDefinition Width="90*" />
                                <ColumnDefinition Width="115*" />
                                <ColumnDefinition Width="40*" />
                                <ColumnDefinition Width="140*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="1" Background="Black" />
                            <TextBlock Grid.Column="1"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Style="{StaticResource WhiteTextStyle}"
                                       Text="{Binding TrainInfoViewModel.Model.RunModel,
                                                      Converter={StaticResource RunModelToStringConverter}}" />
                            <TextBlock Grid.Column="3"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Style="{StaticResource WhiteTextStyle}"
                                       Text="限速：" />
                            <Border Grid.Column="3"
                                    Width="40"
                                    HorizontalAlignment="Right"
                                    Background="Black" />
                            <TextBlock Grid.Column="3"
                                       Margin="0,0,7,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Style="{StaticResource WhiteTextStyle}"
                                       Text="{Binding TrainInfoViewModel.Model.SpeedLimit}" />
                            <Border Grid.Column="5" Background="Black" />
                            <TextBlock Grid.Column="5"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Style="{StaticResource WhiteTextStyle}"
                                       Text="{Binding TrainInfoViewModel.Model.WorkState,
                                                      Converter={StaticResource WorkStateToStringConverter}}" />
                        </Grid>
                    </Grid>
                    <Button Grid.Column="1"
                            Width="89"
                            Height="57"
                            HorizontalAlignment="Right"
                            Command="{Binding Controller.Navigator}"
                            Content="帮助"
                            Style="{StaticResource HardwareBtnStyle}">
                        <Button.CommandParameter>
                            <events:NavigatorEventArgs CurViewTitle="帮助" ViewName="{x:Static constance:ViewNames.HelpView}" />
                        </Button.CommandParameter>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="51*" />
                    <ColumnDefinition Width="23*" />
                    <ColumnDefinition Width="164*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="45*" />
                    <ColumnDefinition Width="11*" />
                    <ColumnDefinition Width="53*" />
                    <ColumnDefinition Width="341*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <Grid Width="52"
                      HorizontalAlignment="Right"
                      Column="0"
                      Visibility="{Binding EventInfoViewModel.Model.WaitConfirmEvent,
                                           Converter={StaticResource EventInfoVisibleConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Column="0">
                        <TextBlock Style="{StaticResource RunningViewTipInfoEnglishTextStyle}" Text="1" />
                    </Grid>
                    <Grid Column="1">
                        <TextBlock Style="{StaticResource RunningViewTipInfoEnglishTextStyle}" Text="/" />
                    </Grid>
                    <Grid Column="2">
                        <TextBlock Style="{StaticResource RunningViewTipInfoEnglishTextStyle}" Text="{Binding EventInfoViewModel.Model.UnConfirmEventCount}" />
                    </Grid>
                </Grid>
                <Grid Column="2">
                    <TextBlock Style="{StaticResource RunningViewTipInfoEnglishTextStyle}" Text="{Binding EventInfoViewModel.Model.WaitConfirmEvent.HappenTime, StringFormat={}{0:yyyy-MM-dd  HH:mm:ss}}" />
                </Grid>
                <Grid Column="4">
                    <TextBlock Style="{StaticResource RunningViewTipInfoChineseTextStyle}" Text="{Binding EventInfoViewModel.Model.WaitConfirmEvent.Level, Converter={StaticResource LevelToTextConverter}}" />
                </Grid>
                <Grid Column="6">
                    <TextBlock Style="{StaticResource RunningViewTipInfoChineseTextStyle}" Text="{Binding EventInfoViewModel.Model.WaitConfirmEvent.FaultCode}" />
                </Grid>
                <Grid Column="7">
                    <TextBlock Style="{StaticResource RunningViewTipInfoChineseTextStyle}" Text="{Binding EventInfoViewModel.Model.WaitConfirmEvent.Describe}" />
                </Grid>
            </Grid>
            <Button Grid.Column="1"
                    Width="89"
                    Height="45"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding EventInfoViewModel.Controller.EnterCommand}"
                    Content="确认"
                    Style="{StaticResource HardwareBtnStyle}"
                    Visibility="{Binding EventInfoViewModel.Model.WaitConfirmEvent,
                                         Converter={StaticResource EventInfoVisibleConverter}}" />
        </Grid>
    </Grid>
</UserControl>



