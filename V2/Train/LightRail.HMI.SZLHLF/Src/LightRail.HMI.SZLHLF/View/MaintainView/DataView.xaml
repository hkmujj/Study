<UserControl x:Class="LightRail.HMI.SZLHLF.View.MaintainView.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constance="clr-namespace:LightRail.HMI.SZLHLF.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:events="clr-namespace:LightRail.HMI.SZLHLF.Event"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LightRail.HMI.SZLHLF.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:SZLHLFViewModel}"
             d:DesignHeight="700"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="textStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="宋体" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
            <Style x:Key="textwhiteStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="宋体" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="#FF55FF7F" />
            <TextBlock Grid.Row="1"
                       FontSize="16"
                       Style="{StaticResource textStyle}"
                       Text="能耗信息" />
            <Border Grid.Row="2" Background="#FFB3B3AA" />
            <TextBlock Grid.Row="2"
                       Style="{StaticResource textStyle}"
                       Text="牵引能耗" />
            <Border Grid.Row="3" Background="#FFB3B3AA" />
            <TextBlock Grid.Row="3"
                       Style="{StaticResource textStyle}"
                       Text="再生能耗" />
            <Border Grid.Row="4" Background="#FFB3B3AA" />
            <TextBlock Grid.Row="4"
                       Style="{StaticResource textStyle}"
                       Text="辅助和空调能耗" />
            <Border Grid.Row="5"
                    Margin="0,0,0,2"
                    Background="#FFB3B3AA" />
            <TextBlock Grid.Row="5"
                       Margin="0,0,0,2"
                       Style="{StaticResource textStyle}"
                       Text="制动电阻能耗" />
            <Border Grid.Row="6" Background="#FF55FF7F" />
            <TextBlock Grid.Row="6"
                       FontSize="16"
                       Style="{StaticResource textStyle}"
                       Text="列车激活时间" />
            <Border Grid.Row="7"
                    Margin="0,3,0,0"
                    Background="#FF55FF7F" />
            <TextBlock Grid.Row="7"
                       Margin="0,3,0,0"
                       FontSize="16"
                       Style="{StaticResource textStyle}"
                       Text="里程信息" />
            <Border Grid.Row="8"
                    Margin="0,2,0,0"
                    Background="#FFB3B3AA" />
            <TextBlock Grid.Row="8"
                       Style="{StaticResource textStyle}"
                       Text="一天里程" />
            <Border Grid.Row="9" Background="Black" />
        </Grid>
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="Black" />
            <TextBlock Grid.Row="1"
                       Style="{StaticResource textwhiteStyle}"
                       Text="Text" />
            <Border Grid.Row="2" Background="Black" />
            <TextBlock Grid.Row="2"
                       Style="{StaticResource textwhiteStyle}"
                       Text="Text" />
            <Border Grid.Row="3" Background="Black" />
            <TextBlock Grid.Row="3"
                       Style="{StaticResource textwhiteStyle}"
                       Text="Text" />
            <Border Grid.Row="4"
                    Margin="0,0,0,2"
                    Background="Black" />
            <TextBlock Grid.Row="4"
                       Margin="0,0,0,2"
                       Style="{StaticResource textwhiteStyle}"
                       Text="Text" />
            <Border Grid.Row="5" Background="Black" />
            <TextBlock Grid.Row="5"
                       Style="{StaticResource textwhiteStyle}"
                       Text="Text" />
            <Border Grid.Row="7" Background="Black" />
            <TextBlock Grid.Row="7"
                       Style="{StaticResource textwhiteStyle}"
                       Text="Text" />
            <Border Grid.Row="8" Background="Black" />
        </Grid>
        <Grid Grid.Column="4" Margin="5,0,-5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="Black" />
            <TextBlock Grid.Row="1"
                       Style="{StaticResource textwhiteStyle}"
                       Text="kWh" />
            <Border Grid.Row="2" Background="Black" />
            <TextBlock Grid.Row="2"
                       Style="{StaticResource textwhiteStyle}"
                       Text="kWh" />
            <Border Grid.Row="3" Background="Black" />
            <TextBlock Grid.Row="3"
                       Style="{StaticResource textwhiteStyle}"
                       Text="kWh" />
            <Border Grid.Row="4"
                    Margin="0,0,0,2"
                    Background="Black" />
            <TextBlock Grid.Row="4"
                       Margin="0,0,0,2"
                       Style="{StaticResource textwhiteStyle}"
                       Text="kWh" />
            <Border Grid.Row="5" Background="Black" />
            <TextBlock Grid.Row="5"
                       Style="{StaticResource textwhiteStyle}"
                       Text="min" />
            <Border Grid.Row="7" Background="Black" />
            <TextBlock Grid.Row="7"
                       Style="{StaticResource textwhiteStyle}"
                       Text="kWh" />
            <Border Grid.Row="8" Background="Black" />
        </Grid>
        <Grid Grid.Column="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="1"
                    Command="{Binding Controller.Navigator}"
                    Content="返回"
                    Style="{StaticResource HardwareBtnStyle}">
                <Button.CommandParameter>
                    <events:NavigatorEventArgs CurViewTitle="维护" ViewName="{x:Static constance:ViewNames.MaintainView}" />
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>
