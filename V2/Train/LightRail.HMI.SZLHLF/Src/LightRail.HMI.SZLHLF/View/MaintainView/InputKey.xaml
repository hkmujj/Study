<UserControl x:Class="LightRail.HMI.SZLHLF.View.Common.InputKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constance="clr-namespace:LightRail.HMI.SZLHLF.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:event="clr-namespace:LightRail.HMI.SZLHLF.Event"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LightRail.HMI.SZLHLF.ViewModel"
             Background="Transparent"
             d:DataContext="{d:DesignInstance viewModel:SZLHLFViewModel}"
             d:DesignHeight="350"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="66*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#4CFFFFFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="132*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Border Margin="3,5" Background="White" />
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       Text="huaian_2" />
            <Button Grid.Column="3">
                <Button.Background>
                    <ImageBrush ImageSource="{StaticResource HelpWindowImage}" />
                </Button.Background>
            </Button>
            <Button Grid.Column="4">
                <Button.Background>
                    <ImageBrush ImageSource="{StaticResource CloseWindowImage}" />
                </Button.Background>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Background="#FF828282">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="7"
                        Content="7" />
                <Button Grid.Row="1"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="4"
                        Content="4" />
                <Button Grid.Row="2"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="1"
                        Content="1" />
                <Button Grid.Row="3"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="0"
                        Content="0" />
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="8"
                        Content="8" />
                <Button Grid.Row="1"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="5"
                        Content="5" />
                <Button Grid.Row="2"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="2"
                        Content="2" />
                <Button Grid.Row="3"
                        Margin="3"
                        Content="." />
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="9"
                        Content="9" />
                <Button Grid.Row="1"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="6"
                        Content="6" />
                <Button Grid.Row="2"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="3"
                        Content="3" />
                <Button Grid.Row="3"
                        Margin="3"
                        Content="-" />
            </Grid>
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCommand}"
                        CommandParameter="Del"
                        Content="Del" />
                <Button Grid.Row="1"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyEnterCommand}"
                        Content="Enter">
                    <Button.CommandParameter>
                        <event:NavigatorEventArgs CurViewTitle="维护" ViewName="{x:Static constance:ViewNames.MaintainView}" />
                    </Button.CommandParameter>
                </Button>
                <Button Grid.Row="3"
                        Margin="3"
                        Command="{Binding TrainInfoViewModel.InputKeyInfoModel.InputKeyController.InputKeyCancelCommand}"
                        Content="Cancel" />
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="#4CFFFFFF" />
    </Grid>
</UserControl>
