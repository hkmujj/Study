<UserControl x:Class="LightRail.HMI.SZLHLF.View.Shell.SiteSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constance="clr-namespace:LightRail.HMI.SZLHLF.Constant"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:events="clr-namespace:LightRail.HMI.SZLHLF.Event"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LightRail.HMI.SZLHLF.ViewModel"
             d:DataContext="{d:DesignInstance viewModel:SZLHLFViewModel}"
             d:DesignHeight="700"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="Buttonstyle" TargetType="Button">
                <Style.Setters>
                    <Setter Property="Foreground" Value="{StaticResource SZLHLFHarwareButtonWhiteBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource SZLHLFHarwareButtonWhiteBrush}" />
                    <Setter Property="Background" Value="{StaticResource SZLHLFHarwareButtonBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="FontFamily" Value="黑体" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5"
                                        SnapsToDevicePixels="true">
                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Focusable="False"
                                                      RecognizesAccessKey="True"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsPressed" Value="true">
                                        <Setter TargetName="border" Property="Background" Value="{StaticResource SZLHLFHarwareButtonPressedBackground}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style.Setters>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1"
                    Background="#FFB3B3AA"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="3" />
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22"
                       Style="{StaticResource BlackTextStyle}"
                       Text="起始站" />
            <Button Grid.Column="3"
                    Content="新澜"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="4"
                    Content="石头角"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="5"
                    Content="河东站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="6"
                    Content="大布头"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="7"
                    Content="横坑园站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="8"
                    Content="河西站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="9"
                    Content="锦鲤站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="10"
                    Content="世纪广场站"
                    Style="{StaticResource Buttonstyle}" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Content="大和站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="2"
                    Content="文澜站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="3"
                    Content="碧澜站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="4"
                    Content="梅陇北站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="5"
                    Content="清湖学校"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="6"
                    Content="清龙站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="7"
                    Content="清湖站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="8"
                    Content="大和站"
                    Style="{StaticResource Buttonstyle}" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="30*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Content="东庵站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="2"
                    Content="高新区西"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="3"
                    Content="高新区站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="4"
                    Content="高新区东"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="5"
                    Content="下围站"
                    Style="{StaticResource Buttonstyle}" />
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1"
                    Background="#FFB3B3AA"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="3" />
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22"
                       Style="{StaticResource BlackTextStyle}"
                       Text="终点站" />
            <Button Grid.Column="3"
                    Content="新澜"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="4"
                    Content="石头角"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="5"
                    Content="河东站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="6"
                    Content="大布头"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="7"
                    Content="横坑园站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="8"
                    Content="河西站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="9"
                    Content="锦鲤站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="10"
                    Content="世纪广场站"
                    Style="{StaticResource Buttonstyle}" />
        </Grid>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Content="大和站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="2"
                    Content="文澜站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="3"
                    Content="碧澜站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="4"
                    Content="梅陇北站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="5"
                    Content="清湖学校"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="6"
                    Content="清龙站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="7"
                    Content="清湖站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="8"
                    Content="大和站"
                    Style="{StaticResource Buttonstyle}" />
        </Grid>
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="30*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Content="东庵站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="2"
                    Content="高新区西"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="3"
                    Content="高新区站"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="4"
                    Content="高新区东"
                    Style="{StaticResource Buttonstyle}" />
            <Button Grid.Column="5"
                    Content="下围站"
                    Style="{StaticResource Buttonstyle}" />
        </Grid>
        <Grid Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="64*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Width="78"
                    Content="确定"
                    Style="{StaticResource HardwareBtnStyle}" />
            <Button Grid.Column="3"
                    Width="78"
                    Command="{Binding Controller.Navigator}"
                    Content="返回"
                    Style="{StaticResource HardwareBtnStyle}">
                <Button.CommandParameter>
                    <events:NavigatorEventArgs CurViewTitle="设置" ViewName="{x:Static constance:ViewNames.OperationView}" />
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>
