<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:commonControl="clr-namespace:Engine._6A.CommonControl"
                    mc:Ignorable="d">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Brushed/BrushResource.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="RecTextButtonDataStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Margin" Value="-1,0,2,2" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{StaticResource ButtonBrushUpTwo}" />
    </Style>


    <Style x:Key="BoxStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Margin" Value="2" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{StaticResource BoxBrushOne}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
    </Style>
    <Style x:Key="SleepBoxStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Margin" Value="2,1,2,1" />
        <Setter Property="Width" Value="170" />
        <Setter Property="HorizontalAlignment" Value="Left" />

        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{StaticResource BoxBrushOne}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
    </Style>
    <Style x:Key="ColumnBoxStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Margin" Value="5,1" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{StaticResource BoxBrushThree}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
    </Style>

    <Style x:Key="ColumnBoxStyleTwo" TargetType="commonControl:RecTextButton">
        <Setter Property="Margin" Value="5,1" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{StaticResource BoxBrushOne}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
    </Style>

    <Style x:Key="BrakePageStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Height" Value="40" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
        <Setter Property="FontSize" Value="18" />
    </Style>
    <Style x:Key="BrakePageValueStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Height" Value="40" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource GreenBrush}" />
        <Setter Property="FontSize" Value="26" />
    </Style>

    <Style x:Key="RunLineBoxStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="{StaticResource BoxBrushTwo}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="VideoViewButtonStyleOne" TargetType="{x:Type commonControl:RecTextButton}">
        <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalContentAlignment" Value="Right" />
        <Setter Property="VerticalContentAlignment" Value="Bottom" />
        <Setter Property="Padding" Value="0,0,5,2" />
    </Style>

    <Style x:Key="VideoViewButtonStyleTwo" TargetType="{x:Type commonControl:RecTextButton}">
        <Setter Property="Margin" Value="-1,0,0,0" />
        <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalContentAlignment" Value="Right" />
        <Setter Property="VerticalContentAlignment" Value="Bottom" />
        <Setter Property="Padding" Value="0,0,4,2" />
    </Style>

    <Style x:Key="VideoViewButtonStyleThree" TargetType="{x:Type commonControl:RecTextButton}">
        <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="{StaticResource VideoViewAutoBackBrush}" />
        <Setter Property="Foreground" Value="{StaticResource VideoViewAutoTextBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="FaultViewTextStyleOne" TargetType="commonControl:RecTextButton">
        <Setter Property="Background" Value="{StaticResource WhiteBrush}" />
        <Setter Property="Foreground" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="Margin" Value="1,1,0,0" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="FaultButtonStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Background" Value="{StaticResource ButtonUpThree}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
        <Setter Property="Margin" Value="1,2" />
    </Style>

    <Style x:Key="ColumnPageTextStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Background" Value="{StaticResource ButtonUpThree}" />
        <Setter Property="Margin" Value="1,2" />
        <Setter Property="Padding" Value="8,1" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="WorkModelButtonStyle" TargetType="commonControl:RecTextButton">
        <Setter Property="Background" Value="{StaticResource WorkModelButtonUp}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="5,3" />
        <Setter Property="Width" Value="130" />
        <Setter Property="FontSize" Value="18" />
    </Style>
</ResourceDictionary>