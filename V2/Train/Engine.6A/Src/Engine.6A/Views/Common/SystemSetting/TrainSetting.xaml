<UserControl x:Class="Engine._6A.Views.Common.SystemSetting.TrainSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:commonControl="clr-namespace:Engine._6A.CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="../../../Resouce/Engine6AResource.xaml" />
    </UserControl.Resources>

    <Grid x:Name="ButtonGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <commonControl:ImageTextButton Grid.Row="0"
                                    Grid.Column="0"
                                    Background="{StaticResource TrainCofigUp}"
                                    Content="机型配置"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource TrainConfigDown}" />
        <commonControl:ImageTextButton Grid.Row="0"
                                    Grid.Column="1"
                                    Background="{StaticResource SystemTimeUp}"
                                    Content="系统时间"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource SystemTimeDown}" />
        <commonControl:ImageTextButton Grid.Row="0"
                                    Grid.Column="2"
                                    Background="{StaticResource RunUp}"
                                    Content="走行测点"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource RunDown}" />
        <commonControl:ImageTextButton Grid.Row="0"
                                    Grid.Column="3"
                                    Background="{StaticResource FireUp}"
                                    Content="防火复位"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource FireDown}" />
        <commonControl:ImageTextButton Grid.Row="1"
                                    Grid.Column="0"
                                    Background="{StaticResource LimitUp}"
                                    Content="绝缘限值"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource LimitDown}" />
        <commonControl:ImageTextButton Grid.Row="1"
                                    Grid.Column="1"
                                    Background="{StaticResource BrakeUp}"
                                    Content="制动参数"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource BrakeDown}" />
        <commonControl:ImageTextButton Grid.Row="1"
                                    Grid.Column="2"
                                    Background="{StaticResource VideoUp}"
                                    Content="视频通道"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource VideoDown}" />
        <commonControl:ImageTextButton Grid.Row="1"
                                    Grid.Column="3"
                                    Background="{StaticResource FireMakeUp}"
                                    Content="防火探头"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource FireMakeDown}" />
        <commonControl:ImageTextButton Grid.Row="2"
                                    Grid.Column="0"
                                    Background="{StaticResource OutMoudleUp}"
                                    Content="外部插件"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource OutMoudleDown}" />
        <commonControl:ImageTextButton Grid.Row="2"
                                    Grid.Column="1"
                                    Background="{StaticResource AutoCheckUp}"
                                    Content="自检报告"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource AutoCheckDown}" />
        <commonControl:ImageTextButton Grid.Row="2"
                                    Grid.Column="2"
                                    Background="{StaticResource OtherUp}"
                                    Content="其他内容"
                                    PreviewMouseDown="OnMouseDown"
                                    PreviewMouseUp="OnMouseUp"
                                    Style="{StaticResource SystemSettingButtonStyle}"
                                    Tag="{StaticResource OtherDown}" />

    </Grid>
</UserControl>
