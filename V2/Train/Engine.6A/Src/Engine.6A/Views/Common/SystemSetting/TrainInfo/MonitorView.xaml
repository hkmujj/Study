<UserControl x:Class="Engine._6A.Views.Common.SystemSetting.TrainInfo.MonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:commonControl="clr-namespace:Engine._6A.CommonControl"
             xmlns:viewModel="clr-namespace:Engine._6A.Interface.ViewModel" d:DataContext="{d:DesignInstance viewModel:IEngine6AViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="../../../../Resouce/Engine6AResource.xaml" />
    </UserControl.Resources>
    <Grid DataContext="{Binding SystemSetting.TrainInfo.MonitorData}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="循环计数" />
        <commonControl:RadioRecTest Grid.Row="0"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding CirculationNum}"
                                 Style="{StaticResource PlateFormBoxStyle}" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="错误标识" />
        <commonControl:RadioRecTest Grid.Row="0"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding ErrorFlag}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="机车号" />
        <commonControl:RadioRecTest Grid.Row="1"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding TrainID}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="运用车次" />
        <commonControl:RadioRecTest Grid.Row="1"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding UseCarID}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="司机号" />
        <commonControl:RadioRecTest Grid.Row="2"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding DriverID}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="副司机号" />
        <commonControl:RadioRecTest Grid.Row="2"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding FitDriverID}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="速度" />
        <commonControl:RadioRecTest Grid.Row="3"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding Speed}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="3"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="公里标" />
        <commonControl:RadioRecTest Grid.Row="3"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding KilometerPost}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="工况" />
        <commonControl:RadioRecTest Grid.Row="4"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding WorkingCondition}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="4"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="辆数" />
        <commonControl:RadioRecTest Grid.Row="4"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding TotallNum}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="总重" />
        <commonControl:RadioRecTest Grid.Row="5"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding TotalWeight}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="5"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="记长" />
        <commonControl:RadioRecTest Grid.Row="5"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding RememberLong}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="客货本补" />
        <commonControl:RadioRecTest Grid.Row="6"
                                 Grid.Column="1"
                                 Width="130"
                                 Content="{Binding PassengerComplement}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
        <TextBlock Grid.Row="6"
                   Grid.Column="2"
                   Style="{StaticResource CommonTextStyleTwo}"
                   Text="装置状态" />
        <commonControl:RadioRecTest Grid.Row="6"
                                 Grid.Column="3"
                                 Width="130"
                                 Content="{Binding InstallationStatus}"
                                 Style="{StaticResource PlateFormBoxStyle}" />
    </Grid>
</UserControl>
